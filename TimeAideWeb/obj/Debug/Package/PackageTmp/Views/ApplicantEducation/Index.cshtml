@model IEnumerable<TimeAide.Web.Models.ApplicantEducation>
<h4 class="pull-left"> Education List</h4>
<div class="table-responsive">
    <table class="table table-striped custom-table table-nowrap mb-0">
        <thead>
            <tr>
                <th>
                    Degree
                </th>
                <th>
                    Institution
                </th>
                <th>
                    Title
                </th>
                <th>
                    Notes
                </th>
                <th>
                    Date Completed
                </th>
                <th>
                    Document Name
                </th>

                <th></th>

            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Degree.DegreeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InstitutionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @* @Html.DisplayFor(modelItem => item.DateCompleted)*@
                    @String.Format("{0:MM/dd/yyyy}", item.DateCompleted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocName)
                </td>

                <td width="10%">
                   
                        <div class="pull-right dropdown-action">
                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                            <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">
                                <a href="javascript:getApplicantEducationDetail(@item.Id);" class="dropdown-item"><i class="fa fa-eye m-r-5"></i> Details</a>
                                <a href="javascript:downloadApplicantEducationDoc(@item.Id)" class="dropdown-item"><i class="fa fa-download m-r-5"></i> Download Doc</a>
                                @if (!ViewBag.IsHired)
                                {
                                <a href="javascript:createEditApplicantEducation(@item.Id);" class="dropdown-item" data-id="@item.Id"><i class="fa fa-pencil m-r-5"></i> Edit</a>

                                <a href="javascript:getApplicantEducationDocView(@item.Id)" class="dropdown-item"><i class="fa fa-upload m-r-5"></i> Upload Doc</a>

                                <a href="javascript:getApplicantEducationDeleteData(@item.Id);" class="dropdown-item"><i class="fa fa-trash m-r-5"></i> Delete</a>
                                }
                            </div>
                        </div>
                   
                    </td>
            </tr>
        }

    </table>
</div>