@model TimeAide.Web.Models.ApplicantEducation
@{
    ViewBag.Label = "Education";
}
<div id="applicantEducationDelete_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            @Html.Partial("_DeleteViewHeader")           
            <div class="modal-body pt-0">
                <div class="alert" style="display:none;" id="employeeEducationDeleteAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                @Html.HiddenFor(model => model.Id, new { id = "ApplicantEducationDeleteId" })
              
                <div class="form-group row">
                    <div class="panel panel-default" style="width:100%;margin-left:10px">
                        <div class="panel-heading" style="padding-left:10px">Education Information</div>
                        <div class="panel-body">
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Degree:
                                </label>
                                <div class="col-md-3 text-muted mt-2">
                                    <span id=""> @Html.DisplayFor(model => model.Degree.DegreeName)</span>
                                </div>
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Date Completed:
                                </label>
                                <div class="col-md-3 text-muted mt-2">

                                    @if (Model != null)
                                    {
                                        @String.Format("{0:MM/dd/yyyy}", Model.DateCompleted);
                                    }
                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Institution:
                                </label>
                                <div class="col-md-3 text-muted mt-2">
                                    <span id=""> @Html.DisplayFor(model => model.InstitutionName)</span>
                                </div>
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Title:
                                </label>
                                <div class="col-md-3 text-muted mt-2">
                                    <span id="">   @Html.DisplayFor(model => model.Title)</span>
                                </div>

                            </div>
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Notes:
                                </label>
                                <div class="col-md-3 text-muted mt-2">
                                    <span id=""> @Html.DisplayFor(model => model.Note)</span>
                                </div>
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Document Name:
                                </label>
                                <div class="col-md-3 text-muted mt-2">
                                    <span id="">   @Html.DisplayFor(model => model.DocName)</span>
                                </div>
                            </div>

                        </div>
                    </div>         
                    
                </div>
                <div class="submit-section mt-1">
                    <button id="btnDeleteApplicantEducation" class="btn btn-danger submit-btn">Delete</button>
                    <button id="btnCancel" class="btn btn-danger submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#btnDeleteApplicantEducation").click(function () {
            var id = $("#ApplicantEducationDeleteId").val();
            deleteApplicantEducation(id);
        })

    } );
</script>

