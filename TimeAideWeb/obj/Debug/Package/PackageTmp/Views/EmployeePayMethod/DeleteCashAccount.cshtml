@model TimeAide.Web.Models.EmployeePayAccount
@{
    ViewBag.Label = "Delete Account";
}
<div id="employeeCashAccountDelete_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            @Html.Partial("_DeleteViewHeader")

            <div class="modal-body pt-0">

                <div class="alert" style="display:none;" id="employeeTrainingDeleteAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>

                @Html.HiddenFor(m => m.Id, new { @id= "EmployeePayAccountDeleteId" })
                <div class="form-group row">
                    <div class="panel panel-default" style="width:100%;margin-left:10px">
                        <div class="panel-heading" style="padding-left:10px">Account Information</div>
                        <div class="panel-body">
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Name:
                                </label>
                                <div class="col-md-3 text-muted mt-2">
                                    <span id="spanAccountName"> @Html.DisplayFor(model => model.Name)</span>
                                </div>
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Account Number:
                                </label>
                                <div class="col-md-3 text-muted mt-2">
                                    <span id="spanAccountNumber"> @Html.DisplayFor(model => model.AccountNumber) </span>

                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Account Type:
                                </label>
                                <div class="col-md-3 text-muted mt-2">
                                    <span id="spanAccountTypeName"> @Html.DisplayFor(model => model.BankAccountType.Name)</span>
                                </div>
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Bank:
                                </label>
                                <div class="col-md-3 text-muted mt-2">
                                    <span id="spanPayBankName"> @Html.DisplayFor(model => model.PayBank.Name) </span>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
                <div class="submit-section mt-1">
                    <button id="btnDeleteEmployeePayAccount" class="btn btn-danger submit-btn">Delete</button>
                    <button id="btnCancel" class="btn btn-danger submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#btnDeleteEmployeePayAccount").click(function () {

            var id = $("#EmployeePayAccountDeleteId").val();

            deleteEmployeeCashAccount(id);
        });
    });
</script>



