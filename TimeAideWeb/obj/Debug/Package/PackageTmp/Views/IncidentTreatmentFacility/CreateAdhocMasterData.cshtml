
@model TimeAide.Web.Models.IncidentTreatmentFacility

<div class="mt-2 p-1">
    <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
        <h4 style="display: inline;">Treatment Facility - Add</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <hr>
</div>
<div class="modal-body pt-0">

    <div class="alert" style="display:none;" id="createMasterDataPopUpAlert">
        <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
        <strong>Alert!</strong><span class="ml-1"></span>
    </div>
    <div class="row">

        <div class="col-md-12">
            <form id="masterDataCreateForm">
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">@Html.DisplayNameFor(model => model.TreatmentFacilityName): <span class="text-danger">*</span></label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.TreatmentFacilityName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">@Html.DisplayNameFor(model => model.Description): <span class="text-danger"></span></label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">@Html.DisplayNameFor(model => model.TreatmentFacilityAddress): <span class="text-danger"></span></label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.TreatmentFacilityAddress, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">@Html.LabelFor(model => model.State.StateName, "State", htmlAttributes: new { @class = "control-label" }): <span class="text-danger"></span></label>
                    <div class="col-md-8">
                        @Html.DropDownList("StateId", null, "Please select", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2 col-form-label">@Html.LabelFor(model => model.City.CityName, "City", htmlAttributes: new { @class = "control-label" }): <span class="text-danger"></span></label>
                    <div class="col-md-4">
                        @Html.DropDownList("CityId", null, "Please select", new { @class = "form-control" })
                    </div>
                    <label class="col-md-2 col-form-label">@Html.LabelFor(model => model.ZipCode, "Zip", htmlAttributes: new { @class = "control-label" }): <span class="text-danger"></span></label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </form>

        </div>


    </div>

    <div class="submit-section mt-1">

        <button id="btnSaveMasterDataPopUp" class="btn btn-primary submit-btn">Save</button>
        <button id="btnCancel" class="btn btn-primary  submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
    </div>

</div>
@*</div>
        </div>
    </div>*@

<script>
    $(document).ready(function () {
        $("#btnSaveMasterDataPopUp").click(function () {
            debugger;
            var formObject = $("#masterDataCreateForm").serialize();
             saveMasterDataPopUp(formObject);
        });
    });

</script>



