@model IEnumerable<TimeAide.Web.ViewModel.RoleTypeFormPrivilegeViewModel>

@{
    ViewBag.Title = "List - Role Type Form Privilege";
}

<h2>List of Role Type Form Privilege</h2>

<p>
    @Html.ActionLink("Add Role Type Form Privilege", "Create")
</p>
@foreach (var item in Model)
{
    <div class="form-group">
        @Html.LabelFor(modelItem => item.RoleTypeID, "RoleT ype", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("RoleTypeID", null, htmlAttributes: new { @class = "form-control" })
            @(Html.CustomDropDownList<TimeAide.Web.Models.Country>("CountryId", null, htmlAttributes: new { @class = "form-control" }))
            @Html.ValidationMessageFor(modelItem => item.RoleTypeID, "", new { @class = "text-danger" })
        </div>
    </div>
    break;
}
    <table class="table">
        <tr>
            <th>
                @Html.Label("Form")
            </th>
            <th>
                @Html.Label("Privilege")
            </th>
            <th>
                @Html.Label("Is Assigned")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Form.FormName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Privilege.PrivilegeName)
                </td>
                <td>
                    @Html.CheckBoxFor(modelItem => item.IsAssigned)
                </td>
            </tr>
        }

    </table>
