@using TimeAide.Data;
@model IEnumerable<TimeAide.Web.Models.AccrualRuleWorkedHoursTier>

<div class="table-responsive">
    <table class="table table-condensed table-sm  table-nowrap mb-0" id="tblWorkedHoursTier">
        <thead>
            <tr>
                <th></th>
                <th style="display:none;"></th>
                <th>TierNo</th>
                <th>Desc.</th>
                <th>Min. Hrs </th>
                <th>Max Hrs</th>
                <th>Accrual Hrs.</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {                
                <tr>
                    <td width="10%">
                        <div class="pull-right dropdown-action">
                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                            <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">

                                <a href="javascript:void();" onclick="editWorkHourTier(this);" class="dropdown-item" ><i class="fa fa-pencil m-r-5"></i> Edit</a>
                               
                                <a href="javascript:void();" onclick="deleteWorkHourTier(this);" class="dropdown-item"><i class="fa fa-trash m-r-5"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                    <td style="display:none;">@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TierNo)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.TierDescription)
                    </td>
                    <td>

                        @Html.DisplayFor(m => item.TierWorkedHoursMin)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.TierWorkedHoursMax)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.AccrualHours)
                    </td>

                </tr>

            }
        </tbody>
    </table>
    <table id="tblSampleRow" class="table table-condensed table-sm custom-table table-nowrap mb-0" style="display:none;">
        <tr>
            <td>
                <div class="pull-right dropdown-action">
                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                    <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">

                        <a href="javascript:void();" onclick="editWorkHourTier(this);" class="dropdown-item"><i class="fa fa-pencil m-r-5"></i> Edit</a>

                        <a href="javascript:void();" onclick="deleteWorkHourTier(this);" class="dropdown-item"><i class="fa fa-trash m-r-5"></i> Delete</a>
                    </div>
                </div>
            </td>
            <td style="display:none;"></td>
            <td align="center"></td>  
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </table>
</div>
<script>
    $(document).ready(function () {
        initWorkedHoursTierData();

    })
    function initWorkedHoursTierData() {
        debugger;
        $("#tblWorkedHoursTier tbody").find("tr").each(function () {
            var rowObject = new Object();
            rowObject.Id = $(this).find("td:eq(1)").text().trim();
            rowObject.TierNo = $(this).find("td:eq(2)").text().trim();
            rowObject.TierDescription = $(this).find("td:eq(3)").text().trim();
            rowObject.TierWorkedHoursMin = $(this).find("td:eq(4)").text().trim();
            rowObject.TierWorkedHoursMax = $(this).find("td:eq(5)").text().trim();
            rowObject.AccrualHours = $(this).find("td:eq(6)").text().trim();
            workedHoursTierListData.push(rowObject);
        });
        console.log(workedHoursTierListData);
    }
</script>