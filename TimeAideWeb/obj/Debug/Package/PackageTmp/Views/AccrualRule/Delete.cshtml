@model TimeAide.Web.Models.AccrualRule

@{
    ViewBag.Label = "Accrual Rule";
}
<div id="accrualRuleDelete_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            @Html.Partial("_DeleteViewHeader")
            
            <div class="modal-body pt-0">
                
                @Html.HiddenFor(model => model.Id, new { id = "AccrualRuleDeleteId" })
               
                <div class="form-group row">
                    <div class="panel panel-default" style="width:100%;margin-left:10px">
                        <div class="panel-heading" style="padding-left:10px">Accrual Rule Information</div>
                        <div class="panel-body">
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label">Name: <span class="text-danger"></span></label>
                                <div class="col-md-4 text-muted mt-2">
                                    @Html.DisplayFor(model => model.AccrualRuleName)
                                </div>
                                <label class="col-md-2 col-form-label">Description: <span class="text-danger"></span></label>
                                <div class="col-md-4 text-muted mt-2">
                                    @Html.DisplayFor(model => model.AccrualRuleDescription)
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label pr-0 ml-1">Beginning Of:</label>
                                <div class="col-md-4 text-muted mt-2">
                                 
                                    @Html.DisplayFor(m => m.BeginningOfYearDate)
                                </div>
                            </div>
                            
                        </div>
                    </div>
                                       
                </div>
                <div class="submit-section mt-1">

                    <button id="btnDeleteAccrualRule" class="btn btn-danger submit-btn">Delete</button>
                    <button id="btnCancel" class="btn btn-danger submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#btnDeleteAccrualRule").click(function () {
            var id = $("#AccrualRuleDeleteId").val();
            deleteAccrualRule(id);
        })

    } );
</script>

