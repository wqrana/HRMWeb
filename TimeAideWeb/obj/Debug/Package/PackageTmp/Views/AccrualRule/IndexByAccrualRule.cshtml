@using TimeAide.Data;
@model IEnumerable<TimeAide.Web.Models.AccrualRule>
<h4 class="pull-left"> Accrual Rule List</h4>
<div class="table-responsive">
    <table class="table table-striped custom-table table-nowrap mb-0" id="tblAccrualRule">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Reference Type </th>
                <th>Beginning Of</th>
                <th>Accrual Period</th>
                <th>Accrual Type</th>
                <th>Accumulation Type</th>
                <th>Multiplier</th>
                <th>Use Years Work</th>
                <th>@Html.DisplayNameFor(m=>m.IsAllCompanies)</th>
                <th></th>
            </tr>
        </thead>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href='javascript:getAccrualRuleDetail(@item.Id)' title="View Detail"> <span class="fa fa-eye"></span></a>
                </td>

                <td>
                    @Html.DisplayFor(m => item.AccrualRuleName)
                </td>

                <td>
                    @{
                        var referenceType = item.ReferenceTypeId == null ? "" : DataHelper.AccuralReferenceType[item.ReferenceTypeId ?? 0];
                    }
                    @Html.DisplayFor(m => referenceType)
                </td>

                <td>
                    @Html.DisplayFor(m => item.BeginningOfYearDate)
                </td>

                <td>
                    @{
                        var periodType = item.AccrualPeriodTypeId == null ? "" : DataHelper.AccuralPeriodType[item.AccrualPeriodTypeId ?? 0];
                    }
                    @Html.DisplayFor(m => periodType)
                </td>

                <td>
                    @Html.DisplayFor(m => item.AccrualType.AccrualTypeName)
                </td>

                <td>
                    @{
                        var accumulationType = item.AccumulationTypeId == null ? "" : DataHelper.AccuralAccumulationType[item.AccumulationTypeId ?? 0];
                    }
                    @Html.DisplayFor(m => accumulationType)
                </td>
                <td>
                    @Html.DisplayFor(m => item.AccumulationMultiplier)
                </td>
                <td align="center">
                    @Html.DisplayFor(m => item.UseYearsWorked)
                </td>
                <td align="center">
                    @{
                        item.IsAllCompanies = !item.CompanyId.HasValue;
                    }
                    @Html.DisplayFor(modelItem => item.IsAllCompanies)
                </td>
                <td width="10%">
                    <div class="pull-right dropdown-action">
                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                        <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">

                            @*<a href="javascript:createEditAccrualRule(@item.Id);" class="dropdown-item" data-id="@item.Id"><i class="fa fa-pencil m-r-5"></i> Edit</a>*@
                            <a href="javascript:getAccrualRuleDetail(@item.Id);" class="dropdown-item"><i class="fa fa-eye m-r-5"></i> Details</a>
                            <a href="javascript:getAccrualRuleDeleteData(@item.Id);" class="dropdown-item"><i class="fa fa-trash m-r-5"></i> Delete</a>
                        </div>
                    </div>
                </td>

            </tr>
        }

    </table>
</div>
