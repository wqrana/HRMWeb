@model TimeAide.Web.Models.EmployeeBenefitHistory

<div style="padding:0px">
    <div style="font-size: 90%;">
        <div class="form-group row">
            <div class="col-md-12 p-0">
                <div class="panel panel-default" style="margin-left:5px">
                    <div class="panel-heading" style="padding-left:0px">Benefit Information</div>
                    <div class="panel-body">
                        @Html.Hidden("EmployeeBenefitDetailId", Model == null ? 0 : Model.Id)
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" style="margin-left:0px">Benefit:</label>
                            <div class="col-md-2 text-muted mt-2">
                                @Html.DisplayFor(m => m.Benefit.BenefitName)
                            </div>
                            <label class="col-md-2 col-form-label" style="margin-left:0px">Start Date:</label>
                            <div class="col-md-2 text-muted mt-2">
                                @if (Model != null)
                                {
                                    @String.Format("{0:MM/dd/yyyy}", Model.StartDate);
                                }
                            </div>
                            <label class="col-md-2 col-form-label">End Date:</label>
                            <div class="col-md-2 text-muted mt-2">
                                @if (Model != null)
                                {
                                    @String.Format("{0:MM/dd/yyyy}", Model.ExpiryDate);
                                }

                            </div>
                           

                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Amount:</label>
                            <div class="col-md-2 text-muted  mt-2">
                                @Html.DisplayFor(m => m.Amount)
                            </div>
                            <label class="col-md-2 col-form-label" style="margin-left:0px">Frequency:</label>
                            <div class="col-md-2 text-muted mt-2">
                                @Html.DisplayFor(m => m.PayFrequency.PayFrequencyName)
                            </div>
                            <label class="col-md-2 col-form-label">Notes:</label>
                            <div class="col-md-2 text-muted mt-2">
                                @Html.DisplayFor(m => m.Notes)
                            </div>

                        </div>

                    </div>
                </div>

                <div class="panel panel-default" style="margin-left:5px">
                    <div class="panel-heading" style="padding-left:0px">Contribution</div>
                    <div class="panel-body">
                        <div class="form-group row">
                            <label class="col-md-1 col-form-label" style="margin-left:0px">Employee:</label>
                            <div class="col-md-2 text-muted mt-2">
                                @Html.DisplayFor(m => m.EmployeeContribution)
                            </div>
                            <label class="col-md-1 col-form-label">Company:</label>
                            <div class="col-md-2 text-muted mt-2">
                                @Html.DisplayFor(m => m.CompanyContribution)
                            </div>
                            <label class="col-md-1 col-form-label">Other:</label>
                            <div class="col-md-2 text-muted mt-2">
                                @Html.DisplayFor(m => m.OtherContribution)
                            </div>
                            <label class="col-md-1 col-form-label" style="margin-left:0px">Total:</label>
                            <div class="col-md-2 text-muted mt-2">
                                @Html.DisplayFor(m => m.TotalContribution)
                            </div>
                        </div>
                       
                    </div>
                </div>

            </div>
        </div>
    </div>
</div> 