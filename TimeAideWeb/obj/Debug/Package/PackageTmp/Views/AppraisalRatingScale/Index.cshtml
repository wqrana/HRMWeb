@model IEnumerable<TimeAide.Web.Models.AppraisalRatingScale>
@{
    ViewBag.Title = "Rating Scale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <div class="row align-items-center">
        <div class="col-sm-12">
            <h3 class="page-title">Rating Scale</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item">Master Data</li>
                <li class="breadcrumb-item active">Rating Scale</li>

            </ul>
            <div class="alert" style="display:none;" id="appraisalIndexPageAlert">
                <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                <strong>Alert!</strong><span></span>
            </div>
            <div class="col-auto float-right ml-auto">
                @*@Html.ActionLink("Create New User", "Create")*@
                @if ((bool)(ViewBag.AllowAdd ?? false))
                {
                   <a href="javascript:createEditAppraisalRatingScale(0);" class="btn add-btn">+ Add Rating Scale</a>
                }
            </div>
        </div>

    </div>
</div>

<div style="padding:0px">
    <div style="font-size: 90%;">
        <div class="form-group row mb-0">
            <div class="col-md-12 pb-0">
                <!-- <div class="panel panel-default" style="width:49%;margin-left:10px">-->
                <div class="panel panel-default" style="margin-left:5px">
                    <div class="panel-heading" style="padding-left:10px">
                        Rating Scale List
                        <div class="pull-right dropdown-action" style="height:20px;">

                            <a href="#" title="Action Menu" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                            <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">
                                <a href="javascript:createEditAppraisalRatingScale(0);" class="dropdown-item"><i class="fa fa-plus m-r-5"></i> Add</a>

                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        @*<div class="col-auto float-right ml-auto">
                <a href="" data-toggle="modal" data-target="#employeeCreateEdit_modal" class="btn add-btn"><i class="fa fa-plus"></i> Add New Scale</a>
            </div>*@
                        <div style="max-height:200px; overflow-y:auto">
                            <div class="table-responsive">
                                <table class="table table-striped custom-table table-nowrap mb-0" id="tblScaleList">
                                    <thead>
                                        <tr>
                                            <th>
                                                Show Detail
                                            </th>
                                            <th>
                                                Scale Name
                                            </th>
                                            <th>
                                                Max Value
                                            </th>
                                            <th>
                                                Description
                                            </th>
                                            <th>All Companies</th>
                                            <th></th>
                                        </tr>
                                        </thead>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td width="5%">
                                                    <a href="javascript:getAppraisalRatingScaleDetail(@item.Id);"><span class="fa fa-eye"></span></a>
                                                </td>
                                                <td>
                                                    <a href="javascript:getAppraisalRatingScaleDetail(@item.Id);">@Html.DisplayFor(modelItem => item.ScaleName)</a>
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ScaleMaxValue)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ScaleDescription)
                                                </td>
                                                <td>
                                                    @{
                                                        item.IsAllCompanies = !item.CompanyId.HasValue;
                                                    }
                                                    @Html.DisplayFor(modelItem => item.IsAllCompanies)
                                                </td>
                                                <td width="10%">
                                                    <div class="pull-right dropdown-action">
                                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                                                        <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">

                                                            <a href="javascript:createEditAppraisalRatingScale(@item.Id);" class="dropdown-item" data-id="@item.Id"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                                            <a href="javascript:getAppraisalRatingScaleDetail(@item.Id);" class="dropdown-item"><i class="fa fa-eye m-r-5"></i> Details</a>
                                                            <a href="javascript:getAppraisalRatingScaleDeleteData(@item.Id);" class="dropdown-item"><i class="fa fa-trash m-r-5"></i> Delete</a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }

</table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
        </div>
        <div class="form-group row">
            <div class="col-md-12 pb-0">
                <div class="panel panel-default" style="margin-left:5px">
                    <!--<div class="panel panel-default" style="width:49%;margin-left:10px">-->
                    <div class="panel-heading" style="padding-left:10px">
                        Rating Scale Detail
                        <div class="pull-right dropdown-action" style="height:20px;">

                            <a href="#" title="Action Menu" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                            <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">
                                <a href="javascript:createEditAppraisalRatingScaleDetail(0);" class="dropdown-item"><i class="fa fa-plus m-r-5"></i> Add</a>

                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        @*<div class="col-auto float-right ml-auto">
                        <a href="" data-toggle="modal" data-target="#employeeCreateEdit_modal" class="btn add-btn"><i class="fa fa-plus"></i> Add Scale New Rating</a>
                    </div>*@
                        <div id="divRatingDetail">

                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
 </div>
<div id="divCreateEditDelPopUp">

</div>

<script>
    $(document).ready(function () {
        $('#tblScaleList').dataTable({
            "searching": true
        });
        getAppraisalRatingScaleDetail(null);    
});
 function getAppraisalRatingScaleDetail(scaleId) {
    debugger;
        $.ajax({
            type: "get",
            url: '/AppraisalRatingScaleDetail/IndexByRatingScale',
            data: { "id": scaleId },

            success: function (data) {
                // debugger;
                //console.log(data);
                $("#divRatingDetail").html(data);
               
            },
            error: function () {
                alert(data.ErrorMessage);
            }
        });
    }
    function createEditAppraisalRatingScale(scaleId) {
        debugger;
        var ActionMethod = scaleId == 0 ? "Create" : "Edit";
        $.ajax({
            type: "get",
            url: '/AppraisalRatingScale/' + ActionMethod,
            data: { "id": scaleId },

            success: function (data) {
                // debugger;
                //console.log(data);
                $("#divCreateEditDelPopUp").html(data);
                $("#AppraisalRatingScaleCreateEdit_modal").modal("show");


            },
            error: function () {
                 alert(data.ErrorMessage);
            }
        });

    }
    function saveAppraisalRatingScaleData() {
        debugger;
        var alertID = "#appraisalRatingScaleCreateEditAlert";
        var isRequiredValidated = 0;
        var isValidated = true;
        var message = "";
        var dataObj = new Object();
        dataObj.id = $('#AppraisalRatingScaleId').val();
        dataObj.ScaleName = $('#ScaleName').val();
        dataObj.ScaleMaxValue = $('#ScaleMaxValue').val();
        dataObj.ScaleDescription = $('#ScaleDescription').val();
        dataObj.IsAllCompanies = $('#IsAllCompaniesAE').is(":checked");
       
        if (dataObj != null) {
            isRequiredValidated += dataObj.ScaleName.trim().length > 0 ? 1 : 0;
            isRequiredValidated += dataObj.ScaleMaxValue.trim().length > 0 ? 1 : 0;
            if (isRequiredValidated != 2) {
                isValidated = false;
                message = " Missing Required field(s)";
            }
        }
        if (!isValidated) showAlertAutoHide(alertID, 'Error', message);

        if (isValidated) {
            // ajax call for saving data
            $.ajax({
                type: "POST",
                url: "/AppraisalRatingScale/CreateEdit",
                data: JSON.stringify(dataObj),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    //debugger;
                    if (data.status == "Success") {
                        $("#AppraisalRatingScaleCreateEdit_modal").modal("hide");
                        showAlertAutoHide("#appraisalIndexPageAlert", data.status, data.message);
                        location.reload(true);
                    }
                    else {
                        showAlertAutoHide(alertID, data.status, data.message);
                    }
                }
                ,
                error: function (request, status, error) {
                    alert('Error in deleting parent alert data');
                    return false;
                }
            });
        }
    }
    function getAppraisalRatingScaleDeleteData(scaleId) {
        if (scaleId != '') {

            $.ajax({
                type: "get",
                url: '/AppraisalRatingScale/Delete',
                data: { "id": scaleId },

                success: function (data) {
                    //debugger;
                    $("#divCreateEditDelPopUp").html(data);
                    $("#appraisalRatingScaleDelete_modal").modal("show");

                },
                error: function () {
                    // displayWarningMessage(data.ErrorMessage);
                }
            });
        }
    }
    function deleteAppraisalRatingScale(scaleId) {
        debugger;
        alertID = "#appraisalRatingScaleDeleteAlert"
        if (scaleId != '') {
            $.ajax({
                type: "Post",
                url: "/AppraisalRatingScale/ConfirmDelete",
                data: { "id": scaleId },
                dataType: "json",
                success: function (data) {
                    //debugger;
                    if (data.status == "Success") {
                        $("#appraisalRatingScaleDelete_modal").modal("hide");
                        showAlertAutoHide("#appraisalIndexPageAlert", data.status, data.message);
                        location.reload(true);
                    }
                    else {
                        showAlertAutoHide(alertID, data.status, data.message);
                    }
                }
                ,
                error: function (request, status, error) {
                    showAlertAutoHide(alertID, "Error", error);
                    return false;
                }
            });
        }
    }
</script>