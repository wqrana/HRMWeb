@model TimeAide.Web.Models.UserInformationRole
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="padding:10px">
        @Html.Partial("_CreatePageTitleView")

        <div class="form-group row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.RoleId, "Role", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-8">
                @(Html.CustomDropDownList<TimeAide.Web.Models.Role>("RoleId", null, htmlAttributes: new { @class = "form-control" }))
                @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.UserInformationId, "User", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-8">
                @(Html.CustomDropDownList<TimeAide.Web.Models.UserInformation>("UserInformationId", null, htmlAttributes: new { @class = "form-control" }))
                @Html.ValidationMessageFor(model => model.UserInformationId, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.Partial("_CreatePageFooterView")
    </div>
}

