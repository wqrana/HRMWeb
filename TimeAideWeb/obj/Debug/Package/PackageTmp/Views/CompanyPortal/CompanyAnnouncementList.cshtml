@model IEnumerable<TimeAide.Web.ViewModel.CompanyAnnouncementViewModel>
@using TimeAide.Services.Helpers;
<div class="table-responsive">
    <table class="table table-nowrap custom-table mb-0">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th>Title</th>
                @if (ViewBag.IsPortalAdmin)
                {
                    <th>Status</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td width="10%">
                    <div class="dropdown-action">
                        <a href="#" title="Action Menu" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                        <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">
                            <a href="javascript:viewCompanyAnnouncement(@item.CompanyAnnouncementId)" class="dropdown-item"><i class="fa fa-eye m-r-5"></i>View</a>
                            @if (ViewBag.IsPortalAdmin || SecurityHelper.IsSuperAdmin)
                            {
                                <a href="javascript:createEditCompanyAnnouncement(@item.CompanyAnnouncementId)" class="dropdown-item"><i class="fa fa-pencil m-r-5"></i>Edit</a>
                                <a href="javascript:getCompanyAnnouncementDeleteData(@item.CompanyAnnouncementId)" class="dropdown-item"><i class="fa fa-trash m-r-5"></i>Delete</a>
                            }
                        </div>
                    </div>
                </td>
                <td width="5%"><a title="View Announcement Detail" class="fa fa-eye" href="javascript:viewCompanyAnnouncement(@item.CompanyAnnouncementId)"> @*@Html.DisplayFor(m => item.AnnouncementName)*@</a></td>
                @*<td><div style="max-height:75px; overflow-y:auto">@Html.Raw(item.AnnouncementMessage)</div></td>*@
                <td>
                    @Html.DisplayFor(m=>item.AnnouncementName)
                </td>
                @if (ViewBag.IsPortalAdmin)
                {
                    var bgClass = "bg-inverse-danger";
                    if (item.AnnouncementStatus == "Active") //active
                    {
                        bgClass = "bg-inverse-success";
                    }
                    else if (item.AnnouncementStatus == "Pending")//Pending
                    {
                        bgClass = "bg-inverse-warning";
                    }

                    <td> <span class="badge @bgClass">@item.AnnouncementStatus</span></td>
                }
            </tr>

            }
        </tbody>
    </table>
</div>

