@using TimeAide.Services.Helpers;
@model IEnumerable<TimeAide.Web.Models.CompanyConfigurableLink>
<div class="table-responsive">
    <table class="table table-nowrap custom-table mb-0">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>URL</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td width="10%">
                    <div class="dropdown-action">
                        <a href="#" title="Action Menu" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                        <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">

                            @if (ViewBag.IsPortalAdmin || SecurityHelper.IsSuperAdmin)
                            {
                                <a href="javascript:addEditCompanyConfigurableLink(@item.Id)" class="dropdown-item"><i class="fa fa-pencil m-r-5"></i>Edit</a>
                                <a href="javascript:getCompanyConfigurableLinkDeleteData(@item.Id)" class="dropdown-item"><i class="fa fa-trash m-r-5"></i>Delete</a>
                            }
                        </div>
                    </div>
                </td>
                @*<td>@Html.DisplayFor(m => item.LinkName)</td>*@
                <td><a title="Open Link" target="_blank" rel="noopener noreferrer" href="@item.LinkURL">@Html.DisplayFor(m => item.LinkName)</a></td>
                <td><a title="Open Link" target="_blank" rel="noopener noreferrer" href="@item.LinkURL">@Html.DisplayFor(m => item.LinkURL)</a></td>


            </tr>

            }
        </tbody>
    </table>
</div>

