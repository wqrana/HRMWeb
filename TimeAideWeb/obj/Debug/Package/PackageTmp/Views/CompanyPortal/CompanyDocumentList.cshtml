@model IEnumerable<TimeAide.Web.Models.CompanyDocument>
@using TimeAide.Services.Helpers;
<div class="table-responsive">
    <table class="table table-nowrap custom-table mb-0">
        <thead>
            <tr>
                <th></th>
                <th>
                     Name
                </th>
                @*<th>
                    Created By
                </th>*@

                <th>Created On</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="10%">
                        <div class="dropdown-action">
                            <a href="#" title="Action Menu" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                            <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">
                                <a href="javascript:downloadCompanyDocument(@item.Id)" class="dropdown-item"><i class="fa fa-download m-r-5"></i>Download</a>

                                @if (ViewBag.IsPortalAdmin || SecurityHelper.IsSuperAdmin)
                                {
                                    <a href="javascript:getCompanyDocumentDeleteData(@item.Id)" class="dropdown-item"><i class="fa fa-trash m-r-5"></i>Delete</a>
                                }
                            </div>
                        </div>
                    </td>
                    <td>@item.DocumentName</td>
                   @* <td>@item.DocumentUser.ShortFullName</td>*@
                    <td>@item.CreatedDate</td>
                </tr>

            }
        </tbody>
    </table>
</div>


