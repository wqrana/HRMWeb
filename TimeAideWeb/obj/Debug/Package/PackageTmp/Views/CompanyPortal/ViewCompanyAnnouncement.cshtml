@model TimeAide.Web.ViewModel.CompanyAnnouncementViewModel
<style>
    .borderOutline{
        border:1px solid black; 
    }
</style>
<div id="View_CmpAnnouncement_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="mt-2 p-2 mt-0">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;">View - Company Announcement</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body pt-0">

                <div class="row">
                    <div class="col-md-12">                      
                        <div class="form-group row">                           
                            <div class="col-md-12">
                                @Html.DisplayFor(m => m.AnnouncementName)
                            </div>

                        </div>
                        <div class="form-group row">                          
                            <div class="col-md-12 p-2 borderOutline" style="height:600px; overflow-y:auto">
                               @Html.Raw(Model.AnnouncementMessage)
                            </div>
                        </div>                       
                    </div>
                </div>
            </div>

            <div class="submit-section pb-2 mt-0">               
                <button id="btnCancel" class="btn btn-primary  submit-btn" data-dismiss="modal" aria-label="Close">Close</button>
            </div>

        </div>
    </div>
</div>

