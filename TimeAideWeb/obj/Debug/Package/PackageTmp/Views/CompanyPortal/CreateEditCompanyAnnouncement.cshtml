
@model TimeAide.Web.ViewModel.CompanyAnnouncementViewModel


<div id="CreateEdit_CmpAnnouncement_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">

            <div class="mt-2 p-2 mt-0">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;">Add/Edit - Company Announcement</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body pt-0">


                <div class="row">

                    <div class="col-md-12">
                        @Html.HiddenFor(m => m.CompanyAnnouncementId)
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Title:<span class="text-danger">*</span></label>
                            <div class="col-md-6">
                                @Html.EditorFor(m => m.AnnouncementName, new { htmlAttributes = new { @class = "form-control" } })
                                <small id="AnnouncementNameValid" class="form-text text-danger" style="display:none;"></small>
                            </div>
                            <label class="col-md-3 col-form-label">All-Companies:<span class="text-danger"></span></label>
                            <div class="col-md-1 mt-2">
                                @Html.EditorFor(m => m.IsAllCompanies, new { htmlAttributes = new { @class = "",id= "IsAllCompaniesCA" } })
                               
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Message:<span class="text-danger">*</span></label>
                            <div class="col-md-10">
                                @Html.TextAreaFor(m => m.AnnouncementMessage, new {
                                rows = "30", style = "resize:none;width:450px;", @class = "form-control textarea-editor"
                                })
                            </div>

                        </div>
                        <div class="form-group row">

                            <label class="col-md-2 col-form-label">Start Date:<span class="text-danger">*</span></label>

                            <div class="col-md-4">
                                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <label class="col-md-2 col-form-label pl-0 pr-0">Expiration Date:<span class="text-danger">*</span></label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.ExpirationDate, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                        </div>
                    </div>
                </div>


            </div>

            <div class="submit-section pb-2 mt-0">

                <button id="btnSaveCompanyAnnouncement" class="btn btn-primary submit-btn">Save</button>
                <button id="btnCancel" class="btn btn-primary  submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
            </div>

        </div>
    </div>
</div>
