
@model TimeAide.Web.Models.JobPostingDetail

<div id="JobPostingDetail_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <div class="mt-2 p-1">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;">Job Posting - Detail</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body pt-0">
                <div class="row">
                    <div class="col-md-12">
                        <div class="job-info job-widget mb-0 p-2">
                            <h3 class="job-title">@Html.DisplayFor(m => m.Position.PositionName)</h3>
                            <span class="job-dept" style="margin-bottom:10px;">@Html.DisplayFor(m => m.Department.DepartmentName)</span>
                            <ul class="job-post-det">
                                <li><i class=""></i> Location: <span class="text-primary">@Html.DisplayFor(m => m.SelectedLocationNames)</span></li>
                                <li><i class=""></i> Employment Type: <span class="text-primary">@Html.DisplayFor(m => m.EmploymentType.EmploymentTypeName)</span></li>
                                <li><i class=""></i> Experience: <span class="text-primary">@Html.DisplayFor(m => m.Experience)</span></li>
                                <li><i class=""></i> Salary Range: <span class="text-primary">@Html.DisplayFor(m => m.SalaryFrom)-@Html.DisplayFor(m => m.SalaryTo)</span></li>
                                <li><i class=""></i> Post Date: <span class="text-primary">@Html.DisplayFor(m =>m.JobPostingStartDate)</span></li>
                                <li><i class=""></i> Last Date: <span class="text-primary">@Html.DisplayFor(m => m.JobPostingExpiringDate)</span></li>
                                <li><i class=""></i> No Of Vacancies: <span class="text-primary">@Html.DisplayFor(m => m.NoOfVacancies)</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="job-content job-widget p-2">
                            <div class="job-desc-title"><h4>Job Description</h4></div>
                            <div class="job-description">
                               @Html.Raw(Model.JobDescription)
                            </div>                            
                        </div>
                    </div>
                </div>

                <div class="submit-section mt-1">
                    <button id="btnCancel" class="btn btn-primary  submit-btn" data-dismiss="modal" aria-label="Close">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>





