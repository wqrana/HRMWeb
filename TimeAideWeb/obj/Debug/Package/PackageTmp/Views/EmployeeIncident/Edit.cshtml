@model TimeAide.Web.Models.EmployeeIncident

<div id="EmployeeIncidentCreateEdit_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="mt-2 p-1">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;">Employee Incident Case - Edit</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body pt-0">
                <div class="alert" style="display:none;" id="employeeIncidentCreateEditAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.Hidden("EmployeeIncidentId", Model.Id)
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Incident Type: <span class="text-danger">*</span></label>
                            <div class="col-md-3">
                                @Html.DropDownList("IncidentTypeId", null, "Please Select", new { @class = "form-control" })
                                @*<div class="input-group">
                                    @Html.DropDownList("IncidentTypeId", null, "Please Select", new { @class = "form-control" })
                                    <div class="input-group-append">
                                        <button class="btn btn-secondary btn-master-data" type="button">+</button>
                                    </div>
                                </div>*@

                            </div>
                            <label class="col-md-2 col-form-label">OSHA Recordable:</label>
                            <div class="col-md-1 mt-2">
                                @Html.CheckBoxFor(model => model.IsOSHARecordable, new { id = "IsOSHARecordableAE" })
                            </div>
                            <label class="col-md-2 col-form-label">Case Classification:</label>
                            <div class="col-md-2">
                                @Html.DropDownList("OSHACaseClassificationId", null, "Please Select", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label"> Completion Date:<span class="text-danger"></span></label>
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.CompletedDate, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                            <label class="col-md-2 col-form-label">Completed By:<span class="text-danger"></span></label>
                            <div class="col-md-5">
                                @Html.DropDownList("CompletedById", null, "Please Select", new { @class = "form-control" })
                            </div>

                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Establishment:<span class="text-danger"></span></label>
                            <div class="col-md-3">
                                @Html.DropDownList("LocationId", null, "Please select", new { @class = "form-control" })
                            </div>
                            <label class="col-md-2 col-form-label">Incident Area:<span class="text-danger"></span></label>
                            <div class="col-md-5">
                                <div class="input-group">
                                    @Html.DropDownList("IncidentAreaId", null, "Please select", new { @class = "form-control" })
                                    <div class="input-group-append">
                                        <button class="btn btn-secondary btn-master-data" type="button">+</button>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label"> Incident Date:<span class="text-danger"></span></label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.IncidentDate, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <label class="col-md-2 col-form-label"> Incident Time:<span class="text-danger"></span></label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.IncidentTime, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <label class="col-md-2 col-form-label"> Shift Start Time:<span class="text-danger"></span></label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.EmployeeBeganWorkTime, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label"> Employee doing before incident:<span class="text-danger"></span></label>
                            <div class="col-md-9">
                                @Html.TextAreaFor(model => model.EmployeeDoingBeforeIncident, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label"> How incident Occured:<span class="text-danger"></span></label>
                            <div class="col-md-9">
                                @Html.TextAreaFor(model => model.HowIncidentOccured, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="submit-section mt-1">
                    <button id="btnSaveEmployeeIncident" class="btn btn-primary submit-btn">Save</button>
                    <button id="btnCancel" class="btn btn-primary  submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        //$('*[id*=Date]').each(function () {
        //    $(this).datetimepicker({ format: 'MM/DD/YYYY' });

        //});
        $('#CompletedDate').datetimepicker({ format: 'MM/DD/YYYY' });
        $('#IncidentDate').datetimepicker({ format: 'MM/DD/YYYY' });
        $('*[id*=Time]').each(function () {
            $(this).datetimepicker({
                format: 'LT'
            });

        });

        $("#btnSaveEmployeeIncident").click(function () {
            saveEmployeeIncidentData();
        });

        //popup master data
        $(".btn-master-data").click(function () {
            debugger;
            var masterDataDdl = $(this).parents("div.input-group")
                .find("select")
                .first();
            openMasterDataPopUp(masterDataDdl);
        }); 

    });

</script>


