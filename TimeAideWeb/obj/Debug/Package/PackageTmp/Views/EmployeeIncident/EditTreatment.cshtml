@model TimeAide.Web.Models.EmployeeIncident

<div id="EmployeeIncidentTreatmentEdit_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="mt-2 p-1">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;"> Incident Treatment Detail - Add/Edit</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body pt-0">
                <div class="alert" style="display:none;" id="employeeIncidentTreatmentEditAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.Hidden("EmployeeIncidentId", Model.Id)
                        <div class="form-group row">
                            <label class="col-md-5 col-form-label">Physician/Health Care Professional:</label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.PhysicianName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-5 col-form-label">Treatment Facility:</label>
                            <div class="col-md-6">
                                <div class="input-group">
                                    @Html.DropDownList("IncidentTreatmentFacilityId", null, "Please select", new { @class = "form-control" })
                                    <div class="input-group-append">
                                        <button class="btn btn-secondary btn-master-data" type="button">+</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-5 col-form-label">Treated in Emergency Room:</label>
                            <div class="col-md-2 mt-2">
                                @Html.CheckBoxFor(model => model.IsTreatedInEmergencyRoom, new { @id = "IsTreatedInEmergencyRoomAE" })
                            </div>

                        </div>
                        <div class="form-group row">
                            <label class="col-md-5 col-form-label">Hospitalized Overnight:</label>
                          
                            <div class="col-md-2 mt-2">
                                @Html.CheckBoxFor(model => model.IsHospitalizedOvernight, new { @id = "IsHospitalizedOvernightAE" })
                            </div>

                        </div>
                       
                        <div class="form-group row">
                            <label class="col-md-5 col-form-label"> Hospitalized Days:<span class="text-danger"></span></label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.HospitalizedDays, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        
                    </div>
                </div>
                <div class="submit-section mt-1">
                    <button id="btnSaveEmployeeIncidentTreatment" class="btn btn-primary submit-btn">Save</button>
                    <button id="btnCancel" class="btn btn-primary  submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

       

        $("#btnSaveEmployeeIncidentTreatment").click(function () {
            saveEmployeeIncidentTreatmentData();
        });
        //popup master data
        $(".btn-master-data").click(function () {
            debugger;
            var masterDataDdl = $(this).parents("div.input-group")
                .find("select")
                .first();
            openMasterDataPopUp(masterDataDdl);
        });
    });

</script>


