                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4" style="margin-left:10px">
                            @Html.DisplayNameFor(model => model.IssueDate)
                        </label>
                        <div class="col-md-6" style="width:100% !important">
                            @Html.DisplayFor(model => model.EmployeeCredential.IssueDate)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4" style="margin-left:10px">
                            @Html.DisplayNameFor(model => model.ExpirationDate)
                        </label>
                        <div class="col-md-6" style="width:100% !important">
                            @Html.DisplayFor(model => model.EmployeeCredential.ExpirationDate)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4" style="margin-left:10px">
                            @Html.DisplayNameFor(model => model.EmployeeCredentialName)
                        </label>
                        <div class="col-md-6" style="width:100% !important">
                            @Html.DisplayFor(model => model.EmployeeCredential.EmployeeCredentialName)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4" style="margin-left:10px">
                            @Html.DisplayNameFor(model => model.EmployeeCredentialDescription)
                        </label>
                        <div class="col-md-6" style="width:100% !important">
                            @Html.DisplayFor(model => model.EmployeeCredential.EmployeeCredentialDescription)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4" style="margin-left:10px">
                            @Html.DisplayNameFor(model => model.Note)
                        </label>
                        <div class="col-md-6" style="width:100% !important">
                            @Html.DisplayFor(model => model.EmployeeCredential.Note)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4" style="margin-left:10px">
