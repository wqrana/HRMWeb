        </div>
        <div class="panel panel-default" style="width:49%;margin-left:10px">
            <div class="panel-heading" style="padding-left:10px">New Record</div>
            <div class="panel-body">
                <div class="form-group row">
                    <label class="col-md-4" style="margin-left:10px">
                        @Html.DisplayNameFor(model => model.Credential.CredentialName)
                    </label>
                    <div class="col-md-6" style="width:100% !important">
                        @Html.DisplayFor(model => model.Credential.CredentialName)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4" style="margin-left:10px">
                        @Html.DisplayNameFor(model => model.IssueDate)
                    </label>
                    <div class="col-md-6" style="width:100% !important">
                        @Html.DisplayFor(model => model.IssueDate)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4" style="margin-left:10px">
                        @Html.DisplayNameFor(model => model.ExpirationDate)
                    </label>
                    <div class="col-md-6" style="width:100% !important">
                        @Html.DisplayFor(model => model.ExpirationDate)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4" style="margin-left:10px">
                        @Html.DisplayNameFor(model => model.EmployeeCredentialName)
                    </label>
                    <div class="col-md-6" style="width:100% !important">
                        @Html.DisplayFor(model => model.EmployeeCredentialName)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4" style="margin-left:10px">
                        @Html.DisplayNameFor(model => model.EmployeeCredentialDescription)
                    </label>
                    <div class="col-md-6" style="width:100% !important">
                        @Html.DisplayFor(model => model.EmployeeCredentialDescription)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4" style="margin-left:10px">
                        @Html.DisplayNameFor(model => model.Note)
                    </label>
                    <div class="col-md-6" style="width:100% !important">
                        @Html.DisplayFor(model => model.Note)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4" style="margin-left:10px">
                        New File
                    </label>
                    <div class="col-md-6">
                        <a href="javascript:downloadNewDocument(@Model.Id)"><i class="fa fa-download m-r-5"></i> Download Document</a>
                    </div>
                </div>
