@using TimeAide.Data;
@model TimeAide.Web.Models.PayrollRule
@{
    ViewBag.Label = "Payroll Rule";
}
<div id="payrollRuleDelete_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            @Html.Partial("_DeleteViewHeader")

            <div class="modal-body pt-0">

                <div class="alert" style="display:none;" id="positionDeleteAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                @Html.HiddenFor(model => model.Id, new { id = "PayrollRuleDeleteId" })

                <div class="form-group row">
                    <div class="panel panel-default" style="width:100%;margin-left:10px">
                        <div class="panel-heading" style="padding-left:10px">Payroll Rule Information</div>
                        <div class="panel-body">
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">Rule: <span class="text-danger"></span></label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(m => m.Name)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">Description: <span class="text-danger"></span></label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.Description)
                                </div>
                            </div>
                           
                        </div>
                    </div>

                </div>
                <div class="submit-section mt-1">

                    <button id="btnDeletePayrollRule" class="btn btn-danger submit-btn">Delete</button>
                    <button id="btnCancel" class="btn btn-danger submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#btnDeletePayrollRule").click(function () {
            var id = $("#PayrollRuleDeleteId").val();
            deletePayrollRule(id);
        })

    });
</script>

