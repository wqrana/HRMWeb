@using TimeAide.Data;
@model IEnumerable<TimeAide.Web.Models.PayrollRule>
<h4 class="pull-left"> Payroll Rule List</h4>
<div class="table-responsive">
    <table class="table table-striped custom-table table-nowrap mb-0" id="tblPayrollRule">
        <thead>
            <tr>

                <th>
                    Name
                </th>
                <th>
                    No-Of-Punches
                </th>
                <th>
                    Pay-Period Length
                </th>
                <th>
                    Pay-Week Start
                </th>
                <th>
                    Schedule Type
                </th>

                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href='javascript:getPayrollRuleDetail(@item.Id);'>@Html.DisplayFor(m => item.Name)</a>
                </td>
                @{
                    item.NoOfPunchText = DataHelper.GetPayrollRuleFieldValText((int)PayrollRuleListTypeFieldsEnum.NoOfPunchField, item.NoOfPunchVal);
                    var schType = "";
                    if (item.IsCustomSchedule) { schType = "Custom Schedule"; }
                    else if (item.IsAssignedWork) { schType = "Assign Worked"; }
                }
                <td>@Html.DisplayFor(m => item.NoOfPunchText)</td>
                <td>@Html.DisplayFor(m => item.PayFrequency.PayFrequencyName)</td>
                <td>@Html.DisplayFor(m => item.PayweekStartDate)</td>
                <td>@Html.DisplayFor(m => schType)</td>
                <td width="10%">
                    <div class="pull-right dropdown-action">
                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                        <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">

                            @*<a href="javascript:createEdit(0);" class="dropdown-item" data-id="1"><i class="fa fa-pencil m-r-5"></i> Edit</a>*@
                            <a href="javascript:getPayrollRuleDetail(@item.Id);" class="dropdown-item"><i class="fa fa-eye m-r-5"></i> Details</a>
                            <a href="javascript:getPayrollRuleDeleteData(@item.Id);" class="dropdown-item"><i class="fa fa-trash m-r-5"></i> Delete</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
