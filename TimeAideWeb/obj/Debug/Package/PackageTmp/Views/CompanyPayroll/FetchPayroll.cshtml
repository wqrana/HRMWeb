@model IEnumerable<TimeAide.Web.Models.Payroll>
<div class="table-responsive">
    <table class="table table-striped custom-table table-nowrap mb-0" id="tblCompanyPayroll">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th>Payroll</th>
                <th>Payroll Type</th>
                <th>Pay Date</th>
                <th>Pay Week </th>
                <th>Start Date</th>
                <th>End Date </th>
                <th>Payroll Status</th>
                <th>Created By</th>
                <th>Created On</th>
                <th>Closed By</th>
                <th>Closed On</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td width="5%">
                    <div class="pull-right dropdown-action">
                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                        <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">
                            @*<a href="javascript:void();" class="dropdown-item"><i class="fa fa-eye m-r-5"></i> Details</a>
                            <a href="javascript:void();" class="dropdown-item"><i class="fa fa-pencil m-r-5"></i> Recompute</a>
                            <a href="javascript:void();" class="dropdown-item"><i class="fa fa-pencil m-r-5"></i> Delete</a>*@
                        </div>
                    </div>
                </td>
                <td> <a href="\CompanyPayroll\PayrollDetail\1"><span class="fa fa-eye"></span></a></td>
                <td>@Html.DisplayFor(m=>item.PayrollName)</td>
                <td>@Html.DisplayFor(m => item.PayrollType.Name)</td>
                <td>@Html.DisplayFor(m => item.PayDate)</td>
                <td>@Html.DisplayFor(m => item.PayWeekNumber)</td>
                <td>@Html.DisplayFor(m => item.PayrollStartDate)</td>
                <td>@Html.DisplayFor(m => item.PayrollEndDate)</td>
                @{ 
                    var css = item.PayrollStatusId==1? "bg-inverse-danger" : "bg-inverse-primary";
                }
                <td><span class="badge @css">@Html.DisplayFor(m => item.PayrollStatus.Name)</span></td>
                <td>@Html.DisplayFor(m => item.CreatedBys.ShortFullName)</td>
                <td>@Html.DisplayFor(m => item.CreatedDate)</td>
                <td>@Html.DisplayFor(m => item.ClosedBy.ShortFullName)</td>
                <td>@Html.DisplayFor(m => item.ClosedDate)</td>
            </tr>       
            }
        </tbody>
    </table>
 </div>
<script>
    $(document).ready(function () {
        debugger;
        $('#tblCompanyPayroll').dataTable({
            "searching": true
        });
    });
</script>