@model TimeAide.Web.Models.Client
<div id="DeletePayroll_cmp_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
           <div class="mt-2 p-1">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;">Client - Delete</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body pt-0">

                <!--Inline form layout -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <strong>Alert!</strong> Are you sure you want to delete this?
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.ClientName, htmlAttributes: new { @class = "col-md-3 control-label" })
                            <!--<label class="col-md-2 col-form-label">System Id:</label>-->
                            <div class="col-md-9 text-muted">
                                <!--<input id="Gen_systemId" class="form-control" type="text">-->
                                @Html.DisplayFor(model => model.ClientName, new { htmlAttributes = new { @class = "form-control text-muted" } })
                            </div>
                         </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.PayrollName, htmlAttributes: new { @class = "col-md-3 control-label" })
                            
                            <div class="col-md-9 text-muted">
                            
                                @Html.DisplayFor(model => model.PayrollName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                         </div>   
                        <div class="form-group row">
                            @Html.LabelFor(model => model.CompanyStartDate, "StartDate", htmlAttributes: new { @class = "col-md-3 control-label" })
                            <div class="col-md-9 text-muted">
                                @String.Format("{0:MM/dd/yyyy}", @Model.CompanyStartDate)

                                <!--<input id="Gen_middleName" class="form-control" type="text">-->
                            </div>
                        
                        </div>
                    </div>
                </div>                

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                                                      
                        <div class="submit-section">
                                <button class="btn btn-danger submit-btn m-r-10">Delete</button>
                                <button id="btnCancel" class="btn btn-primary submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                         </div>
                        }
            </div>
        </div>
    </div>
</div>
