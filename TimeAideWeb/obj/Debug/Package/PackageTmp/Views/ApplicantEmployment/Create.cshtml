@model TimeAide.Web.Models.ApplicantEmployment

<style>

    ul.ui-front {
        z-index: 1100;
    }
    
</style>
<div id="applicantEmploymentCreateEdit_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">

            <div class="mt-2 p-1">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;">Previous Employment - Create</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body pt-0">

                <div class="alert" style="display:none;" id="">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                <div class="row">

                    <div class="col-md-12">

                        @Html.HiddenFor(model => model.Id, new { id = "ApplicantEmploymentId" })
                        @Html.HiddenFor(model => model.ApplicantInformationId)
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Company: <span class="text-danger">*</span></label>
                            <div class="col-md-5">
                                <div class="input-group">
                                    @Html.DropDownList("ApplicantCompanyId", null, "Please select", new { @class = "form-control" })
                                    <div class="input-group-append">
                                        <button class="btn btn-secondary btn-master-data" type="button">+</button>
                                    </div>
                                </div>
                            </div>
                            <label class="col-md-2 col-form-label">Company Phone: <span class="text-danger"></span></label>
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.CompanyTelephone, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Company Address: <span class="text-danger"></span></label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.CompanyAddress, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-1 col-form-label pr-0">Position: <span class="text-danger">*</span></label>
                            <div class="col-md-3">
                                <div class="input-group">
                                    @Html.DropDownList("ApplicantPositionId", null, "Please select", new { @class = "form-control" })
                                    <div class="input-group-append">
                                        <button class="btn btn-secondary btn-master-data" type="button">+</button>
                                    </div>
                                </div>
                            </div>
                            <label class="col-md-1 col-form-label pr-0 pl-0"> Start Date: <span class="text-danger"></span></label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.EmploymentStartDate, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-2 pt-2">
                                <label class="pr-2">Current</label>
                                @Html.CheckBox("IsCurrentEmployment", false)
                            </div>
                            <label class="col-md-1 col-form-label pr-0 pl-0">End Date: <span class="text-danger"></span></label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.EmploymentEndDate, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-1 col-form-label"> Income: </label>
                            <div class="col-md-2 pr-0">
                                @Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-2 pl-0">
                                @Html.DropDownList("RateFrequencyId", null, "Please select", new { @class = "form-control" })
                            </div>
                            <label class="col-md-1 col-form-label pl-0 pr-0">Supervior: <span class="text-danger"></span></label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.SuperviorName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-1 col-form-label pr-0">Exit Type: <span class="text-danger">*</span></label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    @Html.DropDownList("ApplicantExitTypeId", null, "Please select", new { @class = "form-control" })
                                    <div class="input-group-append">
                                        <button class="btn btn-secondary btn-master-data" type="button">+</button>
                                    </div>
                                </div>
                            </div>
                            <label class="col-md-1 col-form-label pl-0 pr-0">Exit Reason: <span class="text-danger"></span></label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.ExitReason, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="submit-section mt-1">

                    <button id="btnSaveApplicantEmployment" class="btn btn-primary submit-btn">Save</button>
                    <button id="btnCancel" class="btn btn-primary  submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
      

        $("#EmploymentStartDate").datetimepicker({ format: 'MM/DD/YYYY' });
        $("#EmploymentEndDate").datetimepicker({ format: 'MM/DD/YYYY' });
        $('#CompanyTelephone').mask('(999) 999-9999');
        $("#IsCurrentEmployment").change(function () {
            debugger;
            var st = $(this).is(":checked");
            if (st) {
                $("#EmploymentEndDate").hide();
            }
            else {
                $("#EmploymentEndDate").show();
            }
        });
        $("#btnSaveApplicantEmployment").click(function () {
            saveApplicantEmploymentData();
        })
        //popup master data
        $(".btn-master-data").click(function () {
            debugger;
            var masterDataDdl = $(this).parents("div.input-group")
                .find("select")
                .first();
            openMasterDataPopUp(masterDataDdl);
        }); 
               
      
    });
   
</script>

