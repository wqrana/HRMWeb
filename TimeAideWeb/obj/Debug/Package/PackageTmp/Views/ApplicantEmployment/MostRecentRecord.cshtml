@model TimeAide.Web.Models.ApplicantEmployment
<div style="padding:10px; padding-top:0px;">
    <div style="font-size: 90%;">
        <div class="form-group row">
            <div class="panel panel-default" style="width:100%;margin-left:10px">
                <div class="panel-heading" style="padding-left:10px">Employment Detail</div>
                <div class="panel-body">
                    @Html.Hidden("ApplicantEmploymentDetailId", Model == null ? 0 : Model.Id)
                    <div class="form-group row">
                        <label class="col-md-1 col-form-label" style="margin-left:10px">
                            Company:
                        </label>
                        <div class="col-md-2 text-muted mt-2">
                            <span id=""> @Html.DisplayFor(model => model.ApplicantCompany.CompanyName)</span>
                        </div>
                        <label class="col-md-1 col-form-label" style="margin-left:10px">
                            Phone:
                        </label>
                        <div class="col-md-1 text-muted mt-2 pl-0 pr-0">
                            @Html.DisplayFor(model => model.CompanyTelephone)
                        </div>
                        <label class="col-md-1 col-form-label" style="margin-left:10px">
                            Address:
                        </label>
                        <div class="col-md-5 text-muted mt-2">
                            @Html.DisplayFor(model => model.CompanyAddress)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-1 col-form-label" style="margin-left:10px">
                            Position:
                        </label>
                        <div class="col-md-2 text-muted mt-2">
                            @Html.DisplayFor(model => model.ApplicantPosition.PositionName)
                        </div>
                        <label class="col-md-1 col-form-label" style="margin-left:10px">
                            Start Date:
                        </label>
                        <div class="col-md-1 text-muted mt-2">
                            @Html.DisplayFor(model => model.EmploymentStartDate)
                        </div>
                        @{
                            var isCurrent = false;
                            if (Model != null)
                            {
                                isCurrent = Model.IsCurrentEmployment ?? false;
                            }
                        }
                        @if (!isCurrent)
                        {
                            <label class="col-md-1 col-form-label" style="margin-left:10px">
                                End Date:
                            </label>

                            <div class="col-md-1 text-muted mt-2">
                                @Html.DisplayFor(model => model.EmploymentEndDate)
                            </div>
                        }
                        @if (isCurrent)
                        {
                            <div class="col-md-2 pt-2 text-muted">
                                <label class="pr-2">Current</label>
                                @Html.CheckBox("IsCurrentEmployment", isCurrent, new { @disabled = "disabled" })
                            </div>
                        }
                        <label class="col-md-1 col-form-label" style="margin-left:10px">
                            Income:
                        </label>
                        <div class="col-md-2 text-muted mt-2">
                            $ @Html.DisplayFor(model => model.Rate) -  @Html.DisplayFor(model => model.RateFrequency.RateFrequencyName)
                        </div>
                    </div>
                    <div class="form-group row">

                        <label class="col-md-1 col-form-label" style="margin-left:10px">
                            Supervior:
                        </label>
                        <div class="col-md-2 text-muted mt-2">
                            @Html.DisplayFor(model => model.SuperviorName)
                        </div>
                        <label class="col-md-1 col-form-label" style="margin-left:10px">
                            Exit Type:
                        </label>
                        <div class="col-md-2 text-muted mt-2">
                            @Html.DisplayFor(model => model.ApplicantExitType.ExitTypeName)
                        </div>
                        <label class="col-md-1 col-form-label pr-0" style="margin-left:10px">
                            Exit Reason:
                        </label>
                        <div class="col-md-4 text-muted mt-2">
                            @Html.DisplayFor(model => model.ExitReason)
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>