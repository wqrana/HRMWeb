@model IEnumerable<TimeAide.Web.Models.ApplicantEmployment>
<h4 class="pull-left"> Employment List</h4>
<div class="table-responsive">
    <table class="table table-striped custom-table table-nowrap mb-0">
        <thead>
            <tr>
                <th>
                    Company
                </th>
                <th>
                    Position
                </th>
                <th>
                    Start Date
                </th>
                <th>
                    End Date
                </th>
                <th>
                    Income
                </th>
                <th>
                    Exit Type
                </th>
                
                <th></th>

            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicantCompany.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicantPosition.PositionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmploymentStartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmploymentEndDate)
                </td>
                <td>
                    $ @Html.DisplayFor(modelItem => item.Rate) -  @Html.DisplayFor(modelItem => item.RateFrequency.RateFrequencyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicantExitType.ExitTypeName)
                </td>

                <td width="10%">
                   
                        <div class="pull-right dropdown-action">
                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                            <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">
                                @if (!ViewBag.IsHired)
                                {
                                    <a href="javascript:createEditApplicantEmployment(@item.Id);" class="dropdown-item" data-id="@item.Id"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                }
                                <a href="javascript:getApplicantEmploymentDetail(@item.Id);" class="dropdown-item"><i class="fa fa-eye m-r-5"></i> Details</a>
                                @if (!ViewBag.IsHired)
                                {
                                    <a href="javascript:getApplicantEmploymentDeleteData(@item.Id);" class="dropdown-item"><i class="fa fa-trash m-r-5"></i> Delete</a>
                                }
                            </div>
                        </div>
                   
                    </td>
            </tr>
        }

    </table>
</div>