@model TimeAide.Web.Models.AppraisalTemplate

@{
    ViewBag.Label = "Appraisal Template";
}
<div id="appraisalTemplateDelete_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            @Html.Partial("_DeleteViewHeader")
            
            <div class="modal-body pt-0">

                <div class="alert" style="display:none;" id="appraisalTemplateDeleteAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                @Html.HiddenFor(model => model.Id, new { id = "AppraisalTemplateDeleteId" })
               
                <div class="form-group row">
                    <div class="panel panel-default" style="width:100%;margin-left:10px">
                        <div class="panel-heading" style="padding-left:10px">Template Information</div>
                        <div class="panel-body">
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" style="margin-left:10px">
                                    Name:
                                </label>
                                <div class="col-md-8 text-muted mt-2">
                                    <span id=""> @Html.DisplayFor(model => model.TemplateName)</span>
                                </div>
                                
                            </div>                                                                     
                           
                        </div>
                    </div>
                                       
                </div>
                <div class="submit-section mt-1">

                    <button id="btnDeleteAppraisalTemplate" class="btn btn-danger submit-btn">Delete</button>
                    <button id="btnCancel" class="btn btn-danger submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#btnDeleteAppraisalTemplate").click(function () {
            var id = $("#AppraisalTemplateDeleteId").val();
            deleteAppraisalTemplate(id);
        })

    } );
</script>

