            $("#CompanyWithholdingLoan_LoanAmount").prop('disabled', true);
            $("#CompanyWithholdingLoan_LoanAmount").val('');
        }
    });
    function LoadCreateCompensationExclusion(id) {
        $.ajax({
            type: "GET",
            url: '/CompanyWithholdingCompensationExclusion/CreateIndex',
            contentType: "application/json; charset=utf-8",
            data: { "id": id },
            datatype: "html",
            success: function (html) {
                $('#divSupervisedEmployees').empty()
                $('#divSupervisedEmployees').html(html);
            },
            error: function () {
                alert("Dynamic content load failed.");
            }
        });
    }
    function fnCompanyWithholding() {
        debugger;
        var options = { "backdrop": "static", keyboard: true };
        $.ajax({
            type: "GET",
            url: '/CompanyWithholdingCompensationExclusion/CreateCompensationExclusion',
            contentType: "application/json; charset=utf-8",
            datatype: "json",
            success: function (data) {
                debugger;
                $('#ExclusionModalContent').html(data);
                $('#ExclusionModal').modal(options);
                $('#ExclusionModal').modal('show');
            },
            error: function (xhr, status, error) {
                debugger
                var err = eval("(" + xhr.responseText + ")");
                alert(err.Message);
                alert("Dynamic content load failed.");
            }
        });
    }
