    $('#IsLoan').change(function () {
        if ($(this).is(':checked')) {
            $("#CompanyWithholdingLoan_LoanDescription").prop('disabled', false);
            $("#CompanyWithholdingLoan_LoanAmount").prop('disabled', false);
        } else {
            $("#CompanyWithholdingLoan_LoanDescription").prop('disabled', true);
