@model IEnumerable<TimeAide.Web.Models.EmployeeContribution>
<div style="padding:10px;padding-bottom:0px">
    <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
        <h4 style="display: inline;">Employee Contribution - Timeline</h4>
        <button class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <div class="card-body">
        <div class="experience-box">
            @{ TimeAide.Web.Models.EmployeeContribution pEmployeeContribution = null; }
            <ul class="experience-list">
                @foreach (var eachContribution in Model)
                {
                <li>
                    <div class="experience-user">
                        <div class="before-circle"></div>
                    </div>
                    @if (pEmployeeContribution != null && pEmployeeContribution.EndDate.HasValue)
                    {
                        <div class="experience-content">
                            <div class="timeline-content">
                                <a href="#/" class="name">@eachContribution.CompanyContribution.CompanyContributionName</a>
                                <span class="time">
                                    @String.Format("{0:MM/dd/yyyy}", eachContribution.StartDate)
                                    @if (eachContribution.EndDate.HasValue)
                                    {
                                        <span>
                                            -
                                            @String.Format("{0:MM/dd/yyyy}", eachContribution.EndDate)
                                        </span>
                                    }
                                    <span>
                                        ,
                                        @eachContribution.MoneyAmount
                                    </span>
                                </span>

                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="experience-content">
                            <div class="timeline-content">
                                <a href="#/" class="name">@eachContribution.CompanyContribution.CompanyContributionName</a>
                                <span class="time">
                                    @String.Format("{0:MM/dd/yyyy}", eachContribution.StartDate)
                                    @if (eachContribution.EndDate.HasValue)
                                    {
                                        <span>
                                            -
                                            @String.Format("{0:MM/dd/yyyy}", eachContribution.EndDate)
                                        </span>
                                    }
                                    <span>
                                        ,
                                        @eachContribution.MoneyAmount
                                    </span>
                                </span>

                            </div>
                        </div>
                    }
                </li>
                }

            </ul>
        </div>
    </div>
</div>
<p>
    <button type="submit" class="btn btn-primary submit-btn" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
</p>
<style>
    p {
        text-align: center;
    }

    /*dt {
        display: inline;
        width: 25%;
    }*/

    dt::after {
        content: ":";
    }

    dd {
        display: inline;
        color: #909090
    }

    .timelinex.non_complete::after {
        content: '';
        position: absolute;
        width: 4px;
        background-color: #f4f4f4;
        top: 0;
        bottom: 0;
        left: 50%;
        margin-left: -3px;
        border: 1em dotted #f4f4f4;
    }
</style>