@model TimeAide.Web.Models.PayRateMultiplier
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="padding:10px">
    @Html.Partial("_CreatePageTitleView")
    @Html.HiddenFor(model => model.Id)

    <div class="form-group row">
        <div class="col-md-3">
            @Html.LabelFor(model => model.PayRateMultiplierName, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-md-8">
            @Html.EditorFor(model => model.PayRateMultiplierName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PayRateMultiplierName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            @Html.LabelFor(model => model.PayRateMultiplierDescription, "Description", htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-md-8">
            @Html.EditorFor(model => model.PayRateMultiplierDescription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PayRateMultiplierDescription, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            @Html.LabelFor(model => model.PayRateMultiplierValue, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-md-8">
            @Html.EditorFor(model => model.PayRateMultiplierValue, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PayRateMultiplierValue, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.Partial("_CreatePageFooterView")
</div>
}

<script>
    $(document).ready(function () {
        var IsAllCmp = $('#chkAllCompanies').is(':checked');
        $('#chkAllCompanies').change(function () {
            IsAllCmp = $(this).is(':checked');
            LoadJobCertificationSignee(IsAllCmp, '#JobCertificationSigneeId', null);
            LoadJobCertificationTemplate(IsAllCmp, '#JobCertificationTemplateId', null);
        });
        $('#PayRateMultiplierValue').click(function () {
            if ($(this).is(":checked")) {
                $("#CFSECodeId").removeAttr("disabled");
                $("#CFSECompanyPercent").removeAttr("disabled");
            }
            else {
                $("#CFSECodeId").attr("disabled", "disabled");
                $("#CFSECompanyPercent").attr("disabled", "disabled");
                $("#CFSECodeId").val("");
                $("#CFSECompanyPercent").val("");
                $('span[data-valmsg-for="CFSECodeId"]').text('');
                $('span[data-valmsg-for="CFSECompanyPercent"]').text('');
            }
        });
    });
</script>