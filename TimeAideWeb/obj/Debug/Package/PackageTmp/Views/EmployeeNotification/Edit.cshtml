@model TimeAide.Web.Models.EmployeeNotification
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="padding:10px">
    @Html.Partial("_CreatePageTitleView")
    @Html.HiddenFor(model => model.Id)

    <div class="form-group row">
        <div class="col-md-3">
            @Html.LabelFor(model => model.EmployeeNotificationName, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-md-7">
            @Html.EditorFor(model => model.EmployeeNotificationName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EmployeeNotificationName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            @Html.LabelFor(model => model.EmployeeNotificationDescription, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-md-7">
            @Html.EditorFor(model => model.EmployeeNotificationDescription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EmployeeNotificationDescription, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            @Html.LabelFor(model => model.EmployeeNotificationTypeId, "Notification Types", htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-md-7">
            @(Html.CustomDropDownList<TimeAide.Web.Models.EmployeeNotificationType>("EmployeeNotificationTypeId", null, Model.EmployeeNotificationTypeId, htmlAttributes: new { @class = "form-control" }))
            @Html.ValidationMessageFor(model => model.EmployeeNotificationTypeId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            @Html.LabelFor(model => model.NotificationScheduleId, "Notification Schedule", htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-md-7">
            @(Html.CustomDropDownList<TimeAide.Web.Models.NotificationSchedule>("NotificationScheduleId", null, Model.NotificationScheduleId, htmlAttributes: new { @class = "form-control"}))
            @Html.ValidationMessageFor(model => model.NotificationScheduleId, "", new { @class = "text-danger" })

        </div>
    </div>
    @Html.Partial("_CreatePageFooterView")
</div>
}

