@model TimeAide.Web.Models.AppraisalRatingScaleDetail

@{
    ViewBag.Label = "Rating Scale";
}
<div id="appraisalRatingScaleDetailDelete_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            @Html.Partial("_DeleteViewHeader")

            <div class="modal-body pt-0">

                <div class="alert" style="display:none;" id="appraisalRatingScaleDetailDeleteAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                @Html.HiddenFor(model => model.Id, new { id = "AppraisalRatingScaleDetailDeleteId" })

                <div class="form-group row">
                    <div class="panel panel-default" style="width:100%;margin-left:10px">
                        <div class="panel-heading" style="padding-left:10px">Rating Scale</div>
                        <div class="panel-body">
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Rate:
                                </label>
                                <div class="col-md-2 text-muted mt-2">
                                    <span id=""> @Html.DisplayFor(model => model.RatingLevel.RatingLevelName)</span>
                                </div>
                                <label class="col-md-2 col-form-label">
                                    Name:
                                </label>
                                <div class="col-md-5 text-muted mt-2">
                                    <span id=""> @Html.DisplayFor(model => model.RatingName)</span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Description:
                                </label>
                                <div class="col-md-5 text-muted mt-2">
                                    <span id=""> @Html.DisplayFor(model => model.RatingDescription)</span>
                                </div>
                                <label class="col-md-2 col-form-label">
                                    Value:
                                </label>
                                <div class="col-md-2 text-muted mt-2">
                                    <span id=""> @Html.DisplayFor(model => model.RatingValue)</span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="submit-section mt-1">

                    <button id="btnDeleteAppraisalRatingScaleDetail" class="btn btn-danger submit-btn">Delete</button>
                    <button id="btnCancel" class="btn btn-danger submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#btnDeleteAppraisalRatingScaleDetail").click(function () {
            var id = $("#AppraisalRatingScaleDetailDeleteId").val();
            deleteAppraisalRatingScaleDetail(id);
        })

    } );
</script>

