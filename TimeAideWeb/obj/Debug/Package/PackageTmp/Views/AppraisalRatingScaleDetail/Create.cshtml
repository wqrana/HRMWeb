@model TimeAide.Web.Models.AppraisalRatingScaleDetail

<div id="AppraisalRatingScaleDetailCreateEdit_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <div class="mt-2 p-1">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;">Rating Scale Detail- Add</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body pt-0">

                <div class="alert" style="display:none;" id="appraisalRatingScaleDetailCreateEditAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                <div class="row">

                    <div class="col-md-12">
                        @Html.HiddenFor(m => m.Id, new { id = "AppraisalRatingScaleDetailId" })
                        
                        <div class="form-group row">
                            <label class="col-md-1 col-form-label pr-0 pl-0">Rating: <span class="text-danger">*</span></label>
                            <div class="col-md-2">
                                @Html.DropDownList("RatingLevelId", null, "Please select", new { @class = "form-control" })
                            </div>
                            <label class="col-md-1 col-form-label pr-0 pl-0">Name: <span class="text-danger">*</span></label>
                            <div class="col-md-5">
                                @Html.EditorFor(model => model.RatingName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <label class="col-md-1 col-form-label pr-0 pl-0">Value: <span class="text-danger">*</span></label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.RatingValue, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label pr-0 pl-0">Decription: <span class="text-danger"></span></label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.RatingDescription, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <label class="col-md-2 col-form-label pr-0 pl-0">Abbreviation: <span class="text-danger">*</span></label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.RatingAbbreviation, new { htmlAttributes = new { @class = "form-control" } })
                            </div>


                        </div>
                    </div>
                </div>
                <div class="submit-section mt-1">
                    <button id="btnSaveAppraisalRatingScaleDetail" class="btn btn-primary submit-btn">Save</button>
                    <button id="btnCancel" class="btn btn-primary  submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
    
        $("#btnSaveAppraisalRatingScaleDetail").click(function () {
            saveAppraisalRatingScaleDetailData();
        });


    });

</script>


