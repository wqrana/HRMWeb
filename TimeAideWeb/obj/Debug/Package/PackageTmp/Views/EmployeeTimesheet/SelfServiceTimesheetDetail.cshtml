@model TimeAide.Data.tReportWeek
@{

}
<input id="hdnPayrollUserInformationId" name="hdnPayrollUserInformationId" type="hidden" value="@Model.UserInformationId">
<input id="hdnPayrollnWeekID" name="hdnPayrollUserInformationId" type="hidden" value="@Model.nWeekID">
<div class="row">
    <div class="col-md-12">
        <div class="card mb-0">
            <div class="card-body pb-0">
                <div class="row pb-0 mb-0">
                    <div class="col-sm-9">
                        <h4 class="payslip-title"></h4>
                    </div>
                    <div class="col-sm-3">
                        <div class="col-auto float-right ml-auto pr-0">
                            <div class="btn-group btn-group-sm">
                                @{
                                    string Disabled = "";
                                    string empReviewStatusTxt = "Unreviewed";
                                    string statusTextCls = "text-danger";
                                    if (Model.intUserReviewed == 1)
                                    {
                                        Disabled = "disabled";
                                        statusTextCls = "text-purple";
                                        empReviewStatusTxt = "Reviewed";
                                    }
                                }
                                @if ((new TimeAide.Services.ApplicationConfigurationService()).EmployeeTimeSheetApproval == 1)
                                {
                                    <button class="btn btn-white" id="btnApproveTimeshet" @Disabled onclick="javascript:approveTimesheet();"><span id="spanEmpReviewStatus" class="fa fa-dot-circle-o @statusTextCls"><span id="spanEmpReviewStatusTxt" class="font-weight-bold pl-1">@empReviewStatusTxt</span></span></button>
                                }
                                <button class="btn btn-white" onclick="javascript:runLocalReport(@Model.tpwID)"><i class="fa fa-print fa-lg"></i> Print</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row pt-0 pb-0">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body pt-1 pb-0">
                                <h4 class="payslip-title">Timesheet: @Model.nPayWeekNum</h4>
                                <div class="row">
                                    @if (Model.nReviewStatus == 1)
                                    {
                                        <div style="text-align:center;color:red;width:100%">
                                            Timesheet is already approved
                                        </div>
                                    }
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 m-b-20">
                                        <img src="@TimeAide.Services.CompanyService.SelectedCompanyLogo" class="inv-logo" alt="">

                                    </div>
                                    <div class="col-sm-6 m-b-20">

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6 m-b-20">
                                        <ul class="list-unstyled mb-0">
                                            <li><strong>Company:</strong> @Model.sCompanyName</li>
                                            <li><strong>Department:</strong> @Model.sDeptName</li>
                                            <li><strong>Sub-department:</strong></li>
                                            <li><strong>Employee Type:</strong> @Model.sEmployeeTypeName</li>
                                        </ul>
                                    </div>
                                    <div class="col-sm-6 m-b-20">
                                        <div class="invoice-details" style="text-align:left">
                                            <h3 class="text-uppercase">Payweek #@Model.nPayWeekNum</h3>
                                            <ul class="list-unstyled">
                                                <li><strong>Pay Period:</strong>  <span>@Model.nPayWeekNum</span></li>
                                                <li><strong>Start Date:</strong>  <span>@Model.DTStartDate.Value.ToString("MM-dd-yyyy")</span></li>
                                                <li><strong>End Date:</strong>  <span>@Model.DTEndDate.Value.ToString("MM-dd-yyyy")</span></li>
                                                <li><strong>Payrol Rule:</strong>  <span>@Model.sPayRuleName</span></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12 m-b-20">
                                        <ul class="list-unstyled">
                                            <li><h5 class="mb-0"><strong>@Model.e_name</strong></h5></li>
                                            @*<li><span>Web Designer</span></li>*@
                                            <li>Employee ID: @Model.e_id</li>
                                            @*<li>Joining Date: 1 Jan 2013</li>*@
                                        </ul>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12 m-b-20">
                                        <p><strong>Hours Summary: @Model.sHoursSummary</strong></p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div>
                                            <h4 class="m-b-10"><strong>Punch Details</strong></h4>
                                            <table class="table table-condensed table-nowrap mb-0">
                                                <thead>
                                                    <tr>
                                                        <th style="width:8%">Date</th>
                                                        <th>Punch Summary</th>
                                                        <th >Hours Summary</th>
                                                        <th>Exceptions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (TimeAide.Data.tPunchDate each in Model.tPunchDate)
                                                    {
                                                        <tr>
                                                            <td>@each.DTPunchDate.Value.ToString("ddd MM-dd-yyyy")</td>
                                                            <td>@each.sPunchSummary</td>
                                                            <td>@each.sHoursSummary</td>
                                                            <td>@each.sExceptions</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>


                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

