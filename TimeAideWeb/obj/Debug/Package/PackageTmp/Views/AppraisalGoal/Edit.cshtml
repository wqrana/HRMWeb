@model TimeAide.Web.Models.AppraisalGoal

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.Partial("_CreatePageTitleView")

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.GoalName, htmlAttributes: new { @class = "control-label" })

            @Html.EditorFor(model => model.GoalName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GoalName, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.GoalDescription, htmlAttributes: new { @class = "control-label" })

            @Html.EditorFor(model => model.GoalDescription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GoalDescription, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.AppraisalRatingScaleId, htmlAttributes: new { @class = "control-label" })

            @Html.DropDownList("AppraisalRatingScaleId", null, "Please select", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AppraisalRatingScaleId, "", new { @class = "text-danger" })

        </div>
    </div>
    @Html.Partial("_CreatePageFooterView")
</div>
}
<script>
    $(document).ready(function () {
        $("#chkAllCompanies").change(function () {
            debugger;
            var IsAllCmp = $(this).is(":checked");
            LoadAppraisalGoalRating(IsAllCmp, '#AppraisalRatingScaleId', null)
        });
    })
</script>
