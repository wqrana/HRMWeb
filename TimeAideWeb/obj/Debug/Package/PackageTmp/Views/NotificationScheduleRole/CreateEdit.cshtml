<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/multi-select.css" rel="stylesheet" />
<script src="~/Scripts/jquery.multi-select.js"></script>
<style>

    ul.ui-front {
        z-index: 1100;
    }
</style>
<div class="form-horizontal">
    <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
        <h4 style="display: inline;">Notification Role - Add/Edit</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <input type="hidden" id="SelectedEmployeeNotificationRoleId" , value="@ViewBag.EmployeeNotificationRoleId" />
    <div class="alert" style="display:none;" id="employeeNotificationRoleCreateEditAlert">
        <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
        <strong>Alert!</strong><span class="ml-1"></span>
    </div>
    <div class="col-md-12">
        @Html.DropDownList("EmployeeNotificationRoleList",
            new MultiSelectList(ViewBag.NotificationList,
            "Value", "Text", ViewBag.SelectedNotificationList),
       new
       {
           multiple = "multiple",
           id = "EmployeeNotificationRoleList",
           name = "CredentialList[]"
       })
    </div>
    <div class="submit-section">
        <button id="btnSaveemployeeNotificationRoles" class="btn btn-primary submit-btn">Save</button>
        <button id="btnCancel" class="btn btn-primary  submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
    </div>
</div>
<script>
    $(document).ready(function () {
        debugger;
        $('#EmployeeNotificationRoleList').multiSelect(
            {
                keepOrder: false,
                selectableHeader: "<div class='custom-header'>Available Notifications</div>",
                selectionHeader: "<div class='custom-header'>Associated Notifications</div>",
                selectableFooter: "<button id='btnSelectAll' class='btn btn-sm submit-btn btn-sm' onclick='SelectAllNotifications();'>Select All</button>",
                selectionFooter: "<button id='btnSelectAll' class='btn btn-sm submit-btn btn-sm' onclick='UnSelectAllNotifications();'>Unselect All</button>",
                afterInit: function (ms) {
                    
                    //alert($("#btnSelectAll").html());
                    //alert($("#EmployeeNotificationRoleList").html());
                }
            }
        );

        $("#btnSaveemployeeNotificationRoles").click(function () {
            debugger;
            var selectedCredentialsStr = '';
            var selectedCredentialList = $('#EmployeeNotificationRoleList').val();
            if (selectedCredentialList.length > 0) {
                selectedCredentialsStr = selectedCredentialList.length > 1 ? selectedCredentialList.join(',') : selectedCredentialList[0];
            }
            saveemployeeNotificationRoleData(selectedCredentialsStr);
        })
    });
    function UnSelectAllNotifications() {
        debugger
        $('#EmployeeNotificationRoleList').multiSelect('deselect_all');
    }
    function SelectAllNotifications() {
        debugger
        $('#EmployeeNotificationRoleList').multiSelect('select_all');
    }
    function saveemployeeNotificationRoleData(selectedCredentialStr) {
        debugger;
        alertID = "#employeeNotificationRoleCreateEditAlert"
        var userId = $("#SelectedEmployeeNotificationRoleId").val();
        if (userId != 0) {
            $.ajax({
                type: "post",
                url: '/EmployeeNotificationRole/CreateEdit',
                data: {
                    "id": userId,
                    "selectedCredentialIds": selectedCredentialStr
                },

                success: function (data) {
                    debugger;
                    if (data.status == "Success") {
                        $("#myModal").modal("hide");
                        LoadEmployeeNotification(userId);
                    }
                },
                error: function () {
                    alert("error in saveemployeeNotificationRoleData");
                }
            });
        }
    }
</script>
<style>
    .modal-md {
        min-width: 20% !important;
        margin: 0 auto;
    }

    .custom-header {
        text-align: center;
        padding: 3px;
        background: #000;
        color: #fff;
    }

    .ms-container {
        width: 100%;
    }

    .ms-selectable {
        width: 49% !important;
    }

    .ms-selection {
        width: 49% !important;
    }
</style>

