@model TimeAide.Models.ViewModel.WebScheduleViewModel
@if (Model.IsRotatingSchedule == false)
{
    <div class="panel panel-default" style="margin:5px">
        <div class="panel-heading" style="padding-left:10px">
            Future Schedule(s)
            <div class="pull-right dropdown-action" style="height:20px;">
                <a href="#" title="Action Menu" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">
                    <a id="" href="javascript:addEditFutureSchedule(0);" class="dropdown-item"><i class="fa fa-plus m-r-5"></i> Add</a>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div id="" style="max-height:300px; overflow-y:auto">
                <table class="table table-striped custom-table table-sm table-nowrap mb-0" id="">
                    <thead>
                        <tr>

                            <th>Start Date</th>
                            <th>Schedule</th>
                            <th>Note</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.EmployeeFutureSchedule)
                        {  
                            var textCls = item.IsBackDated ? "" : "text-blue";
                            
                            <tr>
                                <td class="@textCls">@Html.DisplayFor(m => item.StartDate)</td>
                                <td class="@textCls">@Html.DisplayFor(m => item.BaseSchedule.Name)</td>
                                <td class="@textCls">@Html.DisplayFor(m => item.Note)</td>
                                <td>
                                    <div class="dropdown-action">
                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                                        <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">

                                            <a href="javascript:addEditFutureSchedule(@item.Id);" class="dropdown-item" data-id=""><i class="fa fa-pencil m-r-5"></i> Edit</a>                                            
                                            <a href="javascript:getFutureScheduleDeleteData(@item.Id);" class="dropdown-item"><i class="fa fa-trash m-r-5"></i> Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="panel panel-default" style="margin:5px">
        <div class="panel-heading" style="padding-left:10px">
            Rotating Schedule(s)
            <div class="pull-right dropdown-action" style="height:20px;">
                <a href="#" title="Action Menu" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">
                    <a id="" href="javascript:addEditRotatingSchedule(0);" class="dropdown-item"><i class="fa fa-plus m-r-5"></i> Add</a>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div id="" style="max-height:300px; overflow-y:auto">
                <table class="table table-striped custom-table table-sm table-nowrap mb-0" id="">
                    <thead>
                        <tr>

                            <th>Id</th>
                            <th>Schedule</th>
                            <th>Note</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var count = 0;}
                        @foreach (var item in Model.EmployeeRotatingSchedule)
                        {
                            { count++; }
                        <tr>

                            <td>@count</td>
                            <td>@Html.DisplayFor(m => item.BaseSchedule.Name)</td>
                            <td>@Html.DisplayFor(m => item.Note)</td>
                            <td>
                                <div class="dropdown-action">
                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                                    <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">

                                        <a href="javascript:addEditRotatingSchedule(@item.Id);" class="dropdown-item" data-id=""><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                        <a href="javascript:getRotatingScheduleDeleteData(@item.Id);" class="dropdown-item"><i class="fa fa-trash m-r-5"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

}
