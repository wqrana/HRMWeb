@model TimeAide.Web.Models.PayInformationHistory
@Html.HiddenFor(model => model.UserInformationId)
@Html.HiddenFor(model => model.SelectedAuthorizByIds)
@Html.HiddenFor(model => model.EmploymentId, new {@id="PayInfoEmploymentId"})
<input id="PayInformationHistoryId" name="PayInformationHistoryId" type="hidden" value="@Model.Id">
<div class="form-horizontal" style="padding:10px;width:100%;font-size:90%">
    @Html.Partial("_CreatePageTitleView")
    <div class="form-group row">
        <label class="col-md-4 col-form-label" style="margin-left:10px">
            End Date:
            <span class="text-danger">*</span>
        </label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-4 col-form-label" style="margin-left:10px">
            Approved Date:
            <span class="text-danger">*</span>
        </label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.ApprovedDate, new { htmlAttributes = new { @class = "form-control", id = "ApprovedDate_" } })
            @Html.ValidationMessageFor(model => model.ApprovedDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-4 col-form-label" style="margin-left:10px">
            @Html.LabelFor(model => model.SelectedAuthorizById, "Authorize By:")
           
        </label>
        <div class="col-md-6">
            @Html.ListBox("SelectedAuthorizById", (IEnumerable<SelectListItem>)ViewBag.SelectedAuthorizById, new { @class = "form-control", style = "width:100%;" })
            @Html.ValidationMessageFor(model => model.SelectedAuthorizById, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-4 col-form-label" style="margin-left:10px">
            Change Reason:
        </label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.ChangeReason, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ChangeReason, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="submit-section">
        <button type="button" id="btnClosePayInformationHistory" class="btn btn-primary submit-btn">Save</button>
        <button type="submit" class="btn btn-primary submit-btn" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
    </div>
</div>



@Scripts.Render("~/bundles/jqueryval")

<script type="text/javascript">
    $(document).ready(function () {
        $('input[id*=Date]').each(function () {
            $(this).datetimepicker({ format: 'MM/DD/YYYY' });
        });
    });
</script>
<script>
    $(document).ready(function () {
       // $("#SelectedAuthorizById").val('@Model.SelectedAuthorizById'.trim().split(','));
        $("#SelectedAuthorizById").val( $("#SelectedAuthorizByIds").val().split(',') );
        $('#SelectedAuthorizById').select2();
    });
</script>








