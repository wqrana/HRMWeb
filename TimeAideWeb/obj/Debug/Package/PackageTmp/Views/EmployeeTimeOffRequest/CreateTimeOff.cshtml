<script>
    var timeOffReqUploadedDocData = [];
    var timeOffTypeDocumentList = [];
    $(document).ready(function () {

        $("#spanLessTimeAlert").hide();
        $("#spanLessRangeAlert").hide();
        $("#divRefreshingDetail").hide();
        $("#divSubmissionAlert").hide();
        applyDatePickerRange();

        $("#TimeOffTypeId").change(function () {
            debugger;
            getTimeOffTypeDetail();
           // var accrualType = $('#TimeOffTypeId').val();
            getTimeOffCalculationDetail();
            var transTypeName = $("#TimeOffTypeId option:selected").text();
            getTimeOffTypeDocumentList(transTypeName);
            var transTypeAcc = $("#TimeOffTypeId").val();
            if (transTypeAcc != "") {
                $(".loading").show();
                setTimeout( function () {
                    debugger;
                    viewTimeOffCalendar();
                },2000);
            }
        });

        //$("#StartDate").change(function () {
        //   // $("#EndDate").val($(this).val());
        //    var startDate = new Date($(this).val());
        //    $("#EndDate").datepicker('setDate', startDate);
        //    getTimeOffCalculationDetail();
        //});
        //$("#EndDate").change(function () {
        //    debugger;
        //    var endDate = new Date($(this).val());
        //    var startDate = new Date($("#StartDate").val());
        //    if (endDate < startDate) {
        //        // $(this).val($("#StartDate").val());
        //        $(this).datepicker('setDate', startDate);
        //    }
        //    getTimeOffCalculationDetail();
        //});
        $("#DayHours").change(function () {
            debugger;
            var newDayHours = $(this).val();
            if (newDayHours >@defaultDayHours || newDayHours < 0) {
                $(this).val(@defaultDayHours);
            }

           getTimeOffCalculationDetail();

        });
        $("#btnSaveTimeOffRequest").click(function () {
           // var dayHours
            var isRequired = checkMandatoryDocumentSubmissionRequired();
            if (isRequired) {
                showAlertAutoHide("", "Error", "Request type of mandatory document(s) are required to submit.");
                return;
            }
            var workdays = $('#WorkDays').val();
            var timeoffTrans = $("#TimeOffTypeId option:selected").text();
            result = checkConditionalMandatoryDocumentSubmission(workdays)
            if (result.length > 0) {
                var msgText = timeoffTrans + " Time-Off Request of ( " + result[0].TimeoffDays+" ) or more days requires mandatory document(s).Please attach the document(s) before submitting/approval."
                showAlertAutoHide("", "Info", msgText );
                return;
            }
           // return; //need to removed after testing of conditional mandatory document
            saveTimeOffRequestData();
        });
    });
    function applyDatePickerRange() {
         $('.datepicker').datepicker({
            autoclose: true,

            format: 'mm/dd/yyyy',
            startDate: "@fromDateLimit",
            endDate:"@endDD"
        });
    }
    function viewTimeOffCalendar() {
        debugger;
        var dataObject = new Object();
        dataObject.UserInformationId = $('#UserInformationId').val();
        dataObject.EmployeeId = $('#EmployeeId').val();
        dataObject.AccrualType = $('#TimeOffTypeId').val();
        $("#spanLicenseTypeId").text(dataObject.AccrualType);
        if (dataObject.AccrualType == "") {
            showAlertAutoHide("", "Info", "Please select the time-off Type");
            return;
        }
        dataObject.StartDate = '@timeoffCalendarStart';
        dataObject.EndDate = '@timeoffCalendarEnd';
        $.ajax({
            type: "POST",
            url: '/EmployeeTimeOffRequest/viewTimeOffCalendar',
            data: JSON.stringify(dataObject),

            contentType: "application/json; charset=utf-8",
            success: function (data) {
                debugger;
                $("#divTimeOffCalendar").html(data);
                $("#timeOffCalendar_modal").modal("show");
                enableRequestSubmission(false);
            },
            error: function () {
                // displayWarningMessage(data.ErrorMessage);
            }
        });
    }
    function getTimeOffTypeDetail() {
        debugger;
        var dataObject = new Object();
        dataObject.UserInformationId = $('#UserInformationId').val();
        dataObject.EmployeeId = $('#EmployeeId').val();
        dataObject.AccrualType = $('#TimeOffTypeId').val();
        $("#spanLicenseTypeId").text(dataObject.AccrualType);
        if (dataObject.AccrualType == "" || dataObject.AccrualType == "NO") {
            $("#spanLicenseTypeBalance").text("N/A");
            return;
        }
        $.ajax({
            url: "/EmployeeTimeOffRequest/AjaxGetTimeOffDetail",
            type: "POST",
            data: JSON.stringify(dataObject),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                debugger;
                if (data.status == "Success") {
                    console.log(data.timeOffTypeData);
                    $("#spanLicenseTypeBalance").text(data.timeOffTypeData.Balance + " Hrs");

                }
                else if (data.status == "Error") {

                    showAlertAutoHide("", "Error", data.message);
                }

            }
            ,
            error: function (data) {
                showAlertAutoHide("", "Error", data.message);

            }
        });
    }
    function getTimeOffCalculationDetail() {
        debugger;
        $("#divRefreshingDetail").show();
        $("#spanLessTimeAlert").hide();
        $("#spanLessRangeAlert").hide();
        var dataObject = new Object();
        dataObject.UserInformationId = $('#UserInformationId').val();
        dataObject.EmployeeId = $('#EmployeeId').val();
        dataObject.AccrualType = $('#TimeOffTypeId').val();
        dataObject.StartDate = $('#StartDate').val();
        dataObject.EndDate = $('#EndDate').val();
        dataObject.DayHours = $('#DayHours').val();
        if (dataObject.AccrualType == "" ) {
            return;
        }
        $.ajax({
            url: "/EmployeeTimeOffRequest/AjaxGetTimeOffCalculation",
            type: "POST",
            data: JSON.stringify(dataObject),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                debugger;
                if (data.status == "Success") {
                    console.log(data.timeOffCalcData);
                    //$("#spanLicenseTypeBalance").text(data.timeOffTypeData.Balance + " Hrs");
                    $("#WorkDays").val(data.timeOffCalcData.WorkingDays);
                    $("#RequestedTime").val(data.timeOffCalcData.RequestedTime);
                    if (data.timeOffCalcData.WorkingDays <= 0) {
                        $("#spanLessRangeAlert").show();
                    }
                    if (dataObject.AccrualType == "NO") {
                        $("#RemainingTime").val("N/A");
                    }
                    else {
                        $("#RemainingTime").val(data.timeOffCalcData.RemainingTime);
                        if (data.timeOffCalcData.RemainingTime < 0) {
                            $("#spanLessTimeAlert").show();
                            // $("#btnSaveTimeOffRequest").attr("disabled", true);
                            enableRequestSubmission(false)
                        }
                        else {
                           // $("#btnSaveTimeOffRequest").removeAttr("disabled");
                            enableRequestSubmission(true)
                        }
                    }
                    $("#divRefreshingDetail").hide();
                }
                else if (data.status == "Error") {

                    showAlertAutoHide("", "Error", data.message);
                }

            }
            ,
            error: function (data) {
                showAlertAutoHide("", "Error", data.message);

            }
        });
    }
    function getTimeOffTypeDocumentList(timeOffTypeName) {
        debugger;
        $.ajax({
            type: "GET",
            url: '/EmployeeTimeOffRequestDocument/GetTimeOffTypeDocument',
            data: { "timeOffTypeName": timeOffTypeName },
            success: function (data) {
                debugger;
                $("#divTimeOffTypeDocument").html(data);

            },
            error: function () {
            }
        });
    }
    function enableRequestSubmission(isEnabled) {
        if (!isEnabled) {
            
            $("#btnSaveTimeOffRequest").attr("disabled", true);
            $("#divSubmissionAlert").show();
        }
        else {
            $("#btnSaveTimeOffRequest").removeAttr("disabled");
            $("#divSubmissionAlert").hide();
        }
    }
</script>


