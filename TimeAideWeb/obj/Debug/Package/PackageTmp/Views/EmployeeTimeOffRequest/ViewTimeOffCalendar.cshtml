<script>
        var calendarMonthsList = [];
        var currentMonthIndex = 0;
        var totalCalendarMonths = 0;
        $(document).ready(function () {
            debugger;
            calendarMonthsList = $("#CalendarMonths").val().split(",");
            totalCalendarMonths = calendarMonthsList.length;

            applyDatePickerRange();
            populateRequiredFields();
            initCalendarRendering();


            $("#TimeOffStartDate").change(function () {
                var startDate = new Date($(this).val());
                $("#TimeOffEndDate").datepicker('setDate', startDate);
                //getTimeOffCalculationDetail();
                initCalendarRendering();
            });
            $("#TimeOffEndDate").change(function () {
                debugger;
                var endDate = new Date($(this).val());
                var startDate = new Date($("#TimeOffStartDate").val());
                if (endDate < startDate) {
                    $(this).datepicker('setDate', startDate);
                }
                //getTimeOffCalculationDetail();
                initCalendarRendering();
            });

        });
        function applyTimeoffChanges() {
            var startDate = new Date($("#TimeOffStartDate").val());
            var endDate = new Date($("#TimeOffEndDate").val());
            $("#StartDate").datepicker('setDate', startDate);
            $("#EndDate").datepicker('setDate', endDate);
            enableRequestSubmission(true);
            getTimeOffCalculationDetail();
            $("#timeOffCalendar_modal").modal("hide");    

        }
        function setCalendarMonthPaging() {
            $("#navPrev").removeClass("disabled");
            $("#navNext").removeClass("disabled");
            if (currentMonthIndex == 0) {
                $("#navPrev").addClass("disabled");
            }
            else if (currentMonthIndex == (totalCalendarMonths - 1)) {
                $("#navNext").addClass("disabled");
            }
            else if (currentMonthIndex == (totalCalendarMonths - 1) && currentMonthIndex == 0) {
                $("#navPrev").addClass("disabled");
                $("#navNext").addClass("disabled");
            }
        }

        function populateRequiredFields() {
            var startDate = new Date($("#StartDate").val());
            var endDate = new Date($("#EndDate").val());
            $("#TimeOffStartDate").datepicker('setDate', startDate);
            $("#TimeOffEndDate").datepicker('setDate', endDate);
            $("#WorkDaysInRange").val($("#WorkDays").val());
            $("#transTypeName").text($("#TimeOffTypeId option:selected").text());
            $("#TimeOffDayHours").val($("#DayHours").val());
        }

        function findMonthByIndex(val) {

            var inexOfMonth = calendarMonthsList.findIndex(function (mVal) {
                return mVal == val
            });
            return inexOfMonth;
        }
        function showTimeOffCalendarMonth(navType) {
            switch (navType) {
                case 'p':
                    currentMonthIndex--;
                    break;
                case 'n':
                    currentMonthIndex++;
                    break;
            }
            setCalendarMonthPaging();
            renderTimeOffCalendarMonth();
        }
