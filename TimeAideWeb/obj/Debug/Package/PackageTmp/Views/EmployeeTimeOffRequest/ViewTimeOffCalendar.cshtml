    function renderTimeOffCalendarMonth()
    {
        $(".loading").hide();
        debugger;
        var dataObject = new Object();
        
        dataObject.UserInformationId = $('#UserInformationId').val();
        dataObject.EmployeeId = $('#EmployeeId').val();
        dataObject.AccrualType = $('#TimeOffTypeId').val();
        dataObject.TimeOffStartDate = $("#TimeOffStartDate").val();
        dataObject.TimeOffEndDate = $("#TimeOffEndDate").val();
        dataObject.TimeOffDayHours = $("#TimeOffDayHours").val();
        if (currentMonthIndex >= 0 && currentMonthIndex < totalCalendarMonths) {
            var renderMonthData = calendarMonthsList[currentMonthIndex].split("_");
            dataObject.RenderYear = renderMonthData[0];
            dataObject.RenderMonth = renderMonthData[1];
        }
      
            $.ajax({
            type: "POST",
                url: '/EmployeeTimeOffRequest/AjaxRenderCalendarMonth',
            data: JSON.stringify(dataObject),

            contentType: "application/json; charset=utf-8",
            success: function (data) {
                debugger;
                $("#calendar").html(data);              
            },
            error: function () {
                 alert(data.ErrorMessage);
            }
        });
    }
    function initCalendarRendering() {

        var timeoffStartDate = new Date($("#TimeOffStartDate").val());
        var currentMonth = timeoffStartDate.getFullYear() + '_' + (timeoffStartDate.getMonth() + 1);
        currentMonthIndex = findMonthByIndex(currentMonth);
        // debugger;
        setCalendarMonthPaging();
        renderTimeOffCalendarMonth();

    }
