@model TimeAide.Web.Models.AppraisalSkill

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.Partial("_CreatePageTitleView")

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.SkillName, htmlAttributes: new { @class = "control-label" })

            @Html.EditorFor(model => model.SkillName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SkillName, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.SkillDescription, htmlAttributes: new { @class = "control-label" })

            @Html.EditorFor(model => model.SkillDescription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SkillDescription, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.AppraisalRatingScaleId, htmlAttributes: new { @class = "control-label" })

            @Html.DropDownList("AppraisalRatingScaleId", null, "Please select", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AppraisalRatingScaleId, "", new { @class = "text-danger" })

        </div>
    </div>
    @Html.Partial("_CreatePageFooterView")
</div>
}

<script>
    $(document).ready(function () {
        $("#chkAllCompanies").change(function () {
            debugger;
            var IsAllCmp = $(this).is(":checked");
            LoadAppraisalSkillRating(IsAllCmp, '#AppraisalRatingScaleId', null)
        });
    })
</script>