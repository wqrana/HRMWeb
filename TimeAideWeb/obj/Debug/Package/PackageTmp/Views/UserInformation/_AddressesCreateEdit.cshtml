

<div id="addresses_info_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Address(es) Information</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                
                    <div class="card">
                        <div class="card-body">
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Address Type <span class="text-danger">*</span></label>
                                        <select id="addressType" class="form-control">
                                            <option>Home</option>
                                            <option>Mailing</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Address 1 <span class="text-danger">*</span></label>
                                        <input id="address1" class="form-control" type="text">
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Address 2<span class="text-danger">*</span></label>
                                        <input id="address2" class="form-control" type="text">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>City<span class="text-danger">*</span></label>
                                        <select id="addressCity" class="form-control">
                                            <option>New York</option>
                                            <option>Los Angeles</option>
                                            <option>Chicago</option>
                                            <option>Houston</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Zip Code</label>
                                        <input id="addressZipCode" class="form-control" type="text">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="submit-section mt-1">
                        <button id="btnSaveAddress" class="btn btn-primary submit-btn">Save</button>
                    </div>
                
            </div>
        </div>
    </div>
</div>

