@model TimeAide.Web.ViewModel.DashboardUserWidgetViewModel
<div class="statistics">
    <div class="row">
        <div class="col-md-4 col-4 text-center">
            <a href="javascript:getUserDashboardEmployeeList(4);">
                <div class="stats-box mb-4">
                    <p >New Hire</p>

                    <h3 class="text-primary">@Html.DisplayFor(m => m.NewHireCount)</h3>

                </div>
            </a>
        </div>
        <div class="col-md-4 col-4 text-center">
            <a href="javascript:getUserDashboardEmployeeList(5);">
                <div class="stats-box mb-4">
                    <p >New Inactive </p>
                    <h3 class="text-warning">@Html.DisplayFor(m => m.NewInactiveCount)</h3>
                </div>
            </a>
        </div>
        <div class="col-md-4 col-4 text-center">
            <a href="javascript:getUserDashboardEmployeeList(6);">
                <div class="stats-box mb-4">
                    <p >New Closed</p>
                    <h3 class="text-danger">@Html.DisplayFor(m => m.NewClosedCount)</h3>
                </div>
            </a>
        </div>
    </div>
</div>
<div class="progress mb-4">
    <div class="progress-bar bg-primary" role="progressbar" style="width: @Model.NewHirePct%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">@Model.NewHirePct%</div>
    <div class="progress-bar bg-warning" role="progressbar" style="width: @Model.NewInactivePct%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">@Model.NewInactivePct%</div>
    <div class="progress-bar bg-danger" role="progressbar" style="width: @Model.NewClosedPct%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"> @Model.NewClosedPct%</div>

</div>
<div class="statistics">
    <div class="row">
        <div class="col-md-4 col-4 text-center">
            <a href="javascript:getUserDashboardEmployeeList(0);">
                <div class="stats-box mb-4">
                    <p>Active Emp.</p>

                    <h3 class="text-success">@Html.DisplayFor(m => m.ActiveUserCount)</h3>

                </div>
            </a>
        </div>
        <div class="col-md-4 col-4 text-center">
            <a href="javascript:getUserDashboardEmployeeList(2);">
                <div class="stats-box mb-4">
                    <p>Inactive Emp. </p>
                    <h3 class="text-warning">@Html.DisplayFor(m => m.InactiveUserCount)</h3>
                </div>
            </a>
        </div>
        <div class="col-md-4 col-4 text-center">
            <a href="javascript:getUserDashboardEmployeeList(3);">
                <div class="stats-box mb-4">
                    <p>Closed Record</p>
                    <h3 class="text-danger">@Html.DisplayFor(m => m.ClosedRecordCount)</h3>
                </div>
            </a>
        </div>
    </div>
</div>
<div class="progress mb-4">
    <div class="progress-bar bg-success" role="progressbar" style="width: @Model.ActiveUserPct%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">@Model.ActiveUserPct%</div>
    <div class="progress-bar bg-warning" role="progressbar" style="width: @Model.InactiveUserPct%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">@Model.InactiveUserPct%</div>
    <div class="progress-bar bg-danger" role="progressbar" style="width: @Model.ClosedRecordPct%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"> @Model.ClosedRecordPct%</div>

</div>

<div>
        <p><i class="fa fa-user-o text-success mr-2"></i>Hiring Ratio <span class="float-right">@Html.DisplayFor(m => m.HiringRatio)%</span></p>
        <p><i class="fa fa-user-o text-info mr-2"></i>Turn Over Ratio <span class="float-right">@Html.DisplayFor(m => m.TurnoverRatio)%</span></p>
        

    </div>