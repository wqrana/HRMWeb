
<div id="emergency_contact_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Emergeny Information</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
               
                    <div class="card">
                        <div class="card-body">
                              <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Contact Person <span class="text-danger">*</span></label>
                                        <input id="EmerContPerson" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Relationship <span class="text-danger">*</span></label>
                                        <select id="EmerContRelationship" class="form-control">
                                            <option>Father</option>
                                            <option>Brother</option>
                                            <option>Sister</option>
                                            <option>Mother</option>
                                            <option>Other</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Primary <span class="text-danger">*</span></label>
                                        <select id="EmerContPrimary" class="form-control">
                                            <option>Yes</option>
                                            <option>No</option>
                                        </select>
                                    </div>
                                                                      
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Main Number<span class="text-danger">*</span></label>
                                        <input id="EmerMainNumber" class="form-control" type="text">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Alternate Number</label>
                                        <input id="EmerMainAlt" class="form-control" type="text">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="submit-section mt-1">
                        <button id="btnSaveEmergencyContact" class="btn btn-primary submit-btn">Save</button>
                    </div>
                
            </div>
        </div>
    </div>
</div>
