@model TimeAide.Web.Models.UserInformation
<div id="employee_Contact_Number_modal" class="modal custom-modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document" style="max-width:1300px">
        <div class="modal-content" style="padding:10px">
            <div class="modal-header alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;padding:10px">
                <h4 class="modal-title">Emails & Numbers : Change Request</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    @if (Model.ActiveUserContactInformation != null)
                    {
                        <div class="form-group row" style="margin-left: 0px !important; margin-right: 0px !important;">
                            <div class="panel panel-default" style="width:100%;">
                                <div class="panel-heading" style="padding-left:10px">Telephone Numbers</div>
                                <div class="panel-body">
                                    <div class="form-group row">
                                        <label class="col-md-2 col-form-label" style="margin-left:10px">
                                            @Html.LabelFor(model => model.ActiveUserContactInformation.HomeNumber, "Home:", htmlAttributes: new { @class = "control-label" })
                                        </label>
                                        <div class="col-md-3 text-muted mt-2">
                                            @Html.EditorFor(model => model.ActiveUserContactInformation.HomeNumber, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ActiveUserContactInformation.HomeNumber, "", new { @class = "text-danger" })
                                        </div>

                                        <label class="col-md-2 col-form-label" style="margin-left:10px">
                                            Mobile:
                                        </label>
                                        <div class="col-md-3 text-muted mt-2">
                                            @Html.EditorFor(model => model.ActiveUserContactInformation.CelNumber, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ActiveUserContactInformation.CelNumber, "", new { @class = "text-danger" })
                                        </div>

                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-2 col-form-label" style="margin-left:10px">
                                            Fax:
                                        </label>
                                        <div class="col-md-3 text-muted mt-2">
                                            @Html.EditorFor(model => model.ActiveUserContactInformation.FaxNumber, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ActiveUserContactInformation.FaxNumber, "", new { @class = "text-danger" })
                                        </div>

                                        <label class="col-md-2 col-form-label" style="margin-left:10px">
                                            Other:
                                        </label>
                                        <div class="col-md-3 text-muted mt-2">
                                            @Html.EditorFor(model => model.ActiveUserContactInformation.OtherNumber, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ActiveUserContactInformation.OtherNumber, "", new { @class = "text-danger" })
                                        </div>

                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-2 col-form-label" style="margin-left:10px">
                                            Work:
                                        </label>
                                        <div class="col-md-3 text-muted mt-2">
                                            @Html.EditorFor(model => model.ActiveUserContactInformation.WorkNumber, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ActiveUserContactInformation.WorkNumber, "", new { @class = "text-danger" })
                                        </div>

                                        <label class="col-md-2 col-form-label" style="margin-left:10px">
                                            Work Ext.:
                                        </label>
                                        <div class="col-md-3 text-muted mt-2">
                                            @Html.EditorFor(model => model.ActiveUserContactInformation.WorkExtension, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ActiveUserContactInformation.WorkExtension, "", new { @class = "text-danger" })
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row" style="margin-left: 0px !important; margin-right: 0px !important;">
                            <div class="panel panel-default" style="width:100%;margin-left:10px">
                                <div class="panel-heading" style="padding-left:10px">Emails</div>
                                <div class="panel-body">
                                    <div class="form-group row">
                                        <label class="col-md-2 col-form-label" style="margin-left:10px">
                                            @Html.LabelFor(model => model.ActiveUserContactInformation.WorkEmail, "Work:", htmlAttributes: new { @class = "control-label" })
                                        </label>
                                        <div class="col-lg text-muted mt-2" style="width:100% !important">
                                            @Html.EditorFor(model => model.ActiveUserContactInformation.WorkEmail, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ActiveUserContactInformation.WorkEmail, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-2 col-form-label" style="margin-left:10px">
                                            Personal
                                        </label>
                                        <div class="col-lg text-muted mt-2">
                                            @Html.EditorFor(model => model.ActiveUserContactInformation.PersonalEmail, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ActiveUserContactInformation.PersonalEmail, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-2 col-form-label" style="margin-left:10px">
                                            Other
                                        </label>
                                        <div class="col-lg text-muted mt-2">
                                            @Html.EditorFor(model => model.ActiveUserContactInformation.OtherEmail, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ActiveUserContactInformation.OtherEmail, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <div>
                        @if (ViewBag.CanNumberWorkflowIntiated.Count > 0)
                        {
                            <div style="color:red">
                                Change request can not be submitted due to following reasons:
                            </div>
                            foreach (var each in ViewBag.CanNumberWorkflowIntiated)
                            {
                                <div style="color:red">
                                    @each
                                </div>
                            }
                        }
                    </div>
                    <div class="submit-section">
                        @if (ViewBag.CanNumberWorkflowIntiated.Count == 0)
                        {
                            <button type="button" id="btnAddUserContactInformation" onclick="btnSaveNumbersAndEmails()" class="btnAddUserContactInformation btn btn-primary submit-btn">Submit</button>
                        }
                        <button type="button" class="btn btn-primary submit-btn" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
