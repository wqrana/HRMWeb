    .dropdown-submenu {
        position: relative;
    }

        .dropdown-submenu .dropdown-menu {
            top: 0;
            left: 100%;
            margin-top: -1px;
        }

    .flag-nav .dropdown-menu {
        max-height: 250px;
        min-width: 120px;
        overflow-y: auto;
    }
</style>
