    @RenderSection("scripts", required: false)
</head>
<body>
    <!-- Main Wrapper -->
    <div class="main-wrapper">
        <!-- Header Menu -->
        @Html.Partial("_HeaderBar")
        <!-- Sidebar -->
        @if (Request.IsAuthenticated)
        {

            @Html.Partial("_SideBar")
        }
        <!-- Page Wrapper -->
        <div class="page-wrapper">
            <!-- Page Content -->
            <div class="content container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <div id='myModal' class='modal'>
        <div id='myModaldialog' class="modal-dialog">
            <div class="modal-content">
                <div id='myModalContent'></div>
            </div>
        </div>
    </div>

    <div id='divDdlPopup' class='modal control'>
        <div class="modal-dialog" id="divDdlPopupdialog">
            <div class="modal-content">
                <div id='divDdlPopupContent'></div>
            </div>
        </div>
    </div>
    <div id="divAdhocReportPopup">
    </div>
    @*<!-- Bootstrap Core JS -->
        <script src="/content/Themes/assets/js/popper.min.js"></script>
