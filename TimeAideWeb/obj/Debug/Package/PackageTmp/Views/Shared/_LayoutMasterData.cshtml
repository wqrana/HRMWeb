    <script>
        function ClosePopup() {
            alert($(this).closest('.modal').html());
            $(this).closest('.modal').modal('hide');
        }
        function AddToDropDown(controllerName, id) {
            var $buttonClicked = $(this);
            //var id = $buttonClicked.attr('data-id');
            debugger
            //alert(id);
            var options = { "backdrop": "static", keyboard: true };
            $.ajax({
                type: "GET",
                url: '/' + controllerName + '/Create',
                contentType: "application/json; charset=utf-8",
                datatype: "json",
                success: function (data) {
                    //debugger;
                    $("#divDdlPopup").clone().attr("id", 'divDdlPopup' + controllerName).appendTo("body");
                    /*$('#divDdlPopupContent').html(data);*/
                    $('#divDdlPopup' + controllerName).find('#divDdlPopupContent').html(data);
                    $('#divDdlPopup' + controllerName).modal(options);
                    debugger
                    $('#divDdlPopup' + controllerName).modal('show');
                    $('#divDdlPopup' + controllerName).find("#popupTargetDdl").val(id);
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                    alert("Dynamic content load failed.");
                }
            });
        }
    </script>
</body>
</html>
<script type="text/javascript">
    var idleTime = 0;
    var isActive = false;
    $(document).ready(function () {
        //Increment the idle time counter every minute.
        var idleInterval = setInterval(timerIncrement, 60000); // 1 minute
        //Zero the idle timer on mouse movement.
        $(this).mousemove(function (e) {
            idleTime = 0;
            isActive = true;
        });
        $(this).keypress(function (e) {
            idleTime = 0;
            isActive = true;
        });
        var chat = $.connection.authHub;
        chat.client.Signout = function () {
            window.location.href = '@Url.Action("Login", "Account")';
        };
        chat.client.Redirect = function (redirectEmail) {
            window.location.href = '@Url.Action("Login1", "Account")';
        };
        $.connection.hub.start().done(function () {
            chat.server.forceRedirect1('@TimeAide.Common.Helpers.SessionHelper.PreviousLoginEmail', '@TimeAide.Common.Helpers.SessionHelper.CurrentBowser');
            chat.server.forceRedirect('@TimeAide.Common.Helpers.SessionHelper.LoginEmail', '@TimeAide.Common.Helpers.SessionHelper.CurrentBowser');
            function PopulateActiveUsers() {
                debugger;
                $("#usersTable").empty();
                chat.server.getConnectedUsers(@TimeAide.Common.Helpers.SessionHelper.SelectedCompanyId).done(function (users) {
                    $.each(users, function (i, username) {
                        $("#usersTable").append("<tr><th scope='row'>" + (i + 1) + "</th><td>" + username + "</td><td><a href='javascript:void(0)' data-user='" + username + "' class='btn btn-primary btn-sm btn-logout'>Logout User</a></td></tr>");
                    });
                });
            }
            $("#displayActiveUsers").on("click", function () {
                PopulateActiveUsers();
            });
            $('body').on('click', 'a.btn-logout', function () {
                var username = $(this).attr('data-user');
                chat.server.forceLogOut(username, 'All', 'AdminPanel');
            });
        });
        function timerIncrement() {
            debugger
            // alert('auto!');
            idleTime = idleTime + 1;
            @* chat.server.send_PrivateMessage($("#spnName").text(), $('#ChatMessageText').val(), $("#OtherParticipantId").val(), '@Model.Id');*@
            chat.server.updateUserActivity(isActive,'@TimeAide.Common.Helpers.SessionHelper.CurrentBowser');
            isActive = false;
            @*if (idleTime > 15) { // 15 minutes
                //window.location.reload();
                window.location.href = '@Url.Action("Login", "Account")';
            }*@
        }
    });
    </script>
