
@model TimeAide.Web.Models.CompanyConfigurableLink

<div id="AddEdit_CmpConfigurableLink_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">

            <div class="mt-2 p-2 mt-0">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;">Add/Edit - Link</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body pt-0">
                <div class="row">
                    <div class="col-md-12">
                        @Html.HiddenFor(m => m.Id, new { id = "ConfigurableLinkId" })
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Link Name:<span class="text-danger">*</span></label>
                            <div class="col-md-9 pl-0">
                                @Html.EditorFor(m => m.LinkName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">URL:<span class="text-danger">*</span></label>
                            <div class="col-md-9 pl-0">
                                @Html.EditorFor(m => m.LinkURL, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">All-Companies:<span class="text-danger"></span></label>
                            <div class="col-md-9 pl-0 pt-2">
                                @Html.EditorFor(m => m.IsAllCompanies, new { htmlAttributes = new { @class = "", id = "IsAllCompaniesCCL" } })
                            </div>
                        </div>
                    </div>
                </div>


            </div>

            <div class="submit-section pb-2 mt-0">

                <button id="btnSaveConfigurableLink" class="btn btn-primary submit-btn">Save</button>
                <button id="btnCancel" class="btn btn-primary  submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
            </div>

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        $('#btnSaveConfigurableLink').click(function () {           
            saveCompanyConfigurableLinkData();
        });
    })
</script>

