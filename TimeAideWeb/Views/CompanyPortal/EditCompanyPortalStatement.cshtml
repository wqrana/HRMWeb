                            <label class="col-md-2 col-form-label pr-0 pl-0">Portal Statement:<span class="text-danger">*</span></label>
                            <div class="col-md-10">
                                @Html.TextAreaFor(m => m.PortalWelcomeStatement, new {
                                rows = "5", style = "resize:none;width:500px;", @class = "form-control richtext-editor"
                                })
                            </div>

                        </div>
                        <div class="form-group row mb-0">
                            <label class="col-form-label col-md-2 pr-0">Default Statmt: <span class="text-danger"></span></label>

                            <div class="col-md-2 pt-2">
                                <input class="" type="checkbox" id="IsDefaultCompanyPortalStatementEdit">
                            </div>
                        </div>

                    </div>
                </div>
                @*<button id="btnFirstName" class="click-me">[FirstName]</button>
                <span class="click-me">Click ME </span>*@

            </div>

            <div class="submit-section pb-2 mt-0">

