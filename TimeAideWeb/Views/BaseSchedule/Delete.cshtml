@model TimeAide.Web.Models.BaseSchedule

@{
    ViewBag.Label = "Accrual Rule";
}
<div id="baseScheduleDelete_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            @Html.Partial("_DeleteViewHeader")

            <div class="modal-body pt-0">

                @Html.HiddenFor(model => model.Id, new { id = "BaseScheduleDeleteId" })

                <div class="form-group row">
                    <div class="panel panel-default" style="width:100%;margin-left:10px">
                        <div class="panel-heading" style="padding-left:10px">Base Schedule Information</div>
                        <div class="panel-body">
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label">Name: <span class="text-danger"></span></label>
                                <div class="col-md-4 text-muted mt-2">
                                    @Html.DisplayFor(model => model.Name)
                                </div>
                                <label class="col-md-2 col-form-label">Description: <span class="text-danger"></span></label>
                                <div class="col-md-4 text-muted mt-2">
                                    @Html.DisplayFor(model => model.Description)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-2 col-form-label pr-0 ml-1">Punch:</label>
                                <div class="col-md-4 text-muted mt-2">

                                    @Html.DisplayFor(m => m.NoOfPunch)
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
                <div class="submit-section mt-1">

                    <button id="btnDeleteBaseSchedule" class="btn btn-danger submit-btn">Delete</button>
                    <button id="btnCancel" class="btn btn-danger submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#btnDeleteBaseSchedule").click(function () {
            var id = $("#BaseScheduleDeleteId").val();
            deleteBaseSchedule(id);
        })

    } );
</script>


