@model TimeAide.Web.Models.EmployeeFutureSchedule

@{
    ViewBag.Label = "Future Schedule";
}
<div id="futureScheduleDelete_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            @Html.Partial("_DeleteViewHeader")

            <div class="modal-body pt-0">

                @Html.HiddenFor(model => model.Id, new { id = "FutureScheduleDeleteId" })

                <div class="form-group row">
                    <div class="panel panel-default" style="width:100%;margin-left:10px">
                        <div class="panel-heading" style="padding-left:10px">Future Schedule Information</div>
                        <div class="panel-body">
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label pr-1">Start Date: <span class="text-danger"></span></label>
                                <div class="col-md-3 text-muted mt-2">
                                    @Html.DisplayFor(model => model.StartDate)
                                </div>
                                <label class="col-md-2 col-form-label">Schedule: <span class="text-danger"></span></label>
                                <div class="col-md-5 text-muted mt-2">
                                    @Html.DisplayFor(model => model.BaseSchedule.Name)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-2 col-form-label pr-0 ml-1">Note:</label>
                                <div class="col-md-9 text-muted mt-2">

                                    @Html.DisplayFor(m => m.Note)
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
                <div class="submit-section mt-1">

                    <button id="btnDeleteFutureSchedule" class="btn btn-danger submit-btn">Delete</button>
                    <button id="btnCancel" class="btn btn-danger submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#btnDeleteFutureSchedule").click(function () {
            var id = $("#FutureScheduleDeleteId").val();
            deleteFutureSchedule(id);
        })

    } );
</script>


