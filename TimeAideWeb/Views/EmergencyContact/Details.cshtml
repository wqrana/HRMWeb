@model TimeAide.Web.Models.EmergencyContact

    <div>
        <h4>Emergency Contact</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Relationship.RelationshipName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Relationship.RelationshipName)
            </dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ContactPersonName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ContactPersonName)
            </dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.IsDefault)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsDefault)
            </dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.MainNumber)
            </dt>

            <dd>
                @if (!String.IsNullOrEmpty(Model.MainNumber) && Model.MainNumber.Trim().Length == 10)
                {
                    @String.Format("({0}) {1}-{2}", Model.MainNumber.Substring(0, 3), Model.MainNumber.Substring(3, 3), Model.MainNumber.Substring(6, 4))
                }
                else
                {
                    @Model.MainNumber
                }
            </dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.AlternateNumber)
            </dt>

            <dd>
                @if (!String.IsNullOrEmpty(Model.AlternateNumber) && Model.AlternateNumber.Trim().Length == 10)
                {
                    @String.Format("({0}) {1}-{2}", Model.AlternateNumber.Substring(0, 3), Model.AlternateNumber.Substring(3, 3), Model.AlternateNumber.Substring(6, 4))
                }
                else
                {
                    @Model.AlternateNumber
                }
            </dd>

        </dl>
    </div>
    <p>
        <button type="submit" class="btn btn-primary submit-btn" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
    </p>
