@model TimeAide.Web.Models.EmployeeDependent
@{
    ViewBag.Label = "Employee Dependent";
}
<div id="employeeDependentDelete_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            @Html.Partial("_DeleteViewHeader")
           
            <div class="modal-body pt-0">

                <div class="alert" style="display:none;" id="employeeDependentDeleteAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                @Html.Hidden("EmployeeDependentDeleteId", Model == null ? 0 : Model.Id)
                @Html.HiddenFor(model => model.UserInformationId)
                <div class="form-group row">
                    <div class="col-md-12 p-0">
                        <div class="panel panel-default" style="margin-left:5px">
                            <div class="panel-heading" style="padding-left:0px">Dependent Information</div>
                            <div class="panel-body">

                                <div class="form-group row">
                                    <label class="col-md-2 col-form-label" style="margin-left:0px">First Name:</label>
                                    <div class="col-md-4 text-muted mt-2">
                                        @Html.DisplayFor(m => m.FirstName)
                                    </div>
                                    <label class="col-md-2 col-form-label">Last Name:</label>
                                    <div class="col-md-4 text-muted mt-2">
                                        @Html.DisplayFor(m => m.LastName)

                                    </div>
                                   
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-2 col-form-label" style="margin-left:0px">Birth Date:</label>
                                    <div class="col-md-4 text-muted mt-2">
                                        @if (Model != null)
                                        {
                                            @String.Format("{0:MM/dd/yyyy}", Model.BirthDate);
                                        }
                                    </div>
                                    <label class="col-md-2 col-form-label">Gender:</label>
                                    <div class="col-md-4 text-muted mt-2">
                                        @Html.DisplayFor(m => m.Gender.GenderName)
                                    </div>
                                   

                                </div>
                                <div class="form-group row">
                                    <label class="col-md-2 col-form-label">Relationship:</label>
                                    <div class="col-md-4 text-muted mt-2">
                                        @Html.DisplayFor(m => m.Relationship.RelationshipName)

                                    </div>
                                    <label class="col-md-2 col-form-label" style="margin-left:0px">Status:</label>
                                    <div class="col-md-4 text-muted mt-2">
                                        @Html.DisplayFor(m => m.DependentStatus.StatusName)
                                    </div>
                                                                   
                                </div>                                   

                            </div>

                        </div>

                    </div>
                </div>


            </div>
                <div style="margin-bottom:20px;" class="submit-section mt-1">

                    <button id="btnDeleteEmployeeDependent" class="btn btn-danger submit-btn">Delete</button>
                    <button id="btnCancel" class="btn btn-danger submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>
            </div>
        </div>
    </div>

<script>
    $(document).ready(function () {
        $("#btnDeleteEmployeeDependent").click(function () {
            var id = $("#EmployeeDependentDeleteId").val();
            deleteUserDependent(id);
        })

    } );
</script>

