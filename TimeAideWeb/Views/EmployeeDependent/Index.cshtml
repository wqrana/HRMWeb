@model IEnumerable<TimeAide.Web.Models.EmployeeDependent>
<h4 class="pull-left"> Dependent List</h4>
<div class="table-responsive">
    <table class="table table-striped custom-table table-nowrap mb-0">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Date Birth

                </th>
                <th>
                    Gender
                </th>
                <th>
                    Relationship
                </th>
                <th>
                    Status
                </th>
                <th>
                    Document
                </th>

                <th>
                    Expiry Date
                </th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @String.Format("{0:MM/dd/yyyy}", item.BirthDate)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender.GenderName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Relationship.RelationshipName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DependentStatus.StatusName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocName)
                </td>
                <td>
                    @String.Format("{0:MM/dd/yyyy}", item.ExpiryDate)
                </td>


                <td width="10%">
                    @if ((ViewBag.AllowAdd || ViewBag.AllowEdit))
                    {
                        <div class="pull-right dropdown-action">
                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                            <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">
                                <a href="javascript:createEditUserDependent(@item.Id);" class="dropdown-item" data-id="@item.Id"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                <a href="javascript:getUserDependentDetail(@item.Id);" class="dropdown-item"><i class="fa fa-eye m-r-5"></i> Details</a>
                                <a href="javascript:getUserDependentDocView(@item.Id)" class="dropdown-item"><i class="fa fa-upload m-r-5"></i> Upload Doc</a>
                                <a href="javascript:downloadUserDependentDoc(@item.Id)" class="dropdown-item"><i class="fa fa-download m-r-5"></i> Download Doc</a>
                                <a href="javascript:getUserDependentDeleteData(@item.Id);" class="dropdown-item"><i class="fa fa-trash m-r-5"></i> Delete</a>
                                @if ((bool)(ViewBag.AllowChangeHistory ?? false))
                                {
                                    <a href="javascript:void(0);" id="anchorChangeHistory" onclick="ShowChangeHistory(@item.Id,'@ViewBag.FormName')" class="dropdown-item" data-id="@item.Id"><i class="fa fa-pencil m-r-5"></i> Change History</a>
                                    @*<a href="javascript:void(0);" class="anchorEdit" data-id="@Model.Id">Edit</a>*@
                                }
                            </div>
                        </div>
                    }
                </td>
            </tr>
        }

    </table>
</div>