@model TimeAide.Web.Models.Position

@{
    ViewBag.Label = "Position";
}
<div id="positionDelete_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            @Html.Partial("_DeleteViewHeader")
            
            <div class="modal-body pt-0">

                <div class="alert" style="display:none;" id="positionDeleteAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                @Html.HiddenFor(model => model.Id, new { id = "PositionDeleteId" })
               
                <div class="form-group row">
                    <div class="panel panel-default" style="width:100%;margin-left:10px">
                        <div class="panel-heading" style="padding-left:10px">Position Information</div>
                        <div class="panel-body">
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">Position: <span class="text-danger"></span></label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.PositionName)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">Description: <span class="text-danger"></span></label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.PositionDescription)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">Position Code: <span class="text-danger"></span></label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.PositionCode)
                                </div>
                            </div>
                            
                        </div>
                    </div>
                                       
                </div>
                <div class="submit-section mt-1">

                    <button id="btnDeletePosition" class="btn btn-danger submit-btn">Delete</button>
                    <button id="btnCancel" class="btn btn-danger submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#btnDeletePosition").click(function () {
            var id = $("#PositionDeleteId").val();
            deletePosition(id);
        })

    } );
</script>

