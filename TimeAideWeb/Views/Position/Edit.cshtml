@model TimeAide.Web.Models.Position

<div id="positionCreateEdit_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">

            <div class="mt-2 p-1">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;">Position - Edit</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body pt-0">

                <div class="alert" style="display:none;" id="positionCreateEditAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                <div class="row">

                    <div class="col-md-12">
                        @Html.HiddenFor(m => m.Id, new { id = "PositionId" })

                        <div class="form-group row">
                            <label class="col-md-4 col-form-label">Position: <span class="text-danger">*</span></label>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.PositionName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label">Description: <span class="text-danger"></span></label>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.PositionDescription, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label">Position Code: <span class="text-danger"></span></label>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.PositionCode, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label">Default Pay-Scale: <span class="text-danger"></span></label>
                            <div class="col-md-8">
                                <div class="input-group">
                                    @Html.DropDownList("DefaultPayScaleId", null, "Please select", new { @class = "form-control" })
                                    <div class="input-group-append">
                                        <button class="btn btn-secondary btn-master-data" type="button">+</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label">Default EEO-Category: <span class="text-danger"></span></label>
                            <div class="col-md-8">
                                <div class="input-group">
                                    @Html.DropDownList("DefaultEEOCategoryId", null, "Please select", new { @class = "form-control" })
                                    <div class="input-group-append">
                                        <button class="btn btn-secondary btn-master-data" type="button">+</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label">All Companies: <span class="text-danger"></span></label>

                            <div class="col-md-8 pt-2">
                                @if (ViewBag.CanBeAssignedToCurrentCompany)
                                {
                                    @Html.CheckBoxFor(model => model.IsAllCompanies, new { id = "IsAllCompaniesAE" })
                                }
                                else
                                {
                                    @Html.CheckBoxFor(model => model.IsAllCompanies, new { id = "IsAllCompaniesAE", @disabled= "disabled" })                                   
                                }
                            </div>
                        </div>

                    </div>
                </div>
                <div class="submit-section mt-1">
                    <button id="btnSavePosition" class="btn btn-primary submit-btn">Save</button>
                    <button id="btnCancel" class="btn btn-primary  submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        //popup master data
        $(".btn-master-data").click(function () {
            debugger;
            var masterDataDdl = $(this).parents("div.input-group")
                .find("select")
                .first();
            var id = $(masterDataDdl)[0].id;
            $(masterDataDdl)[0].id = id.substring(7, id.length);
            openMasterDataPopUp(masterDataDdl);
            setTimeout(function () { $(masterDataDdl)[0].id = id; }, 1000);
        }); 

        $("#btnSavePosition").click(function () {
            savePositionData();
        });


    });

</script>


