@model IEnumerable<TimeAide.Web.Models.Position>
<h4 class="pull-left">Position List</h4>
<div style="font-size: 90%;">
    <div class="table-responsive">
        <table class="table table-striped custom-table table-nowrap mb-0" id="tblPosition">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>
                        Position
                    </th>
                    <th>
                        Position-Code
                    </th>
                    <th>
                        PayScale
                    </th>
                    <th>
                        EEOCategory
                    </th>
                    <th>Training(s)</th>
                    <th>Appaisal(s)</th>
                    <th>Credential(s)</th>
                    <th>Question(s)</th>
                    <th>@Html.DisplayNameFor(model => model.IsAllCompanies)</th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href='javascript:getPositionDetail(@item.Id)'> @Html.DisplayFor(modelItem => item.Id)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PositionName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PositionCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DefaultPayScale.PayScaleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DefaultEEOCategory.EEOCategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PositionTrainings.Count)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.PositionAppraisalTemplates.Count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PositionCredentials.Count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PositionQuestions.Count)
                    </td>
                    <td>
                        @{
                            item.IsAllCompanies = !item.CompanyId.HasValue;
                        }
                        @Html.DisplayFor(modelItem => item.IsAllCompanies)
                    </td>
                    <td width="10%">
                        <div class="pull-right dropdown-action">
                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                            <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">

                                <a href="javascript:createEditPosition(@item.Id);" class="dropdown-item" data-id="@item.Id"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                <a href="javascript:getPositionDetail(@item.Id);" class="dropdown-item"><i class="fa fa-eye m-r-5"></i> Details</a>
                                <a href="javascript:getPositionDeleteData(@item.Id);" class="dropdown-item"><i class="fa fa-trash m-r-5"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#tblPosition').dataTable({
                "searching": true,
                "order": [[0, "dsc"]]
            });
        });
    </script>
