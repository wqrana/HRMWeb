<script>
    //JS for Applicant main page
    var alertID = null;

    $(document).ready(function () {
        debugger;
        //Default User List on list view
        $("#divLoadingScheduleGrid").hide();

        $('#pickDateTime').datetimepicker({
            format: "DD/MM/YYYY hh:mm A"
        });
        //Filter table
        $("#calendarSearchTxt").on("keyup", function () {
            debugger;
            var viewTypeId = $("#ViewTypeId").val();
            var filterTable = viewTypeId == "0" ? "tblScheduleCalendar" : "tblScheduleOverview";

            var value = $(this).val().toLowerCase();
            $("#" + filterTable + ">tbody>tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });



    });
    function setScheduleView(viewTypeId) {
        $("#ViewTypeId").val(viewTypeId);
        getAttendanceSchedules();
        switch (viewTypeId) {
            case 0:
                $("#spanViewType").text("Schedule Calendar");
                break;
            case 1:
                $("#spanViewType").text("Schedule Overview");
                break;
        }
    }
    function getAttendanceSchedules() {
        $("#divLoadingScheduleGrid").show();
        debugger;
        var filterObject = new Object();
        $("#calendarSearchTxt").val("");
        filterObject.ScheduleDate = $('#ScheduleDate').val();
        filterObject.EmployeeId = $('#EmployeeId').val();
        filterObject.EmployeeName = $('#EmployeeName').val();
        filterObject.PositionId = $('#PositionId').val();
        filterObject.DepartmentId = $('#DepartmentId').val();

        filterObject.SubDepartmentId = $('#SubDepartmentId').val();
        filterObject.EmployeeTYpeId = $('#EmployeeTypeId').val();

        var viewTypeId = $("#ViewTypeId").val();
        var actionType = viewTypeId == "0" ? "GetScheduleCalendar" : "GetScheduleOverview";
        $.ajax({
            type: "POST",
            url: '/EmployeeAttendanceSchedule/' + actionType,
            data: JSON.stringify(filterObject),

            contentType: "application/json; charset=utf-8",
            success: function (data) {
                debugger;
                $("#divScheduleCalendarView").html(data);
                $("#divLoadingScheduleGrid").hide();
            },
            error: function () {
                // displayWarningMessage(data.ErrorMessage);
            }
        });
    }
    // getAttendanceScheduleDetail
    function getUserScheduleDetail(schId, companyId) {


        $.ajax({
            type: "GET",
            url: '/EmployeeAttendanceSchedule/GetUserScheduleDetail',
            data: { "schId": schId, "companyId": companyId },
            success: function (data) {
                debugger;
                $("#divViewEditScheduleDetail").html(data);
                $("#employeeViewScheduleDetail_modal").modal("show");

            },
            error: function () {
                // displayWarningMessage(data.ErrorMessage);
            }
        });
    }
    function getScheduleDetailEditData(schId, schDetailId, companyId) {
        debugger;
        $.ajax({
            type: "GET",
            url: '/EmployeeAttendanceSchedule/EditAttendenceScheduleDetail',
            data: { "schId": schId, "schDetailId": schDetailId, "companyId": companyId, "openType": "Calendar" },
            success: function (data) {
                debugger;
                $("#divViewEditScheduleDetail").html(data);
                $("#editScheduleDetail_modal").modal("show");
            },
            error: function () {
                // displayWarningMessage(data.ErrorMessage);
            }
        });
    }
    //getScheduleEditData
    function refreshCalendarView(dataObj) {
        getAttendanceSchedules();
    }
    function exportCalendarAsFile(file_type) {
        debugger
        var viewTypeId = $("#ViewTypeId").val();
        var printTable = viewTypeId == "0" ? "tblScheduleCalendarPrint" : "tblScheduleOverviewPrint";
        var printTableObj = $('#' + printTable).DataTable();

        if (file_type == 'p') {
            printTableObj.button('.buttons-pdf').trigger();
        }
        else if (file_type == 'e') {
            printTableObj.button('.buttons-excel').trigger();
        }
    }
</script>
