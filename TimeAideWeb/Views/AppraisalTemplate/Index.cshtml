                url: '/AppraisalTemplateSkill/CreateEdit',
                data: {
                    "id": templateId,
                    "selectedSkillIds": selectedSkillsStr
                },

                success: function (data) {
                    debugger;
                    //console.log(data);
                    if (data.status == "Success") {
                        $("#AppraisalTemplateSkillCreateEdit_modal").modal("hide");
                        showAlertAutoHide("#appraisalIndexPageAlert", data.status, data.message);
                        //location.reload(true);
                        getAppraisalTemplateSkillList(templateId);
