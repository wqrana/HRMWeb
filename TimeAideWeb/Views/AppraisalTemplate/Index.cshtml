                $("#divTemplateGoals").html(data);

            },
            error: function () {
                alert("Error Loading ajax getAppraisalTemplateGoalList");
            }
        });
    }

    function createEditAppraisalTemplateGoal(templateId) {
        debugger;
        alertID = "#appraisalTemplateIndexPageAlert"
        templateId = templateId == 0 ? $("#SelectedTemplateId").val() : templateId;
        if (templateId != 0) {
            $.ajax({
                type: "get",
                url: '/AppraisalTemplateGoal/CreateEdit',
                data: { "id": templateId },

                success: function (data) {
                    // debugger;
                    //console.log(data);
                    $("#divCreateEditDelPopUp").html(data);
                    $("#AppraisalTemplateGoalCreateEdit_modal").modal("show");


                },
                error: function () {
                    alert(data.ErrorMessage);
                }
            });
        }
        else {
            showAlertAutoHide(alertID, 'Error', " Please the Select Template for Add/Edit Goal(s)");
        }
    }
    function saveAppraisalTemplateGoalData(selectedGoalsStr) {
        debugger;
        alertID = "#appraisalTemplateDeleteAlert"
        var templateId = $("#SelectedTemplateId").val();
        if (templateId != 0) {
            $.ajax({
                type: "post",
                url: '/AppraisalTemplateGoal/CreateEdit',
                data: {
                    "id": templateId,
                    "selectedGoalIds": selectedGoalsStr
                    },

                success: function (data) {
                     debugger;
                    //console.log(data);
                    if (data.status == "Success") {
                        $("#AppraisalTemplateGoalCreateEdit_modal").modal("hide");
                        showAlertAutoHide("#appraisalIndexPageAlert", data.status, data.message);
                        //location.reload(true);
                        getAppraisalTemplateGoalList(templateId);
                        getAppraisalTemplateList();
                    }
                    


                },
                error: function () {
                    alert(data.ErrorMessage);
                }
            });
        }
    }
