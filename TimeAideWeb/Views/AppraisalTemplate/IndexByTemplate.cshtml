@model IEnumerable<TimeAide.Web.Models.AppraisalTemplate>
    <style>
        .table thead th {
            font-size: small;
            background-color: #d9edf7 !important;
        }

        .table tbody td {
            font-size: small;
        }
    </style>
<h4 class="pull-left"> Appraisal Template List</h4>
<div class="table-responsive">
    <table class="table table-striped custom-table table-nowrap mb-0" id="tblTemplate">
        <thead>
            <tr>
                <th>Id</th>
                <th>
                    Template Name
                </th>
                <th>
                    Goal(s)
                </th>
                <th>
                    Skill(s)
                </th>
                <th>@Html.DisplayNameFor(model => model.IsAllCompanies)</th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href='javascript:getAppraisalTemplateDetail(@item.Id)'> @Html.DisplayFor(modelItem => item.Id)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TemplateName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppraisalTemplateGoals.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppraisalTemplateSkills.Count)
                </td>
                <td>
                    @{
                        item.IsAllCompanies = !item.CompanyId.HasValue;
                    }
                    @Html.DisplayFor(modelItem => item.IsAllCompanies)
                </td>
                <td width="10%">
                    <div class="pull-right dropdown-action">
                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                        <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">

                            <a href="javascript:createEditAppraisalTemplate(@item.Id);" class="dropdown-item" data-id="@item.Id"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                            <a href="javascript:getAppraisalTemplateDetail(@item.Id);" class="dropdown-item"><i class="fa fa-eye m-r-5"></i> Details</a>
                            <a href="javascript:getAppraisalTemplateDeleteData(@item.Id);" class="dropdown-item"><i class="fa fa-trash m-r-5"></i> Delete</a>
                        </div>
                    </div>
                </td>
            </tr>
        }

    </table>
</div>
<script>
    $(document).ready(function () {
        $('#tblTemplate').dataTable({
            "searching": true,
            "order": [[0, "dsc"]]
        });
    });
</script>