@model TimeAide.Data.tReportWeek
@{
    ViewBag.Title = "EmployeePayslipView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content container-fluid">

    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">Time Sheet</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                    <li class="breadcrumb-item active">Time Sheet</li>
                </ul>
            </div>
            <div class="col-auto float-right ml-auto">
                <div class="btn-group btn-group-sm">
                    @{
                        string Disabled = "";
                        if (Model.nReviewStatus == 1)
                        {
                            Disabled = "disable";
                        }
                    }
                    @if ((new TimeAide.Services.ApplicationConfigurationService()).EmployeeTimeSheetApproval == 1)
                    {
                        <button class="btn btn-white" id="btnApproveTimesheet" disabled="@Disabled">Approve</button>
                    }
                    @*<button class="btn btn-white">CSV</button>
                        <button class="btn btn-white">PDF</button>*@
                    <button class="btn btn-white" onclick="javascript:runLocalReport(@Model.tpwID)"><i class="fa fa-print fa-lg"></i> Print</button>
                </div>
            </div>
        </div>
    </div>
    <!-- /Page Header -->
    <input id="hdnPayrollUserInformationId" name="hdnPayrollUserInformationId" type="hidden" value="@Model.UserInformationId">
    <input id="hdnPayrollnWeekID" name="hdnPayrollUserInformationId" type="hidden" value="@Model.nWeekID">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="payslip-title">Timesheet Report : @Model.nPayWeekNum</h4>
                    <div class="row">
                        @if (Model.nReviewStatus == 1)
                        {
                            <div style="text-align:center;color:red;width:100%">
                                Timesheet is already approved
                            </div>
                        }
                    </div>
                    <div class="row">
                        <div class="col-sm-6 m-b-20">
                            <img src="@TimeAide.Services.CompanyService.SelectedCompanyLogo" class="inv-logo" alt="">

                        </div>
                        <div class="col-sm-6 m-b-20">

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 m-b-20">
                            <ul class="list-unstyled mb-0">
                                <li><strong>Company:</strong> @Model.sCompanyName</li>
                                <li><strong>Department:</strong> @Model.sDeptName</li>
                                <li><strong>Sub-department:</strong></li>
                                <li><strong>Employee Type:</strong> @Model.sEmployeeTypeName</li>
                            </ul>
                        </div>
                        <div class="col-sm-6 m-b-20">
                            <div class="invoice-details" style="text-align:left">
                                <h3 class="text-uppercase">Payweek #@Model.nPayWeekNum</h3>
                                <ul class="list-unstyled">
                                    <li><strong>Pay Period:</strong>  <span>@Model.nPayWeekNum</span></li>
                                    <li><strong>Start Date:</strong>  <span>@Model.DTStartDate.Value.ToString("MM-dd-yyyy")</span></li>
                                    <li><strong>End Date:</strong>  <span>@Model.DTEndDate.Value.ToString("MM-dd-yyyy")</span></li>
                                    <li><strong>Payrol Rule:</strong>  <span>@Model.sPayRuleName</span></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 m-b-20">
                            <ul class="list-unstyled">
                                <li><h5 class="mb-0"><strong>@Model.e_name</strong></h5></li>
                                @*<li><span>Web Designer</span></li>*@
                                <li>Employee ID: @Model.e_id</li>
                                @*<li>Joining Date: 1 Jan 2013</li>*@
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 m-b-20">
                            <p><strong>Hours Summary: @Model.sHoursSummary</strong></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div>
                                <h4 class="m-b-10"><strong>Punch Details</strong></h4>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width:8%">Date</th>
                                            <th>Punch Summary</th>
                                            <th style="width:8%">Hours</th>
                                            <th>Exceptions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (TimeAide.Data.tPunchDate each in Model.tPunchDate)
                                        {
                                            <tr>
                                                <td>@each.DTPunchDate.Value.ToString("MM-dd-yyyy")</td>
                                                <td>@each.sPunchSummary</td>
                                                <td>@each.dblPunchHrs</td>
                                                <td>@each.sExceptions</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Page Content -->
<script>
    $("#btnApproveTimesheet").click(function (e) {
        var model = {
            UserInformationId: $('#hdnPayrollUserInformationId').val(),
            nWeekID: $('#hdnPayrollnWeekID').val()
        }

        //e.preventDefault();

        $.ajax({
            type: 'post',
            url: '/Payslip/ApproveEmployeePayslipView',
            data: JSON.stringify(model),
            contentType: 'application/json; charset=utf-8',
            dataType: "json",
            success: function (html) {
                debugger
                toastr.success("Timesheet approved successfully!", "Success");
            },
            error: function (xhr, ajaxOptions, thrownError) {
             toastr.error("There was in error during approving timesheet!", "Error");
              
            }
        });
    });
    function runLocalReport(tpwId) {
        debugger;
        var dataObj = new Object();
        dataObj.ReportId = 29; // give report id
        dataObj.CriteriaType = 2; // 2 is used to run local report
        dataObj.AttendanceSchId = tpwId;
        //dataObj.ScheduleDate = $('#ScheduleDate').val();
        dataObj.EmployeeSelectionIds = tpwId == 0 ? $('#SelectedReportWeekIds').val() : tpwId;
        $.ajax({
            type: "POST",
            url: "/Reports/AdhocReportPopup",
            data: JSON.stringify(dataObj),
            contentType: "application/json; charset=utf-8",
            // dataType: "json",
            success: function (data) {
                debugger;
                //console.log(data);
                $("#divAdhocReportPopup").html(data);
                // setTimeout(function () { $('#divLoadingReport').hide(); }, 3000);
                $("#AdhocReportPopup_modal").modal('show');
            },
            error: function (request, status, error) {
                alert('Error in in runing  report data');
                return false;
            }
        });
    }
</script>