
@{
    ViewBag.Title = "Internal Error";
    Layout = "~/Views/Shared/_LayoutError.cshtml";
}

<div class="alert alert-primary" style="text-align: center; background-color: #00c5fb; border: 1px solid #00c5fb;padding-right: -15px;padding-left: -15px;">
    <h4 style="display: inline;">Error</h4>
    <button class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
</div>
<div class="error-box">
    <h3 class="text-danger"><i class="fa fa-warning"></i> Error processing request. Please contact your system administrator!</h3>
    @*<p class="text-danger">Please contact system administrator.</p>*@
    @Html.ActionLink("Back to Home", "Login", "Account", null, new { @class = "btn btn-custom" })
</div>
<style>
    .container-fluid {
        padding-right: unset;
        padding-left: unset;
    }
</style>