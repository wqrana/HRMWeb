@model TimeAide.Web.Models.EmployeeAccrualBalance
@{
    ViewBag.Label = "Initial Balance";
}
<div id="employeeAccrualBalanceDelete_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            @Html.Partial("_DeleteViewHeader")

            <div class="modal-body pt-0">


                @Html.HiddenFor(model => model.Id, new { id = "EmployeeAccrualBalanceDeleteId" })

                <div class="form-group row">
                    <div class="panel panel-default" style="width:100%;margin-left:10px">
                        <div class="panel-heading" style="padding-left:10px">Initial Balance</div>
                        <div class="panel-body">
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Accrual Type:
                                </label>
                                <div class="col-md-3 text-muted mt-2">
                                    <span id=""> @Html.DisplayFor(model => model.AccrualType.AccrualTypeName)</span>
                                </div>
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Start Date:
                                </label>
                                <div class="col-md-3 text-muted mt-2">
                                    @Html.DisplayFor(model => model.BalanceStartDate)

                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Accrued Hours:
                                </label>
                                <div class="col-md-3 text-muted mt-2">
                                    <span id=""> @Html.DisplayFor(model => model.AccruedHours)</span>
                                </div>


                            </div>

                        </div>
                    </div>



                </div>
                <div class="submit-section mt-1">

                    <button id="btnDeleteEmployeeAccrualBalance" class="btn btn-danger submit-btn">Delete</button>
                    <button id="btnCancel" class="btn btn-danger submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#btnDeleteEmployeeAccrualBalance").click(function () {
            var id = $("#EmployeeAccrualBalanceDeleteId").val();
            deleteEmployeeAccrualBalance(id);
        })

    } );
</script>



