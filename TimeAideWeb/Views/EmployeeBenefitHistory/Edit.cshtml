@model TimeAide.Web.Models.EmployeeBenefitHistory
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
<style>

    ul.ui-front {
        z-index: 1100;
    }
</style>
<div id="employeeBenefitCreateEdit_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <div class="mt-2 p-1">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;">Benefit And Other - Edit</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body pt-0">

                <div class="alert" style="display:none;" id="employeeBenefitCreateEditAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-12 p-0">
                        <div class="panel panel-default" style="margin-left:5px">
                            <div class="panel-heading" style="padding-left:0px">Benefit Information</div>
                            <div class="panel-body">
                                @Html.Hidden("EmployeeBenefitHistoryId", Model == null ? 0 : Model.Id)
                                <div class="form-group row">

                                    <label class="col-md-2 col-form-label mt-2">Benefit:<span class="text-danger">*</span></label>
                                    <div class="col-md-4 mt-2">                                       
                                        <div class="input-group">
                                            @Html.DropDownList("BenefitId", null, "Please select", new { @class = "form-control" })
                                            <div class="input-group-append">
                                                <button class="btn btn-secondary btn-master-data" type="button">+</button>
                                            </div>
                                        </div>
                                    </div>
                                    <label class="col-md-2 col-form-label mt-2">Start Date:<span class="text-danger">*</span></label>
                                    <div class="col-md-4 mt-2">
                                        @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", id = "BenefitStartDate" } })

                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-2 col-form-label mt-2">End Date:<span class="text-danger"></span></label>
                                    <div class="col-md-4 mt-2">
                                        @Html.EditorFor(model => model.ExpiryDate, new { htmlAttributes = new { @class = "form-control", id = "BenefitExpiryDate" } })
                                    </div>
                                    <label class="col-md-2 col-form-label" style="margin-left:0px">Amount:<span class="text-danger"></span></label>
                                    <div class="col-md-4">

                                        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", id = "BenefitAmount" } })
                                    </div>


                                </div>
                                <div class="form-group row">
                                    <label class="col-md-2 col-form-label mt-2" style="margin-left:0px">Frequency:<span class="text-danger"></span></label>
                                    <div class="col-md-4 mt-2">
                                        @Html.DropDownList("BenefitPayFrequencyId", null, "Please select", new { @class = "form-control" })
                                    </div>
                                    <label class="col-md-2 col-form-label" style="margin-left:0px">Notes:<span class="text-danger"></span></label>
                                    <div class="col-md-4 mt-2">
                                        @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", id = "BenefitNotes" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="panel panel-default" style="margin-left:5px">
                            <div class="panel-heading" style="padding-left:0px">Contributions</div>
                            <div class="panel-body">
                                <div class="form-group row">
                                    <label class="col-md-2 col-form-label mt-2" style="margin-left:0px">Employee:</label>
                                    <div class="col-md-4 mt-2">
                                        @Html.EditorFor(model => model.EmployeeContribution, new { htmlAttributes = new { @class = "form-control", id = "BenefitEmployeeContribution" } })
                                    </div>
                                    <label class="col-md-2 col-form-label mt-2">Company:</label>
                                    <div class="col-md-4 mt-2">
                                        @Html.EditorFor(model => model.CompanyContribution, new { htmlAttributes = new { @class = "form-control", id = "BenefitCompanyContribution" } })

                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="col-md-2 col-form-label mt-2">Other:</label>
                                    <div class="col-md-4 mt-2">
                                        @Html.EditorFor(model => model.OtherContribution, new { htmlAttributes = new { @class = "form-control", id = "BenefitOtherContribution" } })

                                    </div>
                                    <label class="col-md-2 col-form-label" style="margin-left:0px">Total:</label>
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.TotalContribution, new { htmlAttributes = new { @class = "form-control", id = "BenefitTotalContribution" } })
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="submit-section mt-1">
                    <button id="btnSaveEmployeeBenefit" class="btn btn-primary submit-btn">Save</button>
                    <button id="btnCancel" class="btn btn-primary  submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        $('input[id*=Date]').each(function () {
            $(this).datetimepicker({ format: 'MM/DD/YYYY' });

        });

        $("#btnSaveEmployeeBenefit").click(function () {
            saveUserBenefitData();
        })
        //popup master data
        $(".btn-master-data").click(function () {
            debugger;
            var masterDataDdl = $(this).parents("div.input-group")
                .find("select")
                .first();
            openMasterDataPopUp(masterDataDdl);
        });


    });

</script>

