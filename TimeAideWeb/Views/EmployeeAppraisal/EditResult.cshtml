@model TimeAide.Web.Models.EmployeeAppraisal

<div id="EmployeeAppraisalResultEdit_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">

            <div class="mt-2 p-1">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;">Employee Appraisal Result - Edit</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body pt-0">

                <div class="alert" style="display:none;" id="employeeAppraisalResultEditAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                <div class="row">

                    <div class="col-md-12">

                        @Html.Hidden("EmployeeAppraisalId", Model.Id)
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label"> Result:<span class="text-danger">*</span></label>
                            <div class="col-md-9">

                                @Html.DropDownList("AppraisalResultId", null, "Please Select", new { @class = "form-control" })

                            </div>

                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label"> Overall Score:<span class="text-danger"></span></label>

                            <div class="col-md-2 pr-0">
                                @Html.EditorFor(model => model.AppraisalOverallScore, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                            <div class="col-md-2 text-muted pl-0 pr-0 pt-4">
                                /<span id="spanAppraisalTotalMaxValue" style="font-size:12px"> @Html.DisplayFor(model => model.AppraisalTotalMaxValue)</span>
                                @Html.HiddenFor(model => model.AppraisalTotalMaxValue)
                            </div>
                            <label class="col-md-3 col-form-label"> Overall (%):<span class="text-danger"></span></label>
                            <div class="col-md-2 pl-0">
                                @Html.EditorFor(model => model.AppraisalOverallPct, new { htmlAttributes = new { @class = "form-control" } })

                            </div>

                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label pr-0">Reviewer Comments:<span class="text-danger"></span></label>
                            <div class="col-md-9">
                                @Html.TextAreaFor(model => model.AppraisalReviewerComments, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label pr-0">Employee Comments:<span class="text-danger"></span></label>
                            <div class="col-md-9">
                                @Html.TextAreaFor(model => model.AppraisalEmployeeComments, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                        </div>
                        <div class="form-group row">
                        </div>

                    </div>
                </div>
                <div class="submit-section mt-1">
                    <button id="btnSaveEmployeeAppraisalResult" class="btn btn-primary submit-btn">Save</button>
                    <button id="btnCancel" class="btn btn-primary  submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#AppraisalOverallScore").attr("disabled", true);
        $("#AppraisalOverallPct").attr("disabled", true);


       
        $("#btnSaveEmployeeAppraisalResult").click(function () {
            saveEmployeeAppraisalResultData();
        });


    });

</script>









