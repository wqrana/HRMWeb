@model TimeAide.Web.Models.EmployeeTraining
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
<style>

    ul.ui-front {
        z-index: 1100;
    }
    
</style>
<div id="employeeTrainingCreateEdit_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <div class="mt-2 p-1">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;">Training - Create</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body pt-0">

                <div class="alert" style="display:none;" id="employeeTrainingCreateEditAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                <div class="row">

                    <div class="col-md-12">
                        @Html.HiddenFor(m=>m.Id, new {id= "EmployeeTrainingId" })

                        @*@{
                            if (Model != null)
                            {
                                Html.Hidden("EmployeeTrainingId", Model.Id);
                            }
                            else
                            {
                                Html.Hidden("EmployeeTrainingId", null);
                            }
                        }*@

                        @Html.HiddenFor(model => model.UserInformationId)
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Training: <span class="text-danger">*</span></label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    @Html.DropDownList("TrainingId", null, "Click Icon for Select", new { @class = "form-control" })
                                    <div class="input-group-append">
                                        <button id="btnOpenTrainingPopUp" class="btn btn-secondary" type="button"><i class="fa fa-pencil"></i></button>
                                    </div>
                                </div>
                                
                            </div>
                            <label class="col-md-3 col-form-label">Date Completed: <span class="text-danger">*</span></label>
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.TrainingDate, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Type: <span class="text-danger">*</span></label>
                            <div class="col-md-4">
                                @(Html.CustomDropDownList<TimeAide.Web.Models.TrainingType>("TrainingTypeId", null,null,true,null, htmlAttributes: new { @class = "form-control" }))
                                @Html.ValidationMessageFor(model => model.TrainingTypeId, "", new { @class = "text-danger" })
                            </div>
                            <label class="col-md-2 col-form-label">Expiry Date: <span class="text-danger"></span></label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.ExpiryDate, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Notes: </label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                        </div>

                    </div>


                </div>

                <div class="submit-section mt-1">

                    <button id="btnSaveEmployeeTraining" class="btn btn-primary submit-btn">Save</button>
                    <button id="btnCancel" class="btn btn-primary  submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>

            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("#TrainingId").attr("disabled", true);

        var autoCompleteSrc = "/EmployeeTraining/AjaxGetAutoCompleteData";

        //$("#TrainingDate").datetimepicker({ format: 'MM/DD/YYYY' });
        //$("#ExpiryDate").datetimepicker({ format: 'MM/DD/YYYY' });
        $('input[id*=Date]').each(function () {
            $(this).datetimepicker({ format: 'MM/DD/YYYY' });

        });

        $("#btnSaveEmployeeTraining").click(function () {
            saveUserTrainingData();
        });

        $("#btnOpenTrainingPopUp").click(function () {
            debugger;
            openTrainingSelectionPopUp();
        });

        $(".btn-master-data").click(function () {
            debugger;
            var masterDataDdl = $(this).parents("div.input-group")
                .find("select")
                .first();
            openMasterDataPopUp(masterDataDdl);
        });      
        
        $("#Type").autocomplete({
            source: function (request, response) {
                var field = "Type";
                autoCompleteAjaxSetting(request, response, autoCompleteSrc, field)
                },
            minLength: 2
           
        });
       
    });
   
</script>

