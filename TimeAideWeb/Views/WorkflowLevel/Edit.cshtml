@model TimeAide.Web.Models.WorkflowLevel
<div id="WorkflowLevelCreateEdit_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <div class="mt-2 p-1">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;">Workflow Level- Add</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body pt-0">

                <div class="alert" style="display:none;" id="WorkflowLevelCreateEditAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                <div class="row">

                    <div class="col-md-12">
                        @Html.HiddenFor(m => m.Id, new { id = "WorkflowLevelId" })

                        <div class="form-group row">
                            <div class="col-md-3">
                                @Html.LabelFor(model => model.WorkflowLevelName, htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.WorkflowLevelName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.WorkflowLevelName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                @Html.LabelFor(model => model.WorkflowLevelTypeId, "Workflow Level Type", htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div class="col-md-8">
                                @Html.DropDownList("WorkflowLevelTypeId", null, "- Please select -", htmlAttributes: new { @class = "form-control"})
                                @Html.ValidationMessageFor(model => model.WorkflowLevelTypeId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                @Html.LabelFor(model => model.SelectedWorkflowLevelGroupId, "Level Group", htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div class="col-md-8">
                                @Html.ListBox("WorkflowLevelGroupId", (IEnumerable<SelectListItem>)ViewBag.WorkflowLevelGroupId, new { @class = "form-control", style = "width:100%;" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                @Html.LabelFor(model => model.NotificationMessageId, "Notification Message", htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div class="col-md-8">
                                @(Html.CustomDropDownList<TimeAide.Web.Models.NotificationMessage>("NotificationMessageId",null,Model.NotificationMessageId, htmlAttributes: new { @class = "form-control" }))
                                @Html.ValidationMessageFor(model => model.NotificationMessageId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="submit-section mt-1">
                    <button id="btnSaveWorkflowLevel" class="btn btn-primary submit-btn">Save</button>
                    <button id="btnCancel" class="btn btn-primary  submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#WorkflowLevelGroupId").val('@Model.SelectedWorkflowLevelGroupId'.trim().split(','));
        $('#WorkflowLevelGroupId').select2({
            allowClear: true
        });
        $("#btnSaveWorkflowLevel").click(function () {
            debugger
            saveWorkflowLevelData();
        });
        WorkflowLevelTypeChange();

    });
</script>









