<script>
    $(document).ready(function () {

        $('#IsSundayShift,#IsMondayShift,#IsTuesdayShift,#IsWednesdayShift,#IsThursdayShift,#IsFridayShift,#IsSaturdayShift').change(function () {
            debugger;
            var id = $(this).attr("id");
            var shiftDay = id.substring(2, id.length - 5).toLowerCase();
            var state = $(this).is(":checked");
            if (state) {
                $(".time-range-" + shiftDay).removeClass("hideField").addClass("showField");
            }
            else {
                $(".time-range-" + shiftDay).removeClass("showField").addClass("hideField");
            }

        });

        $('input[id*=StartShift],input[id*=EndShift]').each(function () {
            debugger;
            $(this).timepicker({
                timeFormat: 'h:mm p',
                interval: 30,
                //minTime: '10',
                //maxTime: '6:00pm',
                //defaultTime: '11',
                //startTime: '10:00',
                dynamic: false,
                //dropdown: true,
                //scrollbar: true
            });

        });


        $("#btnSaveApplicantShift").click(function () {
            saveApplicantApplicationShiftData();
        });
        //popup master data

    });
    function copyAllShift(startShiftEle, endShiftEle) {
        debugger;
        var startShiftTime = $("#" + startShiftEle).val();
        var endShiftTime = $("#" + endShiftEle).val();
        $('input[id*=StartShift]').each(function () {
            $(this).val(startShiftTime);
        });
        $('input[id*=EndShift]').each(function () {
            $(this).val(endShiftTime);
        });
    }
</script>



