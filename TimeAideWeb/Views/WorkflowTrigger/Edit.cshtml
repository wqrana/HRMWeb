@model TimeAide.Web.Models.WorkflowTrigger
<div class="form-horizontal" style="padding:10px">
    @Html.Partial("_CreatePageTitleView")
    @Html.HiddenFor(m => m.Id, new { id = "WorkflowTriggerId" })
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.WorkflowTriggerName, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.WorkflowTriggerName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.WorkflowTriggerName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.WorkflowTriggerTypeId, "Workflow Trigger Type", htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-8">
                    @Html.DropDownList("WorkflowTriggerTypeId", null, "- Please select -", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.WorkflowTriggerTypeId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.WorkflowId, "Workflow", htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-8">
                    @Html.DropDownList("WorkflowId", null, "- Please select -", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.WorkflowId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_CreatePageFooterView")
</div>










