@model TimeAide.Web.Models.AppraisalRatingScale

<div id="AppraisalRatingScaleCreateEdit_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <div class="mt-2 p-1">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;">Rating Scale - Add</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body pt-0">

                <div class="alert" style="display:none;" id="appraisalRatingScaleCreateEditAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                <div class="row">

                    <div class="col-md-12">
                        @Html.HiddenFor(m => m.Id, new { id = "AppraisalRatingScaleId" })

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Scale Name: <span class="text-danger">*</span></label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.ScaleName, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                            <label class="col-md-2 col-form-label">Max Value: <span class="text-danger">*</span></label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.ScaleMaxValue, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Description: <span class="text-danger"></span></label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ScaleDescription, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label pr-0">All Companies: <span class="text-danger"></span></label>
                            @{
                                var IsAllCompanies = true;
                            }
                            <div class="col-md-2 pt-2">
                                @Html.CheckBoxFor(model => IsAllCompanies, new { id = "IsAllCompaniesAE" })

                            </div>
                        </div>
                    </div>
                </div>
                <div class="submit-section mt-1">
                    <button id="btnSaveAppraisalRatingScale" class="btn btn-primary submit-btn">Save</button>
                    <button id="btnCancel" class="btn btn-primary  submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
    
        $("#btnSaveAppraisalRatingScale").click(function () {
            saveAppraisalRatingScaleData();
        });
       

    });

</script>


