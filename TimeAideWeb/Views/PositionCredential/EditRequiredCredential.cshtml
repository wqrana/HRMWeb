@model TimeAide.Web.Models.PositionCredential
<div id="IsRequiredCredentialEdit_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">

            <div class="mt-2 p-1">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;">Required/Non-Required Credential - Edit</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body pt-0">

                <div class="alert" style="display:none;" id="positionCredentialCreateEditAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-12 p-0">
                        <div class="form-group row">
                            <label class="col-md-4">Credential Name: </label>

                            <div class="col-md-7 mt-2 text-muted">
                               @Html.DisplayFor(m=>m.Credential.CredentialName)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4">Is Required: </label>

                            <div class="col-md-2 mt-2">
                                @Html.CheckBox("IsRequired", Model.IsRequired ?? false, new { @id= "IsRequiredEdit" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="submit-section mt-1">
                    <button id="btnSaveIsRequiredCredential" class="btn btn-primary submit-btn">Save</button>
                    <button id="btnCancel" class="btn btn-primary  submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>


            </div>
        </div>
    </div>
</div>
<script>

    $(document).ready(function () {
        $("#btnSaveIsRequiredCredential").click(function () {
            var dataObj = new Object();
            dataObj.Id = @Model.Id;
            dataObj.IsRequired = $("#IsRequiredEdit").is(":checked");
            saveIsRequiredCredentialData(dataObj);
        });

    });
</script>