@model TimeAide.Web.Models.EmployeePerformance
@{
    ViewBag.Label = "Employee Performance";
}
<div id="employeePerformanceDelete_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            @Html.Partial("_DeleteViewHeader")
            @*<div class="mt-2 p-1">
                    <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                        <h4 style="display: inline;">Education - Create</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <hr>
                </div>*@
            <div class="modal-body pt-0">

                <div class="alert" style="display:none;" id="employeePerformanceDeleteAlert">
                    <a href="javascript:void(0)" class="close" id="alertDismiss">&times;</a>
                    <strong>Alert!</strong><span class="ml-1"></span>
                </div>
                @Html.HiddenFor(model => model.Id, new { id = "EmployeePerformanceDeleteId" })
                @Html.HiddenFor(model => model.UserInformationId)
                <div class="form-group row">
                    <div class="col-md-6 p-0">
                        <!-- <div class="panel panel-default" style="width:49%;margin-left:10px">-->
                        <div class="panel panel-default" style="margin-left:5px">
                            <div class="panel-heading" style="padding-left:10px">General</div>
                            <div class="panel-body">
                                @Html.Hidden("EmployeePerformanceDetailId", Model == null ? 0 : Model.Id)

                                <div class="form-group row">

                                    <label class="col-md-4 col-form-label" style="margin-left:10px">
                                        Date:
                                    </label>
                                    <div class="col-md-6 text-muted mt-2">


                                        @if (Model != null)
                                        {
                                            @String.Format("{0:MM/dd/yyyy}", Model.ReviewDate);
                                        }


                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label" style="margin-left:10px">
                                        Review By:
                                    </label>
                                    <div class="col-md-6 text-muted mt-2">
                                        <span id=""> @Html.DisplayFor(model => model.Supervisor.FullName)</span>
                                    </div>


                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label" style="margin-left:10px">
                                        Description:
                                    </label>
                                    <div class="col-md-6 text-muted mt-2">
                                        <span id=""> @Html.DisplayFor(model => model.PerformanceDescription.PerformanceDescriptionName)</span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label" style="margin-left:10px">
                                        Document Name:
                                    </label>
                                    <div class="col-md-6 text-muted mt-2">
                                        <span id="">   @Html.DisplayFor(model => model.DocName)</span>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                    <div class="col-md-6 p-0">
                        <div class="panel panel-default" style="margin-left:5px">
                            <!--<div class="panel panel-default" style="width:49%;margin-left:10px">-->
                            <div class="panel-heading" style="padding-left:10px">Result</div>
                            <div class="panel-body">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label" style="margin-left:10px">
                                        Result:
                                    </label>
                                    <div class="col-md-6 text-muted mt-2">
                                        <span id=""> @Html.DisplayFor(model => model.PerformanceResult.PerformanceResultName)</span>
                                    </div>

                                </div>


                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label" style="margin-left:10px">
                                        Action Taken:
                                    </label>
                                    <div class="col-md-6 text-muted mt-2">
                                        <span id=""> @Html.DisplayFor(model => model.ActionTaken.ActionTakenName)</span>
                                    </div>


                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label" style="margin-left:10px">
                                        Expiry Date:
                                    </label>
                                    <div class="col-md-6 text-muted mt-2">
                                        @if (Model != null)
                                        {
                                            @String.Format("{0:MM/dd/yyyy}", Model.ExpiryDate);
                                        }
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label" style="margin-left:10px">
                                        Summary:
                                    </label>
                                    <div class="col-md-6 text-muted mt-2">
                                        <span id=""> @Html.DisplayFor(model => model.ReviewSummary)</span>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label" style="margin-left:10px">
                                        Notes:
                                    </label>
                                    <div class="col-md-6 text-muted mt-2">
                                        <span id=""> @Html.DisplayFor(model => model.ReviewNote)</span>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="submit-section mt-1">

                    <button id="btnDeleteEmployeePerformance" class="btn btn-danger submit-btn">Delete</button>
                    <button id="btnCancel" class="btn btn-danger submit-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#btnDeleteEmployeePerformance").click(function () {
            var id = $("#EmployeePerformanceDeleteId").val();
            deleteUserPerformance(id);
        })

    } );
</script>

