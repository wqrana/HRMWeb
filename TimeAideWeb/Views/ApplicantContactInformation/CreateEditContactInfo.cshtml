
@model TimeAide.Web.Models.ApplicantContactInformation
<div id="createEditContactInfo_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="mt-1">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;">Edit- Contact Info</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body p-1">
                <div class="form-group row pb-0 pl-4 mb-0">
                    <div class="panel panel-default" style="width:97%;">
                        <div class="panel-heading" style="padding-left:10px">Phone(s)</div>
                        <div class="panel-body">
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Home:
                                </label>
                                <div class="col-md-5 pt-1">
                                    @Html.EditorFor(model => model.HomeNumber, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Mobile:
                                </label>
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.CelNumber, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Fax:
                                </label>
                                <div class="col-md-5 ">
                                    @Html.EditorFor(model => model.FaxNumber, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label" style="margin-left:10px">
                                    Other:
                                </label>
                                <div class="col-md-5 ">
                                    @Html.EditorFor(model => model.OtherNumber, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row pb-0 pl-4">
                    <div class="panel panel-default" style="width:97%;">
                        <div class="panel-heading" style="padding-left:10px">
                           Email(s)
                        </div>
                        <div class="panel-body">
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" style="margin-left:10px">
                                    Personal Email:
                                </label>
                                <div class="col-md-8 pt-1">
                                    @Html.EditorFor(model => model.PersonalEmail, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" style="margin-left:10px">
                                    Work Email:
                                </label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.WorkEmail, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" style="margin-left:10px">
                                    Other Email:
                                </label>
                                <div class="col-md-8 ">
                                    @Html.EditorFor(model => model.OtherEmail, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                           
                        </div>
                    </div>
                </div>

                <div class="submit-section mt-1">
                    <button type="button" id="btnSaveApplicantContactInfo" class="btn btn-primary submit-btn">Save</button>
                    <button type="button" class="btn btn-primary submit-btn" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#HomeNumber').mask('(999) 999-9999');
        $('#CelNumber').mask('(999) 999-9999');
        $('#FaxNumber').mask('(999) 999-9999');
        $('#OtherNumber').mask('(999) 999-9999');

        $('#btnSaveApplicantContactInfo').click(function () {
            saveAddEditContactInfo();
        })
    });
</script>

@Scripts.Render("~/bundles/jqueryval")


