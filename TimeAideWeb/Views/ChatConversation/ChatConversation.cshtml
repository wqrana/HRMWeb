                                            if (eachChatMessage.IsMyMessage || eachChatMessage.IsSelectedUserMessage)
                                            {
                                                <div class="chat chat-right">
                                                    <div class="chat-body">
                                                        <div class="chat-bubble">
                                                            <div class="chat-content">
