@using TimeAide.Web.Models

<div id="timeOffRequestStatusHistory_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Request Status History</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table  table-striped custom-table table-nowrap mb-0" style="width:100% !important">
                                    <thead>
                                        <tr>
                                           
                                            <th>Level</th>
                                            <th>Action</th>
                                            <th>Action By</th>
                                            <th>Action Date</th>
                                            <th>Remarks</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.WorkflowTriggerRequestDetail != null && ViewBag.WorkflowTriggerRequestDetail.Count > 0)
                                        {
                                            List<WorkflowTriggerRequestDetail> WorkflowTriggerRequestDetailList = ViewBag.WorkflowTriggerRequestDetail;
                                            WorkflowTriggerRequestDetailList = WorkflowTriggerRequestDetailList.OrderByDescending(od => od.WorkflowLevelId).ToList();
                                            foreach (WorkflowTriggerRequestDetail workflowTriggerRequestDetail in WorkflowTriggerRequestDetailList)
                                            {
                                                <tr>
                                                   
                                                    @{
                                                    var workflowLevelTypeId = "N/A";
                                                    if (workflowTriggerRequestDetail.WorkflowLevel != null && workflowTriggerRequestDetail.WorkflowLevel.WorkflowLevelType != null)
                                                    {
                                                        workflowLevelTypeId = workflowTriggerRequestDetail.WorkflowLevel.WorkflowLevelTypeId.ToString();
                                                    }
                                                }
                                                    <td>@workflowLevelTypeId</td>
                                                    <td>@workflowTriggerRequestDetail.WorkflowActionType.WorkflowActionTypeName</td>
                                                    @{
                                                    var actionBy = "N/A";
                                                    if (workflowTriggerRequestDetail.ActionBy != null)
                                                    {
                                                        actionBy = workflowTriggerRequestDetail.ActionBy.ShortFullName;
                                                    }
                                                }
                                                    <td>@actionBy</td>
                                                    @{
                                                    var actionDate = "N/A";
                                                    if (workflowTriggerRequestDetail.ActionDate != null)
                                                    {
                                                        actionDate = workflowTriggerRequestDetail.ActionDate.ToString();
                                                    }
                                                }
                                                    <td>@actionDate</td>
                                                    <td>@workflowTriggerRequestDetail.ActionRemarks</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
