@model TimeAide.Web.Models.EmployeeCredential
<div>
    <input type="hidden" id="hdnEmployeeCredentialId" name="custId" value="@Model.Id">
    <div class="form-group">
        <div class="panel panel-default" style="margin-left:10px">
            <div class="panel-heading" style="padding-left:10px">Credential Information</div>
            <div class="panel-body">
                <div class="form-group row">
                    <div class="col-2" style="margin-left:10px">
                        @Html.LabelFor(model => model.ExpirationDate, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-4 text-muted mt-2" style="max-width: 32%;">
                        @if (Model.ExpirationDate.HasValue)
                        {
                            @Html.DisplayFor(model => model.ExpirationDate, new { htmlAttributes = new { @Value = Model.ExpirationDate.Value.ToString("MM/dd/yyyy"), @class = "form-control" } })
                        }
                    </div>
                    <div class="col-2" style="margin-left:10px">
                        @Html.LabelFor(model => model.CredentialTypeId, "Type", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-4 text-muted mt-2" style="max-width: 32%;">
                        @Html.DisplayFor(model => model.CredentialType.CredentialTypeName, new { htmlAttributes = new { @class = "form-control", style = "width:100%" } })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2" style="margin-left:10px">
                        @Html.LabelFor(model => model.IssueDate, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-4 text-muted mt-2" style="max-width: 32%;">
                        @if (Model.IssueDate.HasValue)
                        {
                            @Html.DisplayFor(model => model.IssueDate, new { htmlAttributes = new { @Value = Model.IssueDate.Value.ToString("MM/dd/yyyy"), @class = "form-control" } })
                        }
                        </div>
                    <div class="col-2" style="margin-left:10px">
                        @Html.LabelFor(model => model.EmployeeCredentialName, "Credential Id", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-4 text-muted mt-2" style="max-width: 32%;">
                        @Html.DisplayFor(model => model.EmployeeCredentialName, new { htmlAttributes = new { @class = "form-control", style = "width:100%" } })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2" style="margin-left:10px">
                        @Html.LabelFor(model => model.EmployeeCredentialDescription, "Description", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-4 text-muted mt-2" style="max-width: 32%;">
                        @Html.DisplayFor(model => model.EmployeeCredentialDescription, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-2" style="margin-left:10px">
                        @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-4 text-muted mt-2" style="max-width: 32%;">
                        @Html.DisplayFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .modal-xl {
        min-width: 80% !important;
        margin: 0 auto;
    }

        .modal-xl .modal-content {
            /*min-height: 75vh !important;*/
            margin: 0 auto;
        }
</style>