@model IEnumerable<TimeAide.Models.ViewModel.TimesheetEditorTransactionViewModel>
@{
    var firstModelRecord = Model.FirstOrDefault();    
    var selectedTSDIds = ViewBag.selectedIds;
}
<div id="timesheetDeleteTransaction_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Transaction</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="welcome-box mb-2">
                                <div class="welcome-det">
                                    <h4>@Html.DisplayFor(m => firstModelRecord.e_name)</h4>
                                    <p><span class="">EmployeeId:</span>@Html.DisplayFor(m => firstModelRecord.e_id)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-12 p-0">
                            <div class="panel panel-default" style="margin-left:5px">
                                <div class="panel-heading" style="padding-left:10px">
                                    Transactions List
                                </div>
                                <div class="panel-body">
                                    <div id="divTransactionAlert" class="alert alert-danger mb-1" role="alert">

                                    </div>
                                    <div id="divTransactionDates">
                                        <div id="" style="max-height:350px; overflow-y:auto">
                                            <div class="table-responsive">
                                                <table class="table table-striped custom-table table-nowrap mb-0">
                                                    <thead>
                                                        <tr>
                                                            <th></th>
                                                            <th>Date </th>
                                                            <th>Trans. Type</th>
                                                            <th></th>
                                                            <th>Note</th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model)
                                                        {
                                                            <tr>
                                                                <td><input class="" type="checkbox" id="@item.tppID" name="selectedTrans" /></td>
                                                                <td>@Html.DisplayFor(m => item.DTPunchDate)</td>
                                                                <td>@Html.DisplayFor(m => item.sType)</td>
                                                                @{ 
                                                                    var transVal = "";
                                                                    if(item.nIsMoneyTrans == 1) { transVal = $"${item.HoursWorked}"; }
                                                                    else { transVal = $"{item.HoursWorked} Hrs"; }

                                                                 }
                                                                <td>@transVal</td>
                                                                <td><input type="text" class="form-control" id="note_@item.tppID" /></td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>           
                    </div>
                    <div class="submit-section mt-2">
                        <div id="" class="align-content-md-start submit-in-processing" style="display:none;">
                            <img src="~/Content/Themes/assets/img/ajax-loading.gif" width="18" height="18" />
                        </div>
                        <button id="btnDeleteTransaction" class="btn btn-danger submit-btn btn-sm">Delete</button>
                        <button id="btnCancel" class="btn btn-primary  submit-btn btn-sm" data-dismiss="modal" aria-label="Close">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        $("#divTransactionAlert").hide();

        $("#btnDeleteTransaction").click(function () {
            var selectedTrans = [];
            var selectedTransNote = [];
            $('input[name="selectedTrans"]').each(function () {
                debugger;
                var isSelectetTrans = $(this).is(":checked");
                if (isSelectetTrans) {
                    var val = $(this).attr("id");
                    selectedTrans.push(val);
                    transdelNote=$("#note_" + val).val();
                    selectedTransNote.push(transdelNote);
                }
            });

            debugger;
            var transIds= selectedTrans.join(",");
            confirmDeleteTransaction(transIds, selectedTransNote);
        });
       
    });


    
</script>




