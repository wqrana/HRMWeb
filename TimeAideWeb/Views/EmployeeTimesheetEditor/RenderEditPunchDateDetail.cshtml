@model TimeAide.Models.ViewModel.TimesheetEditorPunchDateEditViewModel
@{

}
<div class="row">
    <table class="table table-striped custom-table mb-0">
        <thead>
            <tr>
                <th>Punch Date</th>
                <th>Punch Summary</th>
                <th>Hrs Summary</th>
                <th>Schedule</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(m => m.PunchDate)</td>
                <td>@Html.DisplayFor(m => m.sPunchSummary)</td>
                <td>@Html.DisplayFor(m => m.sHoursSummary)</td>
                <td>@Html.DisplayFor(m => m.sDaySchedule) <a href="javascript:getScheduleDetailEditData();" class="d-inline-block pull-right font-weight-lighter fa fa-pencil pl-1"></a></td>
                
     @*<td>1/17/2024</td>
                    <td>8:00AM 12:00PM ACAA=4.00</td>
                    <td>HR=4.00</td>
                    <td>8:00AM - 5:00PM<span class="font-weight-lighter fa fa-pencil pl-1"></span></td>*@

            </tr>
        </tbody>
    </table>
</div>
<div class="row pt-2">
    <div class="col-md-5 p-0">
        <div class="panel panel-default" style="margin-left:5px">
            <div class="panel-heading" style="padding-left:10px">
                Punch Detail
                <div class="pull-right dropdown-action">
                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                    <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">

                        <a href="javascript:void();" data-toggle="modal" onclick="addPunches('EPDate');" id="" class="dropdown-item"><i class="fa fa-plus m-r-5"></i> Add Punch</a>

                    </div>
                </div>
            </div>
            <div class="panel-body">               
                <div id="divPunchDetail">
                    <div id="" @*style="max-height:250px; overflow-y:auto"*@>
                        <div class="table-responsive">
                            <table class="table table-striped table-condensed custom-table table-sm mb-0">
                                <thead>
                                    <tr>
                                        <th>Punch</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            @foreach (var punchDate in Model.PunchData)
                                            {
                                                <span class="pr-2 d-inline-block">@punchDate.DTPunchDateTime.ToString("hh:mm tt")<a href="javascript:EditPunchData('@punchDate.tpdID');" class="font-weight-lighter fa fa-pencil pl-2 d-inline-block" title="Edit"></a><a href="javascript:deletePunches('@punchDate.tpdID','EPDate')" class=" d-inline-block font-weight-lighter fa fa-trash text-danger pl-1" title="Delete"></a></span>
                                            }
                                           
                                        </td>

                                        @*<td>
                                        <span class="pr-2">08:00 AM <span class="font-weight-lighter fa fa-pencil pl-1"></span><span class="font-weight-lighter fa fa-trash text-danger pl-1"></span></span>
                                        <span class="pl-2">12:00 PM <span class="font-weight-lighter fa fa-pencil pl-1"></span><span class="font-weight-lighter fa fa-trash text-danger pl-1"></span></span>
                                        </td>*@
                                    </tr>
                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-7 p-0">
        <div class="panel panel-default" style="margin-left:5px">
            <div class="panel-heading" style="padding-left:10px">
                Transaction Detail
                <div class="pull-right dropdown-action">
                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_horiz</i></a>
                    <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(25px, 20px, 0px);">

                        <a href="javascript:void();" data-toggle="modal" onclick="addTransaction('EPDate')" id="" class="dropdown-item"><i class="fa fa-plus m-r-5"></i> Add Trans.</a>

                    </div>
                </div>
            </div>
            <div class="panel-body">
                @*<div id="divTransactionAlert" class="alert alert-danger mb-1" role="alert">

                    </div>*@
                <div id="divTransactionDetail">
                    <div id="" @*style="max-height:350px; overflow-y:auto"*@>
                        <div class="table-responsive">
                            <table class="table table-striped custom-table table-condensed table-sm mb-0">
                                <thead>
                                    <tr>
                                        @*<th></th>*@
                                        <th>Transaction</th>
                                        <th></th>
                                        <th>Note</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var trans in Model.TransactionData)
                                    {
                                       <tr>
                                           <td>@Html.DisplayFor(m => trans.sType) = @Html.DisplayFor(m => trans.HoursWorked)</td>
                                           <td><a href="javascript:EditTransaction(@trans.tppID);" class="font-weight-lighter fa fa-pencil pl-1 d-inline-block"></a><a href="javascript:deleteTransaction('@trans.tppID','EPDate');" class="font-weight-lighter fa fa-trash text-danger pl-1 d-inline-block"></a></td> 
                                           <td>@Html.DisplayFor(m => trans.sTDesc)</td>
                                        </tr>
                                    }
                                    @*<tr>

                                        <td>ACAA=4.00<span class="font-weight-lighter fa fa-pencil pl-1"></span><span class="font-weight-lighter fa fa-trash text-danger pl-1"></span></td>
                                        <td></td>
                                    </tr>*@
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="submit-section mt-2">
    <div id="" class="align-content-md-start submit-in-processing" style="display:none;">
        <img src="~/Content/Themes/assets/img/ajax-loading.gif" width="18" height="18" />
    </div>   
    <button id="btnCancel" class="btn btn-primary  submit-btn btn-sm" data-dismiss="modal" aria-label="Close">Close</button>
</div>
