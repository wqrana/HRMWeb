                                    <input id="Gen_employeeId" class="form-control" type="text">
                                }

                            </div>

                            <label class="col-md-2 col-form-label">First Name:<span class="text-danger">*</span></label>
                            <div class="col-md-2">
                                <input id="Gen_firstName" maxlength="20" onkeydown="return /[a-zA-Z]/i.test(event.key)" class="form-control" type="text">

                            </div>
                            <label class="col-md-1 col-form-label pl-0 pr-0">Initial:</label>
                            <div class="col-md-1 pl-0">
                                <input id="Gen_middleName" maxlength="2" onkeydown="return /[a-zA-Z]/i.test(event.key)" class="form-control" type="text">
                            </div>

                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">1st LastName:<span class="text-danger">*</span></label>
                            <div class="col-md-2">
                                <input id="gen_firstLastName" maxlength="20" onkeydown="return /[a-zA-Z]/i.test(event.key)" class="form-control" type="text">
                            </div>

                            <label class="col-md-2 col-form-label">2nd LastName:<span class="text-danger"></span></label>
                            <div class="col-md-2">
                                <input id="gen_secondLastName" minlength="3" maxlength="20" onkeydown="return /[a-zA-Z]/i.test(event.key)" class="form-control" type="text">
                            </div>
                            <label class="col-md-1 col-form-label pl-0 pr-0">ShortName:<span class="text-danger">*</span></label>
                            <div class="col-md-3 pl-0">
                                <input id="gen_shortFullName" maxlength="50" onkeydown="return /[a-zA-Z]/i.test(event.key)" class="form-control" type="text">
                            </div>

                        </div>
                        <div class="form-group row">

                            <label class="col-md-2 col-form-label">SSN:</label>

                            <div class="col-md-2">
                                <input id="gen_SSN" class="form-control" type="text">
                            </div>
                            <label class="col-md-2 col-form-label">Birth Date:</label>
                            <div class="col-md-2">
                                <input id="gen_birthDate" class="form-control" type="datetime">
                            </div>

                            <label class="col-md-1 col-form-label pl-0 pr-0">BirthPlace:</label>
                            <div class="col-md-3 pl-0">
                                <input type="text" class="form-control" id="gen_birthPlace" />
                            </div>

                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Gender:</label>
                            <div class="col-md-2">
                                @*@Html.DropDownList("GenderId", null, "- Please select -", new { @class = "form-control" })*@
                                @(Html.CustomDropDownList<TimeAide.Web.Models.Gender>("GenderId", null, htmlAttributes: new { @class = "form-control" }))

                            </div>
                            <label class="col-md-2 col-form-label">Marital Status:</label>
                            <div class="col-md-2">
                                @*@Html.DropDownList("MaritalStatusId", null, "- Please select -", new { @class = "form-control" })*@
                                @(Html.CustomDropDownList<TimeAide.Web.Models.MaritalStatus>("MaritalStatusId", null, htmlAttributes: new { @class = "form-control" }))

                            </div>
                            <label class="col-md-1 col-form-label pl-0 pr-0">Ethnicity:</label>

                            <div class="col-md-3 pl-0">
                                @Html.DropDownList("EthnicityId", null, "- Please select -", new { @class = "form-control" })
                                @*@(Html.CustomDropDownList<TimeAide.Web.Models.Ethnicity>("EthnicityId", null, htmlAttributes: new { @class = "form-control" }))*@

                            </div>

                        </div>

                        <div class="form-group row">
                            <label class="col-md-1 col-form-label pr-0">Disability:</label>
                            <div class="col-md-2 pl-0 pr-0">
                                @Html.DropDownList("DisabilityId", null, "- Please select -", new { @class = "form-control" })
                                @*@(Html.CustomDropDownList<TimeAide.Web.Models.Disability>("DisabilityId", null, htmlAttributes: new { @class = "form-control" }))*@

                            </div>
                            <label class="col-md-2 col-form-label">Veteran Status:</label>
                            <div class="col-md-7 pl-0">
                                @Html.ListBox("VeteranStatusId", (IEnumerable<SelectListItem>)ViewBag.VeteranStatusId, new { @class = "form-control" })



                            </div>
                        </div>
