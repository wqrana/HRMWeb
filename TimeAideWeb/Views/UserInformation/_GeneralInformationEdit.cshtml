                <!--Inline form layout -->
                <div class="row">

                    <div class="col-md-12">

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Employee Id:<span class="text-danger">*</span></label>
                            <div class="col-md-2">
                                @if (SessionHelper.IsTimeAideWindowClient)
                                {

                                    <input id="Gen_employeeId" class="form-control" type="text" disabled>
                                }
                                else
