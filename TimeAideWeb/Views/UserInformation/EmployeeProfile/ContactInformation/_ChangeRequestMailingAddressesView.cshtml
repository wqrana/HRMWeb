@model TimeAide.Web.Models.UserInformation
<div id="employee_mailing_addresse_modal" class="modal custom-modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document" style="max-width:1300px">
        <div class="modal-content" style="padding:10px">
            <div class="modal-header alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;padding:10px">
                <h4 class="modal-title">Employee Mailing Addresses</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group row" style="margin-left: 0px !important; margin-right: 0px !important;">
                        <div class="panel panel-default" style="width:50%;">
                            <div class="panel-heading" style="padding-left:10px">Old Mailing Address</div>
                            <div class="panel-body">
                                <div class="form-group row">
                                    <label class="col-md-2 col-form-label" style="margin-left:10px">
                                        Address 1
                                    </label>
                                    <div class="col-lg text-muted mt-2" style="width:100% !important">
                                        @Model.ActiveUserContactInformation.MailingAddress1
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-2 col-form-label" style="margin-left:10px">
                                        Address 2
                                    </label>
                                    <div class="col-lg text-muted mt-2" style="width:100% !important">
                                        @Model.ActiveUserContactInformation.MailingAddress2
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-2 col-form-label" style="margin-left:10px">
                                        Country
                                    </label>
                                    <div class="col-md-3 text-muted mt-2" style="width:100% !important">
                                        @if (Model.ActiveUserContactInformation.MailingCountry != null)
                                        {
                                            @Model.ActiveUserContactInformation.MailingCountry.CountryName
                                        }
                                    </div>
                                    <label class="col-md-2 col-form-label" style="margin-left:10px">
                                        State
                                    </label>
                                    <div class="col-md-3 text-muted mt-2" style="width:100% !important">
                                        @if (Model.ActiveUserContactInformation.MailingState != null)
                                        {
                                            @Model.ActiveUserContactInformation.MailingState.StateName
                                        }
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-2 col-form-label" style="margin-left:10px">
                                        City
                                    </label>
                                    <div class="col-md-3 text-muted mt-2" style="width:100% !important">
                                        @if (Model.ActiveUserContactInformation.MailingCity != null)
                                        {
                                            @Model.ActiveUserContactInformation.MailingCity.CityName
                                        }
                                    </div>
                                    <label class="col-md-2 col-form-label" style="margin-left:10px">
                                        Zip Code
                                    </label>
                                    <div class="col-md-3 text-muted mt-2" style="width:100% !important">
                                        @Model.ActiveUserContactInformation.MailingZipCodeFormatted
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default" style="width:49%;margin-left:10px">
                            <div class="panel-heading" style="padding-left:10px">New Mailing Address</div>
                            <div class="panel-body">
                                <div class="form-group row">
                                    <label class="col-md-2 col-form-label" style="margin-left:10px">
                                        Address 1
                                    </label>
                                    <div class="col-lg text-muted mt-2" style="width:100% !important">
                                        @Html.EditorFor(model => model.ActiveUserContactInformation.MailingAddress1, new { htmlAttributes = new { @class = "form-control", style = "width: 100% !important;" } })
                                        @Html.ValidationMessageFor(model => model.ActiveUserContactInformation.MailingAddress1, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-2 col-form-label" style="margin-left:10px">
                                        Address 2
                                    </label>
                                    <div class="col-lg text-muted mt-2" style="width:100% !important">
                                        @Html.EditorFor(model => model.ActiveUserContactInformation.MailingAddress2, new { htmlAttributes = new { @class = "form-control", style = "width: 100% !important;" } })
                                        @Html.ValidationMessageFor(model => model.ActiveUserContactInformation.MailingAddress2, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-2 col-form-label" style="margin-left:10px">
                                        Country
                                    </label>
                                    <div class="col-md-3 text-muted mt-2" style="width:100% !important">
                                        @(Html.CustomDropDownList<TimeAide.Web.Models.Country>("ddlCountryId_Mailing", null, Model.ActiveUserContactInformation.MailingCountryId, htmlAttributes: new { @class = "form-control" }))
                                        @Html.ValidationMessageFor(model => model.ActiveUserContactInformation.MailingCountryId, "", new { @class = "text-danger" })
                                    </div>
                                    <label class="col-md-2 col-form-label" style="margin-left:10px">
                                        State
                                    </label>
                                    <div class="col-md-3 text-muted mt-2" style="width:100% !important">
                                        @(Html.CustomDropDownList<TimeAide.Web.Models.State>("ddlStateId_Mailing", null, Model.ActiveUserContactInformation.MailingStateId, Model.ActiveUserContactInformation.MailingCountryId, htmlAttributes: new { @class = "form-control" }))
                                        @Html.ValidationMessageFor(model => model.ActiveUserContactInformation.MailingStateId, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="col-md-2 col-form-label" style="margin-left:10px">
                                        City
                                    </label>
                                    <div class="col-md-3 text-muted mt-2" style="width:100% !important">
                                        @(Html.CustomDropDownList<TimeAide.Web.Models.City>("ddlCityId_Mailing", null, Model.ActiveUserContactInformation.MailingCityId, Model.ActiveUserContactInformation.MailingStateId, htmlAttributes: new { @class = "form-control searchableDDL" }))
                                        @Html.ValidationMessageFor(model => model.ActiveUserContactInformation.MailingCityId, "", new { @class = "text-danger" })
                                    </div>
                                    <label class="col-md-2 col-form-label" style="margin-left:10px">
                                        Zip Code
                                    </label>
                                    <div class="col-md-3 text-muted mt-2" style="width:100% !important">
                                        @Html.EditorFor(model => model.ActiveUserContactInformation.MailingZipCode, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ActiveUserContactInformation.MailingZipCode, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        @if (ViewBag.CanAddressWorkflowIntiated.Count > 0)
                        {
                            <div style="color:red">
                                Change request can not be submitted due to following reasons:
                            </div>
                            foreach (var each in ViewBag.CanAddressWorkflowIntiated)
                            {
                                <div style="color:red">
                                    @each
                                </div>
                            }
                        }
                    </div>
                    <div class="submit-section">
                        @if (ViewBag.CanAddressWorkflowIntiated.Count == 0)
                        {
                            <button type="button" id="btnAddUserContactInformation" onclick="btnSaveMailingAddressess('Mailing')" class="btnAddUserContactInformation btn btn-primary submit-btn">Submit</button>
                        }
                        <button type="button" class="btn btn-primary submit-btn" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/UserInformation/userContactAddresses-js.js?version=1.0"></script>
<script>
    $(document).ready(function () {
        $('#ddlCityId_Mailing').select2();
        $('#ActiveUserContactInformation_MailingZipCode').mask('99999-9999', { autoclear: false }).on('blur', function () {
            ValidateZipCodeChangeRequest('ActiveUserContactInformation_MailingZipCode', 'ActiveUserContactInformation_MailingZipCode');
        });
        $('#ddlCountryId_Mailing').change(function (e) {
            debugger;
            var countyId = $(this).val();
            LoadStateDropdown(countyId, '#ddlStateId_Mailing', null);
            LoadCityDropdown(null, '#ddlCityId_Mailing', null);
        });
        $('#ddlStateId_Mailing').change(function (e) {
            debugger;
            var stateId = $(this).val();
            LoadCityDropdown(stateId, '#ddlCityId_Mailing', null);

        });
    });
</script>