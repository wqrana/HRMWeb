<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
<style>

    ul.ui-front {
        z-index: 1100;
    }
</style>
<div style="max-height:550px; overflow-y:auto">
    <div class="row">
        <div class="col-md-12">
            <hr class="m-0">
            <h6 class="card-title">Education 1</h6>
            <div class="form-group row">
                <label class="col-md-1 col-form-label">Degree: <span class="text-danger"></span></label>
