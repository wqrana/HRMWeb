<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<script>
    $(document).ready(function () {
        var autoCompleteSrc = "/JobPortal/AjaxGetAutoCompleteData";
        $('input[id*=Date]').each(function () {
            $(this).datetimepicker({ format: 'MM/DD/YYYY' });

        });
        
        $(".edu-ins-auto").autocomplete({
            source: function (request, response) {
                var field = "InstitutionName";
                autoCompleteAjaxSetting(request, response, autoCompleteSrc, field)
            },
            minLength: 3

        });
        $(".edu-title-auto").autocomplete({
            source: function (request, response) {
                var field = "Title";
                autoCompleteAjaxSetting(request, response, autoCompleteSrc, field)
            },
            minLength: 3

        });
    });
    
</script>
