                    @Html.TextBox("Education1DateCompleted", "", new { @class = "form-control text-box single-line" })
                    <small id="Education1DateCompletedValid" class="form-text text-danger">Missing field value.</small>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-1 col-form-label">Institution: <span class="text-danger"></span></label>
                <div class="col-md-4">
                    @Html.TextBox("Education1InstitutionName", "", new { @class = "form-control text-box single-line edu-ins-auto" })
                    <small id="Education1InstitutionNameValid" class="form-text text-danger">Missing field value.</small>
                </div>
                <label class="col-md-1 col-form-label">Title: <span class="text-danger"></span></label>
                <div class="col-md-4">
                    @Html.TextBox("Education1Title", "", new { @class = "form-control text-box single-line edu-title-auto" })
                    <small id="Education1TitleValid" class="form-text text-danger">Missing field value.</small>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-1 col-form-label">Notes: </label>
