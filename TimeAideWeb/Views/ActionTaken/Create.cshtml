@model TimeAide.Web.Models.ActionTaken

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="padding:10px">
        @Html.Partial("_CreatePageTitleView")

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.ActionTakenName, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.ActionTakenName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ActionTakenName, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.ActionTakenDescription, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.ActionTakenDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ActionTakenDescription, "", new { @class = "text-danger" })

            </div>
        </div>

        @Html.Partial("_CreatePageFooterView")
    </div>
}
