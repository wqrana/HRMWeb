@model TimeAide.Web.Models.EmploymentHistory
<div style="padding:10px;padding-bottom:0px">
    @Html.Partial("_DeleteViewHeader")
    @Html.HiddenFor(model => model.Id, new { id = "EmploymentHistoryId" })
    @Html.HiddenFor(model => model.UserInformationId)
    <div style="font-size: 90%;">
        <div class="form-group row">
            <div class="panel panel-default" style="width:95%;margin-left:10px">
                <div class="panel-heading" style="padding-left:10px">Genral</div>
                <div class="panel-body">
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label" style="margin-left:10px">
                            Start Date:
                        </label>
                        <div class="col-md-6 text-muted mt-2">
                            <span id="lblOriginalHire"> @Html.DisplayFor(model => model.StartDate)</span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label" style="margin-left:10px">
                            Company:
                        </label>
                        <div class="col-md-6 text-muted mt-2">
                            <span id="lblEffectiveHire">@Html.DisplayFor(model => model.Company.CompanyName)</span>
                        </div>

                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label" style="margin-left:10px">
                            Location:
                        </label>
                        <div class="col-md-6 text-muted mt-2">
                            <span id="lblProbationStart"> @Html.DisplayFor(model => model.Location.LocationName)</span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label" style="margin-left:10px">
                            Department:
                        </label>
                        <div class="col-md-6 text-muted mt-2">
                            <span id="lblProbationEnd">@Html.DisplayFor(model => model.Department.DepartmentName)</span>
                        </div>

                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label" style="margin-left:10px">
                            SubDepartment:
                        </label>
                        <div class="col-md-6 text-muted mt-2">
                            <span id="lblEmploymentStatus">  @Html.DisplayFor(model => model.SubDepartment.SubDepartmentName)</span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label" style="margin-left:10px">
                            Supervisor:
                        </label>
                        <div class="col-lg text-muted mt-2" style="width:100% !important">
                            <span id="lblTermination">  @Html.DisplayFor(model => model.SupervisorId)</span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label" style="margin-left:10px">
                            Employee Type
                        </label>
                        <div class="col-lg text-muted mt-2">
                            <span id="lblTerminationType">  @Html.DisplayFor(model => model.EmployeeType.EmployeeTypeName)</span>
                        </div>
                    </div>
                </div>
            </div>
            @*<div class="panel panel-default" style="width:49%;margin-left:10px">
                <div class="panel-heading" style="padding-left:10px">Termination</div>
                <div class="panel-body">

                    <div class="form-group row">
